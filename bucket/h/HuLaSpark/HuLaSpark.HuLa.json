{
    "version": "3.0.8",
    "description": "一款基于 Tauri、Vite、Vue 和 TypeScript 构建的即时通讯系统 | An instant messaging system developed with Tauri, Vite, Vue, and TypeScript.",
    "homepage": "https://hulaspark.com/",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/HuLaSpark/HuLa/releases/download/v3.0.8/HuLa_3.0.8_x64-setup.exe",
            "hash": "3d8c08722842b15467dcf879a70df17ac5953e20ae99ccfae1c7681a38770494"
        }
    },
    "shortcuts": [
        [
            "app\\hula.exe",
            "Hula"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.hula.pc\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\com.hula.pc\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/HuLaSpark/HuLa/releases/download/v$version/HuLa_$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
