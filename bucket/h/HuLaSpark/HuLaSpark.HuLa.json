{
    "version": "3.0.6",
    "description": "一款基于 Tauri、Vite、Vue 和 TypeScript 构建的即时通讯系统 | An instant messaging system developed with Tauri, Vite, Vue, and TypeScript.",
    "homepage": "https://hulaspark.com/",
    "license": {
        "identifier": "Apache-2.0",
        "url": "https://github.com/HuLaSpark/HuLa/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/HuLaSpark/HuLa/releases/download/v3.0.6/HuLa_3.0.6_x64-setup.exe",
            "hash": "2e93bf56351f3930026728f1f14879ad80cbb481e6ee16961be6478addd9f2cc"
        }
    },
    "shortcuts": [
        [
            "app\\hula.exe",
            "Hula"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:AppData\\com.hula.pc\")",
        "A-Install-Exe -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData @(\"$env:LocalAppData\\com.hula.pc\")"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/HuLaSpark/HuLa",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/HuLaSpark/HuLa/releases/download/v$version/HuLa_$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
