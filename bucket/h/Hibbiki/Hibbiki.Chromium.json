{
    "version": "144.0.7559.60-r1552494",
    "description": "适用于 Windows 64 位的稳定版 Chromium 构建版本 | Stable Chromium build for Windows 64-bit, nothing fancy.",
    "homepage": "https://github.com/Hibbiki/chromium-win64",
    "license": {
        "identifier": "BSD-3-Clause"
    },
    "notes": [
        "The installation directory: $env:LocalAppData\\Chromium",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:LocalAppData\\Chromium",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Hibbiki/chromium-win64/releases/download/v144.0.7559.60-r1552494/mini_installer.exe",
            "hash": "f969066d3aa0d6cf8b0e104200f9ae73b86f3d146b3bd17fcd14833c1bd3ef59"
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Deny-IfAppConflict 'Hibbiki.Chromium', 'eloston.ungoogled-chromium'",
        "A-New-LinkDirectory \"$env:LocalAppData\\Chromium\\User Data\"",
        "A-Install-App -Uninstaller \"$env:LocalAppData\\Chromium\\Application\\chrome.exe\" -ArgumentList '--silent','--install'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Uninstall-Manually \"$env:LocalAppData\\Chromium\\Application\"",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Hibbiki/chromium-win64/releases/download/v$version/mini_installer.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
