{
    "version": "1.3.1",
    "description": "为程序员和运维人员量身打造的一站式开发运维利器 | A one-stop development and operation tool tailored for programmers and operations personnel",
    "homepage": "https://www.hexhub.cn/",
    "license": {
        "identifier": "Freemium"
    },
    "architecture": {
        "64bit": {
            "url": "https://oss.hexhub.cn/plugin/HexHub-amd64-default-1.3.1.exe",
            "hash": "422701252344e0d43e71d7840fb87b70b62a7764526daf9d760d15d9fa25b771"
        }
    },
    "shortcuts": [
        [
            "app\\HexHub.exe",
            "HexHub"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:AppData\\HexHub\"",
        "A-Install-App -Uninstaller 'app\\Uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$json = (Invoke-WebRequest -Uri 'https://api.hexhub.cn/client/plugin/master-latest-version-list' -Headers @{ Referer = 'https://www.hexhub.cn/' }).Content | ConvertFrom-Json",
            "$json.data.'windows-amd64-default'.versionName"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://oss.hexhub.cn/plugin/HexHub-amd64-default-$version.exe"
            }
        }
    }
}
