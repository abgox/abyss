{
    "version": "6.2.0",
    "description": "一个文件哈希值计算工具，批量计算/批量校验/查找重复文件/改变哈希值等 | A file hash calculator, which can calculate/verify/find duplicate files/change hash values in batch.",
    "homepage": "https://github.com/hrpzcf/HashCalculator",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/hrpzcf/HashCalculator/releases/download/6.2.0/HashCalculator-6.2.0.zip",
            "hash": "ccd4ad71e8c3fe096bd8419efcec8fa515fca5b23d46daa0ed052c2e1583fb0c"
        }
    },
    "extract_to": "app",
    "bin": "app\\HashCalculator.exe",
    "shortcuts": [
        [
            "app\\HashCalculator.exe",
            "HashCalculator"
        ]
    ],
    "persist": [
        [
            "app\\settings.json",
            "settings.json"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-File \"$persist_dir\\settings.json\" -Content '{}'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/hrpzcf/HashCalculator/releases/download/$version/HashCalculator-$version.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
