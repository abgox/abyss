{
    "version": "0.3.0",
    "description": "一种现代脚本语言，可编译为 Bash，PowerShell 和 VBScript 等 | A modern scripting language that compiles to Bash, PowerShell, and VBScript...",
    "homepage": "https://github.com/hulo-lang/hulo",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/hulo-lang/hulo/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/hulo-lang/hulo/releases/download/v0.3.0/hulo_Windows_x86_64.zip",
            "hash": "973262d7321a956b97f8529ef754e69b98ed8db58971335b9d01fcf296c05008"
        },
        "arm64": {
            "url": "https://github.com/hulo-lang/hulo/releases/download/v0.3.0/hulo_Windows_arm64.zip",
            "hash": "56bd36969fb0c64f367c9537fa3fa6e277f80e1ef526ae57ebfa3cedeac23236"
        }
    },
    "extract_to": "app",
    "env_set": {
        "HULO_PATH": "$dir\\app"
    },
    "env_add_path": "app\\bin",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/hulo-lang/hulo/releases/download/v$version/hulo_Windows_x86_64.zip"
            },
            "arm64": {
                "url": "https://github.com/hulo-lang/hulo/releases/download/v$version/hulo_Windows_arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
