            "hash": "9839e5f2ca62a72d1b43b8e3fc8d5a7a9a2b1271f8fe75e7c2d8257e2d834668"
        },
        "arm64": {
            "url": "https://github.com/gohugoio/hugo/releases/download/v0.154.5/hugo_0.154.5_windows-arm64.zip",
