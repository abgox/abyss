            "hash": "3aaf98a9f504047fb7f2d5c01c649012a9763e02c60dcc30f56342b8bfa0caac"
        },
        "arm64": {
            "url": "https://github.com/gohugoio/hugo/releases/download/v0.157.0/hugo_0.157.0_windows-arm64.zip",
            "hash": "7f9a0a5736934f552f59c764827072e5a25808d67c60a6c9e9817598dee1aa8f"
        }
    },
    "extract_to": "app",
    "bin": "app\\hugo.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-TempData \"$env:LocalAppData\\hugo_cache\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/gohugoio/hugo/releases/download/v$version/hugo_$version_windows-amd64.zip"
            },
            "arm64": {
                "url": "https://github.com/gohugoio/hugo/releases/download/v$version/hugo_$version_windows-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
