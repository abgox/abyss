{
    "version": "0.36.0",
    "description": "Jujutsu，又叫 jj，是一款既简单又强大的与 Git 兼容的版本控制系统 | Jujutsu, also called jj, is a Git-compatible VCS that is both simple and powerful.",
    "homepage": "https://jj-vcs.dev/",
    "license": {
        "identifier": "Apache-2.0",
        "url": "https://github.com/jj-vcs/jj/blob/main/LICENSE"
    },
    "suggest": {
        "completions": "abyss/abgox.PSCompletions",
        "TUI": "abyss/IbrahimDursun.jjui"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/jj-vcs/jj/releases/download/v0.36.0/jj-v0.36.0-x86_64-pc-windows-msvc.zip",
            "hash": "f173e51b54617b91de2a61f6e83a43220a91ec5025fa5d002a07668780074f61"
        },
        "arm64": {
            "url": "https://github.com/jj-vcs/jj/releases/download/v0.36.0/jj-v0.36.0-aarch64-pc-windows-msvc.zip",
            "hash": "9c7c860a80610a26079a4c2f21ab20269ed94ebd543efee252bc5c87c251733c"
        }
    },
    "extract_to": "app",
    "bin": "app\\jj.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\jj\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/jj-vcs/jj/releases/download/v$version/jj-v$version-x86_64-pc-windows-msvc.zip"
            },
            "arm64": {
                "url": "https://github.com/jj-vcs/jj/releases/download/v$version/jj-v$version-aarch64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
