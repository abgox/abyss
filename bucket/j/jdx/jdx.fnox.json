            "hash": "fe3a964d67f4f531afc44e8f0cf72886739c6a79d2113db50a3482ca1d09f0e2"
        },
        "arm64": {
            "url": "https://github.com/jdx/fnox/releases/download/v1.7.0/fnox-aarch64-pc-windows-msvc.zip",
