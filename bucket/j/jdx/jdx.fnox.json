            "hash": "1b9a63f8544b9d84b6941ae109351c2697570da0ced364c0cf68be5bf985f003"
        },
        "arm64": {
            "url": "https://github.com/jdx/fnox/releases/download/v1.13.0/fnox-aarch64-pc-windows-msvc.zip",
