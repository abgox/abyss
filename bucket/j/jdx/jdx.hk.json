{
    "version": "1.31.0",
    "description": "一个 Git 钩子管理器和项目代码检查工具。 | A git hook manager and project linting tool.",
    "homepage": "https://hk.jdx.dev/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/jdx/hk/releases/download/v1.31.0/hk-x86_64-pc-windows-msvc.zip",
            "hash": "e94a33c4b76db41fd7d8a920a6c3acc7ee5db05a529b05d1e372533f565f7d06"
        },
        "arm64": {
            "url": "https://github.com/jdx/hk/releases/download/v1.31.0/hk-aarch64-pc-windows-msvc.zip",
            "hash": "d972eda6eb88a6cf1f80fd5b3c1e856c1d675655da522fc7415edc3b4dbd094e"
        }
    },
    "extract_to": "app",
    "bin": "app\\hk.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-File \"$persist_dir\\.hkrc.pkl\" -Content ''",
        "A-New-LinkFile \"$home\\.hkrc.pkl\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/jdx/hk/releases/download/v$version/hk-x86_64-pc-windows-msvc.zip"
            },
            "arm64": {
                "url": "https://github.com/jdx/hk/releases/download/v$version/hk-aarch64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
