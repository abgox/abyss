{
    "version": "2026.2.0",
    "description": "多语言工具版本管理器、环境变量管理器和任务运行器 | Polyglot tool version manager, env vars manager and task runner",
    "homepage": "https://mise.jdx.dev/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/jdx/mise/releases/download/v2026.2.0/mise-v2026.2.0-windows-x64.zip",
            "hash": "c7472466f805751a029bc31926a8e60f503f4dea3888402b40fdf03c925b78ee"
        },
        "arm64": {
            "url": "https://github.com/jdx/mise/releases/download/v2026.2.0/mise-v2026.2.0-windows-arm64.zip",
            "hash": "e1e8107c3b9dbed293e49c352a420909e577ed8caedb8e35bf64afd4a3f97d03"
        }
    },
    "extract_dir": "mise",
    "extract_to": "app",
    "bin": "app\\bin\\mise.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Add-Path \"$env:LocalAppData\\mise\\shims\"",
        "A-New-LinkDirectory \"$home\\.config\\mise\", \"$env:LocalAppData\\mise\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$home\\.local\\state\\mise\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/jdx/mise/releases/download/v$version/mise-v$version-windows-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/jdx/mise/releases/download/v$version/mise-v$version-windows-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
