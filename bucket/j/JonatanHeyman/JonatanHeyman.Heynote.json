{
    "version": "2.8.2",
    "description": "为开发人员提供的专用便签本 | A dedicated scratchpad for developers",
    "homepage": "https://heynote.com/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/heyman/heynote/releases/download/v2.8.2/Heynote_2.8.2.exe",
            "hash": "be58acadf31999c64967f6dc9c0774b947d0b23c682e21f2fb47a196b11a4c1a"
        }
    },
    "shortcuts": [
        [
            "app\\Heynote.exe",
            "Heynote"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Heynote\"",
        "A-Install-App -Uninstaller 'app\\Uninstall Heynote.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\heynote-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/heyman/heynote/releases/download/v$version/Heynote_$version.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
