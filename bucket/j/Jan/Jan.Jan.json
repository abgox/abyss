{
    "version": "0.7.7",
    "description": "ChatGPT 的开源替代品，可在计算机上百分百脱机运行 | An open source alternative to ChatGPT that runs 100% offline on your computer",
    "homepage": "https://jan.ai/",
    "license": {
        "identifier": "AGPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/menloresearch/jan/releases/download/v0.7.7/Jan_0.7.7_x64-setup.exe",
            "hash": "97d6dfa1d0196456b8b5b52df62fbebd1f5701a2766a776524ee140e8d3452c5"
        }
    },
    "bin": "app\\jan.exe",
    "shortcuts": [
        [
            "app\\jan.exe",
            "Jan"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\jan\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\jan-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/menloresearch/jan/releases/download/v$version/Jan_$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
