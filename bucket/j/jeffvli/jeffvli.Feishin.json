{
    "version": "1.1.0",
    "description": "一款现代化的自托管音乐播放器 | A modern self-hosted music player.",
    "homepage": "https://github.com/jeffvli/feishin",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://github.com/jeffvli/feishin/blob/development/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/jeffvli/feishin/releases/download/v1.1.0/Feishin-1.1.0-win-x64.zip",
            "hash": "b35c06b90d2978abf5a5419065c2c0d7b35da77789315a55bb22a570e58e93d3"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\Feishin.exe",
            "Feishin"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\feishin\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/jeffvli/feishin/releases/download/v$version/Feishin-$version-win-x64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
