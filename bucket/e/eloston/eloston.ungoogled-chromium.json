{
    "version": "143.0.7499.169-1.1",
    "description": "不依赖谷歌网络服务的 Google Chromium 浏览器。 | Google Chromium without dependency on Google web services.",
    "homepage": "https://github.com/ungoogled-software/ungoogled-chromium-windows",
    "license": {
        "identifier": "BSD-3-Clause"
    },
    "notes": [
        "The installation directory: $env:LocalAppData\\Chromium",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes-cn": [
        "安装目录: $env:LocalAppData\\Chromium",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/ungoogled-software/ungoogled-chromium-windows/releases/download/143.0.7499.169-1.1/ungoogled-chromium_143.0.7499.169-1.1_installer_x64.exe",
            "hash": "afda13cacb3ab12ebd13bbdcbf45d78539407b3c87ac5f8a6c5bf357089c3c4c"
        },
        "arm64": {
            "url": "https://github.com/ungoogled-software/ungoogled-chromium-windows/releases/download/143.0.7499.169-1.1/ungoogled-chromium_143.0.7499.169-1.1_installer_arm64.exe",
            "hash": "21fab4141b29b7d31579836a74099171aafc498988900b19342f913bb4a8154d"
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Deny-IfAppConflict 'Hibbiki.Chromium', 'eloston.ungoogled-chromium'",
        "A-New-LinkDirectory \"$env:LocalAppData\\Chromium\\User Data\"",
        "A-Install-Exe -Uninstaller \"$env:LocalAppData\\Chromium\\Application\\chrome.exe\" -ArgumentList '--silent','--install'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Uninstall-ExeManually \"$env:LocalAppData\\Chromium\\Application\"",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/ungoogled-software/ungoogled-chromium-windows/releases/download/$version/ungoogled-chromium_$version_installer_x64.exe"
            },
            "arm64": {
                "url": "https://github.com/ungoogled-software/ungoogled-chromium-windows/releases/download/$version/ungoogled-chromium_$version_installer_arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
