{
    "version": "143.0.7499.192-1.1",
    "description": "不依赖谷歌网络服务的 Google Chromium 浏览器。 | Google Chromium without dependency on Google web services.",
    "homepage": "https://github.com/ungoogled-software/ungoogled-chromium-windows",
    "license": {
        "identifier": "BSD-3-Clause"
    },
    "notes": [
        "The installation directory: $env:LocalAppData\\Chromium",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes-cn": [
        "安装目录: $env:LocalAppData\\Chromium",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/ungoogled-software/ungoogled-chromium-windows/releases/download/143.0.7499.192-1.1/ungoogled-chromium_143.0.7499.192-1.1_installer_x64.exe",
            "hash": "691a4036cd780e252675e4d48d7b7df47fc5368f779dabeb6ef5ce62862d3ad2"
        },
        "arm64": {
            "url": "https://github.com/ungoogled-software/ungoogled-chromium-windows/releases/download/143.0.7499.192-1.1/ungoogled-chromium_143.0.7499.192-1.1_installer_arm64.exe",
            "hash": "b87dcf9f6a5c99f0814a41ad11aca832fe94622a43c2796708f74700eb170ca8"
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Deny-IfAppConflict 'Hibbiki.Chromium', 'eloston.ungoogled-chromium'",
        "A-New-LinkDirectory \"$env:LocalAppData\\Chromium\\User Data\"",
        "A-Install-App -Uninstaller \"$env:LocalAppData\\Chromium\\Application\\chrome.exe\" -ArgumentList '--silent','--install'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Uninstall-Manually \"$env:LocalAppData\\Chromium\\Application\"",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/ungoogled-software/ungoogled-chromium-windows/releases/download/$version/ungoogled-chromium_$version_installer_x64.exe"
            },
            "arm64": {
                "url": "https://github.com/ungoogled-software/ungoogled-chromium-windows/releases/download/$version/ungoogled-chromium_$version_installer_arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
