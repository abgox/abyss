{
    "version": "4.5",
    "description": "使用加密连接访问您所在机构的网络或互联网。 | Access your institute's network or the Internet using an encrypted connection.",
    "homepage": "https://www.eduvpn.org/",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://codeberg.org/eduVPN/windows/src/branch/master/LICENSE"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\eduVPN",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes-cn": [
        "安装目录: $env:ProgramFiles\\eduVPN",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://codeberg.org/eduVPN/windows/releases/download/4.5/eduVPNClient_4.5_x64.msi#/dl.msi_",
            "hash": "c7949a6d44f10db778235cf42fb0990c43eac995f803ad9bb8f2a9efeaf12cdd"
        },
        "arm64": {
            "url": "https://codeberg.org/eduVPN/windows/releases/download/4.5/eduVPNClient_4.5_ARM64.msi#/dl.msi_",
            "hash": "5a5105513d53e7d81ee1927b241ae73d8469acdbfe7ac6adf07e92e334010345"
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Install-App msi"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process \"$env:ProgramFiles\\eduVPN\"",
        "$ProductCode = A-Get-ProductCode '^eduVPN Client'",
        "A-Uninstall-App $ProductCode",
        "A-Remove-TempData \"$env:ProgramFiles\\eduVPN\",\"$env:LocalAppData\\eduVPN\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'eduVPN.Client' 'msi'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_machine.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_machine.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_machine.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64#/dl.msi_",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64#/dl.msi_",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
