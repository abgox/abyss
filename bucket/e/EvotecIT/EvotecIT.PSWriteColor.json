{
    "version": "1.0.3",
    "description": "一个 PowerShell 模块，用于创建外观精美的脚本，并带有彩色输出。 | A PowerShell Module to create nice looking scripts, with colorized output.",
    "homepage": "https://github.com/EvotecIT/PSWriteColor",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://cdn.powershellgallery.com/packages/pswritecolor.1.0.3.nupkg",
            "hash": "8fddfd1bad17ecde43804caf2ec5a3cc38226d41293c7479c1ed6fc0f41325ea"
        },
        "arm64": {
            "url": "https://cdn.powershellgallery.com/packages/pswritecolor.1.0.3.nupkg",
            "hash": "8fddfd1bad17ecde43804caf2ec5a3cc38226d41293c7479c1ed6fc0f41325ea"
        }
    },
    "psmodule": {
        "name": "PSWriteColor"
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://www.powershellgallery.com/packages/pswritecolor",
        "regex": "<h2>([\\d.]+)</h2>"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.powershellgallery.com/packages/pswritecolor.$version.nupkg"
            },
            "arm64": {
                "url": "https://cdn.powershellgallery.com/packages/pswritecolor.$version.nupkg"
            }
        }
    }
}
