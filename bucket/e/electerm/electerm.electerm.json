{
    "version": "2.3.181",
    "description": "开源终端/ssh/telnet/serialport/RDP/VNC/sftp/ftp客户端 | Open-sourced terminal/ssh/telnet/serialport/RDP/VNC/sftp/ftp client.",
    "homepage": "https://github.com/electerm/electerm",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/electerm/electerm/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/electerm/electerm/releases/download/v2.3.181/electerm-2.3.181-win-x64-installer.exe",
            "hash": "182fdedd8f163076f2204cb7822fcb4b9edcd095e70ef66bde38f8fba6e5bd27"
        }
    },
    "bin": "app\\electerm.exe",
    "shortcuts": [
        [
            "app\\electerm.exe",
            "electerm"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\electerm\"",
        "A-Install-Exe -Uninstaller 'app\\Uninstall electerm.exe' -ArgumentList '/CurrentUser','/S',\"/D=$dir\\app\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData \"$env:LocalAppData\\electerm-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/electerm/electerm/releases/download/v$version/electerm-$version-win-x64-installer.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
