{
    "version": "2.4.16",
    "description": "开源终端/ssh/telnet/serialport/RDP/VNC/sftp/ftp客户端 | Open-sourced terminal/ssh/telnet/serialport/RDP/VNC/sftp/ftp client.",
    "homepage": "https://github.com/electerm/electerm",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/electerm/electerm/releases/download/v2.4.16/electerm-2.4.16-win-x64-installer.exe",
            "hash": "1039a0abdce4992dbcabf43811f72b8052971bcd3f928f02c9f71ea2983ad5b3"
        }
    },
    "bin": "app\\electerm.exe",
    "shortcuts": [
        [
            "app\\electerm.exe",
            "electerm"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\electerm\"",
        "A-Install-App -Uninstaller 'app\\Uninstall electerm.exe' -ArgumentList '/CurrentUser','/S',\"/D=$dir\\app\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\electerm-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/electerm/electerm/releases/download/v$version/electerm-$version-win-x64-installer.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
