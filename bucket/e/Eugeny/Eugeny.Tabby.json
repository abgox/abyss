{
    "version": "1.0.230",
    "description": "一个现代终端 | A terminal for a more modern age",
    "homepage": "https://tabby.sh/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Eugeny/tabby/releases/download/v1.0.230/tabby-1.0.230-portable-x64.zip",
            "hash": "092f62f413ba428e9b986ff83729a9e393c2b1b61543552e125f7daeb09d7701"
        },
        "arm64": {
            "url": "https://github.com/Eugeny/tabby/releases/download/v1.0.230/tabby-1.0.230-portable-arm64.zip",
            "hash": "9656ad593ad60ae0e4de17b8e756886ac1c9552936083b8934f536df8f98399c"
        }
    },
    "extract_to": "app",
    "bin": "app\\Tabby.exe",
    "shortcuts": [
        [
            "app\\Tabby.exe",
            "Tabby"
        ]
    ],
    "persist": [
        [
            "app\\data",
            "AppData\\Roaming\\tabby"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Eugeny/tabby/releases/download/v$version/tabby-$version-portable-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/Eugeny/tabby/releases/download/v$version/tabby-$version-portable-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
