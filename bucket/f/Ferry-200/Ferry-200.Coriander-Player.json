{
    "version": "1.5.1",
    "description": "一个 Windows 上的本地音乐播放器 | A local music player for Windows.",
    "homepage": "https://github.com/Ferry-200/coriander_player",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Ferry-200/coriander_player/releases/download/v1.5.1/Coriander.Player.1.5.1.zip",
            "hash": "d7f0430e5deec3461fba465b20ecf91ff85a92bd782a8f280fc09cc1f0418ed2"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\coriander_player.exe",
            "Coriander Player"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$home\\Documents\\coriander_player\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Ferry-200/coriander_player/releases/download/v$version/Coriander.Player.$version.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
