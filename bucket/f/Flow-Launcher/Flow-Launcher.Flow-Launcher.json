{
    "version": "2.1.0",
    "description": "适用于 Windows 的快速文件搜索和应用程序启动器 | Quick file searcher and app launcher with community-made plugins",
    "homepage": "https://www.flowlauncher.com/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Flow-Launcher/Flow.Launcher/releases/download/v2.1.0/Flow-Launcher-Portable.zip",
            "hash": "a3c3a6dc48ab684a053a78d1c16f6cf836249c42881d33d30ea324a04874318d"
        }
    },
    "extract_dir": "FlowLauncher\\app-2.1.0",
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\Flow.Launcher.exe",
            "Flow Launcher"
        ]
    ],
    "persist": [
        [
            "app\\UserData",
            "AppData\\Roaming\\FlowLauncher"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Flow-Launcher/Flow.Launcher/releases/download/v$version/Flow-Launcher-Portable.zip"
            }
        },
        "hash": {
            "mode": "github"
        },
        "extract_dir": "FlowLauncher\\app-$version"
    }
}
