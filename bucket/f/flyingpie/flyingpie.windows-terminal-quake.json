{
    "version": "2.0.19",
    "description": "将任何应用程序转变为类似 Quake 风格的可切换应用程序 | Turn any app into a Quake-style toggleable app",
    "homepage": "https://github.com/flyingpie/windows-terminal-quake",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/flyingpie/windows-terminal-quake/releases/download/v2.0.19/win-x64_self-contained.zip",
            "hash": "1c5539f0e83839c4f978e1248cc6063eec5547472e6dc48777ebbf91f8aa0f25"
        }
    },
    "extract_to": "app",
    "bin": "app\\wtq.exe",
    "shortcuts": [
        [
            "app\\wtq.exe",
            "WTQ - Windows Terminal Quake"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\wtq\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:AppData\\Microsoft\\Windows\\Start Menu\\Programs\\WTQ - Main Window.lnk\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/flyingpie/windows-terminal-quake/releases/download/v$version/win-x64_self-contained.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
