{
    "version": "1.17.1",
    "description": "一个漂亮，快速，完全开源的邮件客户端 | A beautiful, fast and fully open source mail client.",
    "homepage": "https://github.com/Foundry376/Mailspring",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "notes": [
        "The installation directory: $env:LocalAppData\\Mailspring",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:LocalAppData\\Mailspring",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Foundry376/Mailspring/releases/download/1.17.1/MailspringSetup.exe",
            "hash": "78133a0a1d6d7d30eb757c3a01b03b7888f6fa2f8e40ba0ee5f194ca320c1a98"
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Mailspring\"",
        "A-Install-App -Uninstaller \"$env:LocalAppData\\Mailspring\\Update.exe\" -ArgumentList '--silent'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Uninstall-App -ArgumentList '--uninstall'",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:LocalAppData\\Mailspring\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Foundry376/Mailspring/releases/download/$version/MailspringSetup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
