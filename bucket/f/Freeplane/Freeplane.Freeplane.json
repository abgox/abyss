{
    "version": "1.12.15",
    "description": "一款免费/自由开源软件，支持思维整理、信息共享以及工作学习与家庭事务的高效管理 | A free and open source software application that supports thinking, sharing information, getting things done at work, in school and at home.",
    "homepage": "https://freeplane.org/",
    "license": {
        "identifier": "GPL-2.0",
        "url": "https://github.com/freeplane/freeplane/blob/1.12.x/license.txt"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/freeplane/freeplane/releases/download/release-1.12.15/Freeplane-Setup-1.12.15.exe",
            "hash": "09a425340db9d283edc5131cc0b33502f0fe364285fd448a21458e7a5534db0a"
        }
    },
    "extract_to": "app",
    "innosetup": true,
    "shortcuts": [
        [
            "app\\freeplane.exe",
            "Freeplane"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Freeplane\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "release-(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/freeplane/freeplane/releases/download/release-$version/Freeplane-Setup-$version.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
