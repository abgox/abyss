{
    "version": "1.13.1",
    "description": "一款免费/自由开源软件，支持思维整理、信息共享以及工作学习与家庭事务的高效管理 | A free and open source software application that supports thinking, sharing information, getting things done at work, in school and at home",
    "homepage": "https://freeplane.org/",
    "license": {
        "identifier": "GPL-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/freeplane/freeplane/releases/download/release-1.13.1/Freeplane-Setup-1.13.1.exe",
            "hash": "d15fb8dc184eb636b52f4992662d969d9328b68bfbc366d28815946f4b9ef01b"
        }
    },
    "extract_to": "app",
    "innosetup": true,
    "shortcuts": [
        [
            "app\\freeplane.exe",
            "Freeplane"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Freeplane\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "release-(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/freeplane/freeplane/releases/download/release-$version/Freeplane-Setup-$version.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
