{
    "version": "1.12.16",
    "description": "一款免费/自由开源软件，支持思维整理、信息共享以及工作学习与家庭事务的高效管理 | A free and open source software application that supports thinking, sharing information, getting things done at work, in school and at home.",
    "homepage": "https://freeplane.org/",
    "license": {
        "identifier": "GPL-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/freeplane/freeplane/releases/download/release-1.12.16/Freeplane-Setup-1.12.16.exe",
            "hash": "e1f80082b6ecc376a79a37aa05b28a9fb0f2c8ce825c48762f2468e6d8bb2f43"
        }
    },
    "extract_to": "app",
    "innosetup": true,
    "shortcuts": [
        [
            "app\\freeplane.exe",
            "Freeplane"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Freeplane\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "release-(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/freeplane/freeplane/releases/download/release-$version/Freeplane-Setup-$version.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
