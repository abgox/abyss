{
    "version": "0.4.4",
    "description": "为 fly.io 服务提供的命令行工具 | Command line tools for fly.io services.",
    "homepage": "https://fly.io/",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/superfly/flyctl/releases/download/v0.4.4/flyctl_0.4.4_Windows_x86_64.zip",
            "hash": "0007a458cac9ab4ff61c39073a7d8b08b83f0398c21a637f9c18c8209284082e"
        },
        "arm64": {
            "url": "https://github.com/superfly/flyctl/releases/download/v0.4.4/flyctl_0.4.4_Windows_arm64.zip",
            "hash": "a0194fa38c3af7a5233f668fa40b7f56009e23532b3f523d3cc57c7401ecee4b"
        }
    },
    "extract_to": "app",
    "bin": [
        "app\\flyctl.exe",
        [
            "app\\flyctl.exe",
            "fly"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/superfly/flyctl/releases/download/v$version/flyctl_$version_Windows_x86_64.zip"
            },
            "arm64": {
                "url": "https://github.com/superfly/flyctl/releases/download/v$version/flyctl_$version_Windows_arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
