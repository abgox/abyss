{
    "version": "3.0.6600",
    "description": "一个用于在 Windows 操作系统中管理文件和档案的程序，Far Manager 以文本模式运行，并为执行大多数必要操作提供简单直观的界面 | A program for managing files and archives in Windows operating systems. Far Manager works in text mode and provides a simple and intuitive interface for performing most of the necessary actions",
    "homepage": "https://www.farmanager.com/",
    "license": {
        "identifier": "BSD-3-Clause"
    },
    "architecture": {
        "64bit": {
            "url": "https://www.farmanager.com/files/Far30b6600.x64.20251124.msi#/dl.msi_",
            "hash": "ddbcac1752e7ef648def96acf832b9b647a5ce2ef5c2569bcd428e8ffada8d74"
        },
        "arm64": {
            "url": "https://www.farmanager.com/files/Far30b6600.ARM64.20251124.msi#/dl.msi_",
            "hash": "547d373c5f9e36e1bc9cfe896337f4fe9724e6427fa2b23f9282310dc784a658"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Add-Path \"$env:ProgramFiles\\Far Manager\"",
        "A-New-File \"$env:ProgramFiles\\Far Manager\\Far.exe.ini\"",
        "A-New-LinkDirectory \"$env:AppData\\Far Manager\", \"$env:LocalAppData\\Far Manager\"",
        "A-New-LinkFile \"$env:ProgramFiles\\Far Manager\\Far.exe.ini\"",
        "A-Install-Msi"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Uninstall-Msi",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo, $out = A-Get-InstallerInfoFromWinget 'FarManager.FarManager' 'msi'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64#/dl.msi_",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64#/dl.msi_",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
