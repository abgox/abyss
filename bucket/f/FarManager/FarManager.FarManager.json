{
    "version": "3.0.6644",
    "description": "一个用于在 Windows 操作系统中管理文件和档案的程序，Far Manager 以文本模式运行，并为执行大多数必要操作提供简单直观的界面 | A program for managing files and archives in Windows operating systems. Far Manager works in text mode and provides a simple and intuitive interface for performing most of the necessary actions",
    "homepage": "https://www.farmanager.com/",
    "license": {
        "identifier": "BSD-3-Clause"
    },
    "architecture": {
        "64bit": {
            "url": "https://www.farmanager.com/files/Far30b6644.x64.20260212.msi#/dl.msi_",
            "hash": "a9585d68b39acd24745bac64e7a5807f12b62adbd32c4bdd8a4355c52888ddbd"
        },
        "arm64": {
            "url": "https://www.farmanager.com/files/Far30b6644.ARM64.20260212.msi#/dl.msi_",
            "hash": "a7c7830e0178bd20e6f1f228d68611e47ea11823ec8ef1b284e70a12522b19fe"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Add-Path \"$env:ProgramFiles\\Far Manager\"",
        "A-New-LinkFile \"$env:ProgramFiles\\Far Manager\\Far.exe.ini\"",
        "A-New-LinkDirectory \"$env:AppData\\Far Manager\", \"$env:LocalAppData\\Far Manager\"",
        "A-Install-Msi"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Uninstall-Msi",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$res, $out = A-Get-InstallerInfoFromWinget 'FarManager.FarManager' 'msi'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64#/dl.msi_",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64#/dl.msi_",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
