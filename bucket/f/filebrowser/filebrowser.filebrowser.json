{
    "version": "2.57.1",
    "description": "Web File Browser 在指定目录内提供文件管理界面，可用于上传、删除、预览和编辑文件 | Web File Browser provides a file managing interface within a specified directory and it can be used to upload, delete, preview and edit your files",
    "homepage": "https://filebrowser.org/",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/filebrowser/filebrowser/releases/download/v2.57.1/windows-amd64-filebrowser.zip",
            "hash": "7631d580f48d39f1d868e5862b0b593a34b53304b98013da43048d67a5f203c0"
        },
        "arm64": {
            "url": "https://github.com/filebrowser/filebrowser/releases/download/v2.57.1/windows-arm64-filebrowser.zip",
            "hash": "cfcc1df23bbce279dea0509e8dbe28015c6340ec9989e99373ed1544a8468324"
        }
    },
    "extract_to": "app",
    "bin": "app\\filebrowser.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/filebrowser/filebrowser/releases/download/v$version/windows-amd64-filebrowser.zip"
            },
            "arm64": {
                "url": "https://github.com/filebrowser/filebrowser/releases/download/v$version/windows-arm64-filebrowser.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
