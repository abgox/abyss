        },
        "arm64": {
            "url": "https://github.com/wood3n/biu/releases/download/v1.12.0/Biu-1.12.0-win-setup-arm64.exe",
            "hash": "74861fafef9961095938a3d914b240d46857f9938364d07208a3b3b24d0a8ff6"
