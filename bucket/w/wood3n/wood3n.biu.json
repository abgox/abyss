        },
        "arm64": {
            "url": "https://github.com/wood3n/biu/releases/download/v1.6.0-beta.11/Biu-1.6.0-beta.11-win-setup-arm64.exe",
            "hash": "ad759946974b8e0ba5f0ccbf49a5b565d689c83ca07f89efc36625adc6d69cf6"
