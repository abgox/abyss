    "architecture": {
        "64bit": {
            "url": "https://github.com/wood3n/biu/releases/download/v1.7.1/Biu-1.7.1-win-setup-x64.exe",
            "hash": "f7a30a66cb6fbede3fa51f287dd5c47ca989017540d119f6da631406a25d3199"
        },
        "arm64": {
            "url": "https://github.com/wood3n/biu/releases/download/v1.7.1/Biu-1.7.1-win-setup-arm64.exe",
            "hash": "866c4baae4e95b2f6adddf3e7689c4f9094d4014cd9837e8ef4eb1032200f13d"
        }
    },
    "shortcuts": [
        [
            "app\\Biu.exe",
            "Biu"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Biu\"",
        "A-Install-Exe -Uninstaller 'app\\Uninstall Biu.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData \"$env:LocalAppData\\biu-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/wood3n/biu/releases/download/v$version/Biu-$version-win-setup-x64.exe"
            },
            "arm64": {
                "url": "https://github.com/wood3n/biu/releases/download/v$version/Biu-$version-win-setup-arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
