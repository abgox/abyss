        },
        "arm64": {
            "url": "https://github.com/wood3n/biu/releases/download/v1.7.1-beta.1/Biu-1.7.1-beta.1-win-setup-arm64.exe",
            "hash": "569b6c975cbea17443d428d4b728855b1916619e2085cb31707ad5a2a0820f23"
