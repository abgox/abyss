        },
        "arm64": {
            "url": "https://github.com/wood3n/biu/releases/download/v1.11.0/Biu-1.11.0-win-setup-arm64.exe",
            "hash": "1e94872524a4b4b47ab7bee055fdbcf2e50312f2d52d8fd916c4f4cd70a0b24b"
