{
    "version": "6.6.7",
    "description": "Waterfox 基于 Firefox 构建，是一款注重隐私的网页浏览器，其设计旨在为你提供上网时的速度、控制权和安心体验。 | Waterfox is built on Firefox, and is the privacy-focused web browser engineered to give you speed, control, and peace of mind on the internet.",
    "homepage": "https://www.waterfox.com/",
    "license": {
        "identifier": "MPL-2.0"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Waterfox",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes-cn": [
        "安装目录: $env:ProgramFiles\\Waterfox",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://cdn.waterfox.com/waterfox/releases/6.6.7/WINNT_x86_64/Waterfox%20Setup%206.6.7.exe",
            "hash": "f4f169114c1c6c6268d128358bcb6dd2f855dc12e7bc5fb25b9c0a5b0c2dfdd3"
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:AppData\\Waterfox\"",
        "A-Install-App -Uninstaller \"$env:ProgramFiles\\Waterfox\\uninstall\\helper.exe\" -ArgumentList '/S','/PreventRebootRequired=true'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process \"$env:ProgramFiles\\Waterfox\"",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\Waterfox\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'Waterfox.Waterfox' 'exe'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_machine.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_machine.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_machine.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            }
        }
    }
}
