{
    "version": "6.6.8",
    "description": "Waterfox 基于 Firefox 构建，是一款注重隐私的网页浏览器，其设计旨在为你提供上网时的速度、控制权和安心体验 | Waterfox is built on Firefox, and is the privacy-focused web browser engineered to give you speed, control, and peace of mind on the internet",
    "homepage": "https://www.waterfox.com/",
    "license": {
        "identifier": "MPL-2.0"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Waterfox",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:ProgramFiles\\Waterfox",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://cdn.waterfox.com/waterfox/releases/6.6.8/WINNT_x86_64/Waterfox%20Setup%206.6.8.exe",
            "hash": "0c20d781ee5529ab7208737f8983601d7199904262f8e23665a9b06a9ed5350f"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:AppData\\Waterfox\"",
        "A-Install-App -Uninstaller \"$env:ProgramFiles\\Waterfox\\uninstall\\helper.exe\" -ArgumentList '/S','/PreventRebootRequired=true'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process \"$env:ProgramFiles\\Waterfox\"",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\Waterfox\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo, $out = A-Get-InstallerInfoFromWinget 'Waterfox.Waterfox' 'exe'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            }
        }
    }
}
