{
    "version": "1.5.0",
    "description": "一款现代、灵活的时间跟踪应用程序，用于记录和管理个人工作时间 | A modern, flexible time tracking app for capturing and managing personal working hours.",
    "homepage": "https://github.com/WINBIGFOX/TimeScribe",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://github.com/WINBIGFOX/TimeScribe/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/WINBIGFOX/TimeScribe/releases/download/v1.5.0/TimeScribe-1.5.0-setup.exe",
            "hash": "df8ad80d5918358b06b355e43a0b9f842ca1c1edf0de21453d4d8424ed2a6a00"
        }
    },
    "shortcuts": [
        [
            "app\\timescribe.exe",
            "TimeScribe"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:AppData\\timescribe\")",
        "A-Install-Exe -Uninstaller 'app\\Uninstall timescribe.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/WINBIGFOX/TimeScribe",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/WINBIGFOX/TimeScribe/releases/download/v$version/TimeScribe-$version-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
