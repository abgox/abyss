{
    "version": "1.10.0",
    "description": "一款现代、灵活的时间跟踪应用程序，用于记录和管理个人工作时间 | A modern, flexible time tracking app for capturing and managing personal working hours",
    "homepage": "https://github.com/WINBIGFOX/TimeScribe",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/WINBIGFOX/TimeScribe/releases/download/v1.10.0/TimeScribe-1.10.0-setup.exe",
            "hash": "983e9f99c4fe72fb5bf6896ddac7b1fe56c524b2b56ee1fca32b095b1db10337"
        }
    },
    "shortcuts": [
        [
            "app\\timescribe.exe",
            "TimeScribe"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\timescribe\"",
        "A-Install-App -Uninstaller 'app\\Uninstall timescribe.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/WINBIGFOX/TimeScribe/releases/download/v$version/TimeScribe-$version-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
