{
    "version": "1.2.4",
    "description": "开源免费的 HTTP(S) 流量捕获软件 | Open source free capture HTTP(S) traffic software",
    "homepage": "https://github.com/wanghongenpin/proxypin",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/wanghongenpin/proxypin/releases/download/v1.2.4/proxypin-windows-setup.exe",
            "hash": "0564f8f1cb786fbd1fe2554d65cd5a75fb531a301747a39e1db419482df96cf6"
        }
    },
    "shortcuts": [
        [
            "app\\ProxyPin.exe",
            "ProxyPin"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$home\\.proxypin\", \"$env:AppData\\com.proxy.pin\\ProxyPin\"",
        "A-Install-Inno"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Inno"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/wanghongenpin/proxypin/releases/download/v$version/proxypin-windows-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
