{
    "version": "0.16.1",
    "description": "一个轻量级、高性能且可扩展的 WebAssembly 运行时 | A lightweight, high-performance, and extensible WebAssembly runtime.",
    "homepage": "https://wasmedge.org/",
    "license": {
        "identifier": "Apache-2.0",
        "url": "https://github.com/WasmEdge/WasmEdge/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/WasmEdge/WasmEdge/releases/download/0.16.1/WasmEdge-0.16.1-windows-msvc.zip",
            "hash": "81a562c3fff2ee3562bd3a60e94117a62da366a39a4b2aaceaab6c06201e3f4c"
        }
    },
    "extract_to": "app",
    "bin": [
        "app\\bin\\wasmedge.exe",
        "app\\bin\\wasmedgec.exe"
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/WasmEdge/WasmEdge/releases/download/$version/WasmEdge-$version-windows-msvc.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
