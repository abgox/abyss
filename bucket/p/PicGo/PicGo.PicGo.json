{
    "version": "2.4.3",
    "description": "由 vue-cli-electron-builder 构建的简洁美观的图片上传工具 | A simple & beautiful tool for pictures uploading built by vue-cli-electron-builder.",
    "homepage": "https://molunerfinn.com/PicGo/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Molunerfinn/PicGo/releases/download/v2.4.3/PicGo-2.4.3-x64.exe",
            "hash": "b544da21019bd597e71d107cfab38c4b84e9e49882c3d7f2643d4bb3de423663"
        },
        "arm64": {
            "url": "https://github.com/Molunerfinn/PicGo/releases/download/v2.4.3/PicGo-2.4.3-arm64.exe",
            "hash": "ada42e8554c604a1693f7934845b7c06a0941bd7dfd14e8f5aa1610337c30963"
        }
    },
    "shortcuts": [
        [
            "app\\PicGo.exe",
            "PicGo"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\picgo\"",
        "A-Install-App -Uninstaller 'app\\Uninstall PicGo.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\picgo-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Molunerfinn/PicGo/releases/download/v$version/PicGo-$version-x64.exe"
            },
            "arm64": {
                "url": "https://github.com/Molunerfinn/PicGo/releases/download/v$version/PicGo-$version-arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
