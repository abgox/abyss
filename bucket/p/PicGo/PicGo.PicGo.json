{
    "version": "2.5.0",
    "description": "由 vue-cli-electron-builder 构建的简洁美观的图片上传工具 | A simple & beautiful tool for pictures uploading built by vue-cli-electron-builder",
    "homepage": "https://molunerfinn.com/PicGo/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Molunerfinn/PicGo/releases/download/v2.5.0/PicGo-2.5.0-x64.exe",
            "hash": "919290ffc516ef7c0d2c6a575c80280a6dbb2a4d597c4a78b7ee79bddc315c08"
        },
        "arm64": {
            "url": "https://github.com/Molunerfinn/PicGo/releases/download/v2.5.0/PicGo-2.5.0-arm64.exe",
            "hash": "3a3678ffd499e442efc96e6cabbf1cb1f67aa129e33870e43fe2ff601e949c33"
        }
    },
    "shortcuts": [
        [
            "app\\PicGo.exe",
            "PicGo"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\picgo\"",
        "A-Install-App -Uninstaller 'app\\Uninstall PicGo.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\picgo-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Molunerfinn/PicGo/releases/download/v$version/PicGo-$version-x64.exe"
            },
            "arm64": {
                "url": "https://github.com/Molunerfinn/PicGo/releases/download/v$version/PicGo-$version-arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
