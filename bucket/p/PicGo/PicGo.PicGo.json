{
    "version": "2.5.1",
    "description": "由 vue-cli-electron-builder 构建的简洁美观的图片上传工具 | A simple & beautiful tool for pictures uploading built by vue-cli-electron-builder",
    "homepage": "https://molunerfinn.com/PicGo/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Molunerfinn/PicGo/releases/download/v2.5.1/PicGo-2.5.1-x64.exe",
            "hash": "e2baebb50f3eb733e762a1c7a63f4aee6de82de00cfd61f65c31baf7141cac76"
        },
        "arm64": {
            "url": "https://github.com/Molunerfinn/PicGo/releases/download/v2.5.1/PicGo-2.5.1-arm64.exe",
            "hash": "90abf7917906feda07f91e4873586bd2f36ce759074b7a5a8416e37d6d1d909e"
        }
    },
    "shortcuts": [
        [
            "app\\PicGo.exe",
            "PicGo"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\picgo\"",
        "A-Install-App -Uninstaller 'app\\Uninstall PicGo.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\picgo-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Molunerfinn/PicGo/releases/download/v$version/PicGo-$version-x64.exe"
            },
            "arm64": {
                "url": "https://github.com/Molunerfinn/PicGo/releases/download/v$version/PicGo-$version-arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
