{
    "version": "2.5.2",
    "description": "由 vue-cli-electron-builder 构建的简洁美观的图片上传工具 | A simple & beautiful tool for pictures uploading built by vue-cli-electron-builder",
    "homepage": "https://molunerfinn.com/PicGo/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Molunerfinn/PicGo/releases/download/v2.5.2/PicGo-2.5.2-x64.exe",
            "hash": "58d59c2643d36bd9e0df911109f463284d04da93d3cdafa56f85772c8e5c1c81"
        },
        "arm64": {
            "url": "https://github.com/Molunerfinn/PicGo/releases/download/v2.5.2/PicGo-2.5.2-arm64.exe",
            "hash": "858640c57338a9945494c856288321104c08826c838cffed5b25c9cbfb21b4cf"
        }
    },
    "shortcuts": [
        [
            "app\\PicGo.exe",
            "PicGo"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\picgo\"",
        "A-Install-App -Uninstaller 'app\\Uninstall PicGo.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\picgo-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Molunerfinn/PicGo/releases/download/v$version/PicGo-$version-x64.exe"
            },
            "arm64": {
                "url": "https://github.com/Molunerfinn/PicGo/releases/download/v$version/PicGo-$version-arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
