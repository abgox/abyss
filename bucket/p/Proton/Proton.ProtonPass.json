{
    "version": "1.33.5",
    "description": "开源且加密的密码管理器 | Open-source and encrypted password manager",
    "homepage": "https://proton.me/pass",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "notes": [
        "The installation directory: $env:LocalAppData\\ProtonPass",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:LocalAppData\\ProtonPass",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://proton.me/download/pass/windows/ProtonPass_Setup_1.33.5.exe",
            "hash": "0c7424c7fe95443df32dcd3b3d9ba64de24ac620078b28225e29e5d4bbe8328d"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Proton Pass\"",
        "A-Install-App -Uninstaller \"$env:LocalAppData\\ProtonPass\\Update.exe\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process \"$env:LocalAppData\\ProtonPass\"",
        "A-Remove-Link",
        "A-Uninstall-App -ArgumentList '--uninstall'",
        "A-Remove-TempData \"$env:LocalAppData\\ProtonPass\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo, $out = A-Get-InstallerInfoFromWinget 'Proton.ProtonPass' 'exe'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_user.InstallerSha256"
                }
            }
        }
    }
}
