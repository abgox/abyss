{
    "version": "1.4.4",
    "description": "一款看番软件，带弹幕的 anime1 第三方客户端 | A third-party client for anime1 with subtitle features",
    "homepage": "https://github.com/Predidit/oneAnime",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Predidit/oneAnime/releases/download/1.4.4/oneAnime_windows_1.4.4.zip",
            "hash": "1bf5d346b45a2d817d494290dde7af1510e0120e5cf4bffb305dc7f9b01ad0e9"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\oneanime.exe",
            "oneanime"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.example\\oneanime\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Predidit/oneAnime/releases/download/$version/oneAnime_windows_$version.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
