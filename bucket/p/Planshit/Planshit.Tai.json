{
    "version": "1.5.0.6",
    "description": "在 Windows 上统计软件使用时长和网站浏览时长 | Count the duration of software usage and website browsing on Windows",
    "homepage": "https://github.com/Planshit/Tai",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Planshit/Tai/releases/download/1.5.0.6/Tai1.5.0.6.zip",
            "hash": "7d55788ab79ecf7893ee5e160496698bc772511d9600336524d1858369766327"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\Tai.exe",
            "Tai"
        ]
    ],
    "persist": [
        [
            "app\\Data",
            "Data"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Planshit/Tai/releases/download/$version/Tai$version.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
