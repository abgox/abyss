{
    "version": "26.1.5",
    "description": "一款支持 Markdown 格式且能与 Nextcloud / ownCloud 集成的纯文本文件记事本和待办事项管理器。 | A plain-text file notepad and todo-list manager with Markdown support and Nextcloud / ownCloud integration.",
    "homepage": "https://www.qownnotes.org/",
    "license": {
        "identifier": "GPL-2.0-only",
        "url": "https://github.com/pbek/QOwnNotes/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/pbek/QOwnNotes/releases/download/v26.1.5/QOwnNotes.zip",
            "hash": "b10c31631176d998adb7991b98f2c1492dd8db2bc170a4e21e3716f1fb725262"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\QOwnNotes.exe",
            "QOwnNotes",
            "--portable"
        ]
    ],
    "persist": [
        [
            "app\\Data",
            "AppData\\Roaming\\PBE\\QOwnNotes"
        ],
        [
            "app\\Data\\Notes",
            "Notes"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/pbek/QOwnNotes/releases/download/v$version/QOwnNotes.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
