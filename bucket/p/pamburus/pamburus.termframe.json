{
    "version": "0.7.6",
    "description": "一个非交互式终端模拟器，它能执行单个命令，在内部虚拟会话中渲染其输出，并将屏幕截图导出为 SVG 文件。 | A non-interactive terminal emulator that executes a single command, renders its output in an internal virtual session, and exports a screenshot as an SVG file.",
    "homepage": "https://github.com/pamburus/termframe",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/pamburus/termframe/releases/download/v0.7.6/termframe-windows.zip",
            "hash": "86da4739efbb37c84f7241fd1ad7a734e2bd25e34b11aed76ac53b028262c660"
        },
        "arm64": {
            "url": "https://github.com/pamburus/termframe/releases/download/v0.7.6/termframe-windows-arm64.zip",
            "hash": "1c8de42ef46c0c42241ff20eb0f07ad3c90a6ecb91298330e407bc6ce3344fb8"
        }
    },
    "extract_to": "app",
    "bin": "app\\termframe.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\termframe\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/pamburus/termframe/releases/download/v$version/termframe-windows.zip"
            },
            "arm64": {
                "url": "https://github.com/pamburus/termframe/releases/download/v$version/termframe-windows-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
