{
    "version": "0.35.2",
    "description": "高性能的日志查看器和处理器，可将 JSON 和 logfmt 格式的日志转换为人类可读的输出。 | High-performance log viewer and processor that transforms logs in JSON and logfmt formats into a human-readable output.",
    "homepage": "https://github.com/pamburus/hl",
    "license": {
        "identifier": "MIT"
    },
    "depends": [
        "abyss/jftuga.less"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/pamburus/hl/releases/download/v0.35.2/hl-windows.zip",
            "hash": "604e86c133cbcabdc2a497487a3b2f80caa21722f663618fee019cfa2e4d63df"
        },
        "arm64": {
            "url": "https://github.com/pamburus/hl/releases/download/v0.35.2/hl-windows-arm64.zip",
            "hash": "0d2ad00ce52dedfe87fb55c54414fcd42f50cd9670d9fb93d0d09d7961ca22c7"
        }
    },
    "extract_to": "app",
    "bin": "app\\hl.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\hl\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/pamburus/hl/releases/download/v$version/hl-windows.zip"
            },
            "arm64": {
                "url": "https://github.com/pamburus/hl/releases/download/v$version/hl-windows-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
