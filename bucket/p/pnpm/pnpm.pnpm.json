{
    "version": "10.28.0",
    "description": "一款快速且节省磁盘空间的 Node 包管理器 | A fast and disk space efficient Node package manager.",
    "homepage": "https://pnpm.io/",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/pnpm/pnpm/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/pnpm/pnpm/releases/download/v10.28.0/pnpm-win-x64.exe#/pnpm.exe",
            "hash": "daed0979c3754cdc2e467ca6a298d48fedbc0fad92f14f4396f44a0a3dd2b730"
        },
        "arm64": {
            "url": "https://github.com/pnpm/pnpm/releases/download/v10.28.0/pnpm-win-arm64.exe#/pnpm.exe",
            "hash": "f265b8a47eb4f64fe1b544af51e1245c7952b1710699eb03ae4df86e3e0cc461"
        }
    },
    "bin": [
        "pnpm.exe",
        [
            "pnpm.exe",
            "pnpx",
            "dlx"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:LocalAppData\\pnpm\",\"$env:LocalAppData\\pnpm-state\",\"$env:LocalAppData\\pnpm-cache\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/pnpm/pnpm/releases/download/v$version/pnpm-win-x64.exe#/pnpm.exe"
            },
            "arm64": {
                "url": "https://github.com/pnpm/pnpm/releases/download/v$version/pnpm-win-arm64.exe#/pnpm.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
