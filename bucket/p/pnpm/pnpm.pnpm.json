{
    "version": "10.22.0",
    "description": "一款快速且节省磁盘空间的 Node 包管理器 | A fast and disk space efficient Node package manager.",
    "homepage": "https://pnpm.io/",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/pnpm/pnpm/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/pnpm/pnpm/releases/download/v10.22.0/pnpm-win-x64.exe#/pnpm.exe",
            "hash": "9f32995a275549f02087bb34547db40f0260573d0398fcdfef09135157602f91"
        },
        "arm64": {
            "url": "https://github.com/pnpm/pnpm/releases/download/v10.22.0/pnpm-win-arm64.exe#/pnpm.exe",
            "hash": "5d77519985f6b649c0fbe97b080a7d6de485db33f3e1e8d01ad37f7ca3c27a41"
        }
    },
    "bin": [
        "pnpm.exe",
        [
            "pnpm.exe",
            "pnpx",
            "dlx"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:LocalAppData\\pnpm\",\"$env:LocalAppData\\pnpm-state\",\"$env:LocalAppData\\pnpm-cache\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/pnpm/pnpm",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/pnpm/pnpm/releases/download/v$version/pnpm-win-x64.exe#/pnpm.exe"
            },
            "arm64": {
                "url": "https://github.com/pnpm/pnpm/releases/download/v$version/pnpm-win-arm64.exe#/pnpm.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
