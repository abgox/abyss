            "hash": "1f513e9573c12a4dc7c50ae6b980f8c886575e47da6c7aa519765a00bc4b54bd"
        },
        "arm64": {
            "url": "https://github.com/pnpm/pnpm/releases/download/v10.26.0/pnpm-win-arm64.exe#/pnpm.exe",
            "hash": "9c8e749bed0fa58052908ebbdaa42509016cdfc96b2a2f43647c7464d73ddfab"
