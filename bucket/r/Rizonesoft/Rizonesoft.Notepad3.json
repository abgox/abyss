        "Favorites",
        "Themes",
        "minipath.ini",
        "Notepad3.ini"
    ],
    "checkver": {
        "url": "https://github.com/rizonesoft/Notepad3/releases/latest",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-Version '/tree/RELEASE_v?([^\"]+)'"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
