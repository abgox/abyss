{
    "version": "1.4.4",
    "description": "一个安全的远程桌面访问工具，用 Rust 语言编写 | An open-source remote desktop software, written in Rust.",
    "homepage": "https://github.com/rustdesk/rustdesk",
    "license": {
        "identifier": "AGPL-3.0-only",
        "url": "https://github.com/rustdesk/rustdesk/blob/master/LICENCE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/rustdesk/rustdesk/releases/download/1.4.4/rustdesk-1.4.4-x86_64.exe",
            "hash": "bc590119bfd7420c0617986205a3530b44620fee470ab474f2afc3c661ab1960",
            "bin": [
                [
                    "rustdesk-1.4.4-x86_64.exe",
                    "rustdesk"
                ]
            ],
            "shortcuts": [
                [
                    "rustdesk-1.4.4-x86_64.exe",
                    "RustDesk"
                ]
            ]
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\RustDesk\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process \"$env:LocalAppData\\rustdesk\"",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:LocalAppData\\rustdesk\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/rustdesk/rustdesk/releases/download/$version/rustdesk-$version-x86_64.exe",
                "bin": [
                    [
                        "rustdesk-$version-x86_64.exe",
                        "rustdesk"
                    ]
                ],
                "shortcuts": [
                    [
                        "rustdesk-$version-x86_64.exe",
                        "RustDesk"
                    ]
                ]
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
