{
    "version": "8.34",
    "description": "适用于 Windows 和 DOS 的全面硬件分析、监测与报告 | Comprehensive Hardware Analysis, Monitoring and Reporting for Windows and DOS.",
    "homepage": "https://github.com/microsoft/winget-pkgs/tree/master/manifests/r/REALiX/HWiNFO",
    "license": {
        "identifier": "Freeware"
    },
    "architecture": {
        "64bit": {
            "url": "https://sourceforge.net/projects/hwinfo/files/Windows_Installer/hwi64_834.exe/download",
            "hash": "4f790b6a57c451820113ef20a7efa32a4f88e9cb978cb730cd542a2b5076fda4",
            "bin": [
                [
                    "HWiNFO64.exe",
                    "HWiNFO"
                ]
            ],
            "shortcuts": [
                [
                    "HWiNFO64.exe",
                    "HWiNFO"
                ]
            ]
        },
        "arm64": {
            "url": "https://sourceforge.net/projects/hwinfo/files/Windows_Installer/hwi64_834.exe/download",
            "hash": "4f790b6a57c451820113ef20a7efa32a4f88e9cb978cb730cd542a2b5076fda4",
            "bin": [
                [
                    "HWiNFO_ARM64.exe",
                    "HWiNFO"
                ]
            ],
            "shortcuts": [
                [
                    "HWiNFO_ARM64.exe",
                    "HWiNFO"
                ]
            ]
        }
    },
    "persist": [
        "HWiNFO64.INI",
        "HWiNFO32.INI",
        "HWiNFO_ARM64.INI"
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "foreach ($arch in '64','32','_ARM64') {",
        "    A-New-File \"$persist_dir\\HWiNFO$arch.INI\" -Content '[Settings]', 'AutoUpdate=0' -Encoding ascii",
        "    if (Test-PATH \"$persist_dir\\HWiNFO$arch_KEY.txt\" -PathType Leaf) {",
        "        Copy-Item \"$persist_dir\\HWiNFO$arch_KEY.txt\" \"$dir\"",
        "    }",
        "}"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "foreach ($arch in '64','32','_ARM64') {",
        "    if (Test-PATH \"$dir\\HWiNFO$arch_KEY.txt\" -PathType Leaf) {",
        "        if (Test-PATH \"$persist_dir\\HWiNFO$arch_KEY.txt\" -PathType Container) {",
        "            Remove-Item \"$persist_dir\\HWiNFO$arch_KEY.txt\" -Recurse",
        "        }",
        "        Copy-Item \"$dir\\HWiNFO$arch_KEY.txt\" \"$persist_dir\"",
        "    }",
        "}"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'REALiX.HWiNFO' ''",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_machine.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_machine.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_machine.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
