{
    "version": "8.40",
    "description": "适用于 Windows 和 DOS 的全面硬件分析、监测与报告 | Comprehensive Hardware Analysis, Monitoring and Reporting for Windows and DOS",
    "homepage": "https://github.com/microsoft/winget-pkgs/tree/master/manifests/r/REALiX/HWiNFO",
    "license": {
        "identifier": "Freeware"
    },
    "architecture": {
        "64bit": {
            "url": "https://www.sac.sk/download/utildiag/hwi_840x.exe",
            "hash": "61a8efe827803fe06b03e86296ab6e4bae4d68ea6d7c0c8b1309063a0d52ab4c",
            "bin": [
                [
                    "HWiNFO64.exe",
                    "HWiNFO"
                ]
            ],
            "shortcuts": [
                [
                    "HWiNFO64.exe",
                    "HWiNFO"
                ]
            ]
        },
        "arm64": {
            "url": "https://www.sac.sk/download/utildiag/hwi_840x.exe",
            "hash": "61a8efe827803fe06b03e86296ab6e4bae4d68ea6d7c0c8b1309063a0d52ab4c",
            "bin": [
                [
                    "HWiNFO_ARM64.exe",
                    "HWiNFO"
                ]
            ],
            "shortcuts": [
                [
                    "HWiNFO_ARM64.exe",
                    "HWiNFO"
                ]
            ]
        }
    },
    "persist": [
        "HWiNFO64.INI",
        "HWiNFO32.INI",
        "HWiNFO_ARM64.INI"
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "foreach ($arch in '64','32','_ARM64') {",
        "    A-New-File \"$persist_dir\\HWiNFO$arch.INI\" -Content '[Settings]', 'AutoUpdate=0' -Encoding ascii",
        "    if (Test-PATH \"$persist_dir\\HWiNFO$arch_KEY.txt\" -PathType Leaf) {",
        "        Copy-Item \"$persist_dir\\HWiNFO$arch_KEY.txt\" \"$dir\"",
        "    }",
        "}"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "foreach ($arch in '64','32','_ARM64') {",
        "    if (Test-PATH \"$dir\\HWiNFO$arch_KEY.txt\" -PathType Leaf) {",
        "        if (Test-PATH \"$persist_dir\\HWiNFO$arch_KEY.txt\" -PathType Container) {",
        "            Remove-Item \"$persist_dir\\HWiNFO$arch_KEY.txt\" -Recurse",
        "        }",
        "        Copy-Item \"$dir\\HWiNFO$arch_KEY.txt\" \"$persist_dir\"",
        "    }",
        "}"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$res, $out = A-Get-InstallerInfoFromWinget 'REALiX.HWiNFO' ''",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
