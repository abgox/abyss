{
    "version": "0.9.91",
    "description": "一款专为沉浸式深度阅读体验而设计的开源电子书阅读器 | An open-source ebook reader designed for immersive and deep reading experiences.",
    "homepage": "https://readest.com/",
    "license": {
        "identifier": "AGPL-3.0-only",
        "url": "https://github.com/readest/readest/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/readest/readest/releases/download/v0.9.91/Readest_0.9.91_x64-setup_windows.exe#/dl.7z",
            "hash": "1983b7d1a3d3520f5ca2acc0b5aeec61f13a6f70a399cc8efe9538b7620385ee"
        },
        "arm64": {
            "url": "https://github.com/readest/readest/releases/download/v0.9.91/Readest_0.9.91_arm64-setup_windows.exe#/dl.7z",
            "hash": "125cf33ed170ccda8fcdb4e99909226f6bfa6b4795a81e1d0196c246e3257d51"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\readest.exe",
            "Readest"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:AppData\\com.bilingify.readest\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData @(\"$env:LocalAppData\\com.bilingify.readest\")"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/readest/readest",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/readest/readest/releases/download/v$version/Readest_$version_x64-setup_windows.exe#/dl.7z"
            },
            "arm64": {
                "url": "https://github.com/readest/readest/releases/download/v$version/Readest_$version_arm64-setup_windows.exe#/dl.7z"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
