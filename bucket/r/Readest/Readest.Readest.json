            "hash": "382cc69b142f2a9515538462612662c5621ccd021a43394079e56140d7d87355"
        },
        "arm64": {
            "url": "https://github.com/readest/readest/releases/download/v0.9.98/Readest_0.9.98_arm64-setup.exe#/dl.7z",
