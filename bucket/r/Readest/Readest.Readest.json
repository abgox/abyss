            "hash": "619f7a04b92765a8223f8bd1f9637981376537459af40fe608f49f45bd6e0fb5"
        },
        "arm64": {
            "url": "https://github.com/readest/readest/releases/download/v0.9.99/Readest_0.9.99_arm64-setup.exe#/dl.7z",
            "hash": "bd8e4675bdbe5c339e90ea7bc545fd8158a596150f3b1f08f302541e7dac5adf"
