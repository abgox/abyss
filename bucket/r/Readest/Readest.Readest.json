    "homepage": "https://readest.com/",
    "license": {
        "identifier": "AGPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/readest/readest/releases/download/v0.9.100/Readest_0.9.100_x64-setup.exe#/dl.7z",
            "hash": "d03f11fadea6ac75322dd79aed5db508ac0f1d1b23865e8a5384b58b7c04e330"
        },
        "arm64": {
            "url": "https://github.com/readest/readest/releases/download/v0.9.100/Readest_0.9.100_arm64-setup.exe#/dl.7z",
            "hash": "9c802599261df5b7e6ceef3e5ee51cb33793b1003cf51fe0ec06bacdc3d63179"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\readest.exe",
            "Readest"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.bilingify.readest\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:LocalAppData\\com.bilingify.readest\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/readest/readest/releases/download/v$version/Readest_$version_x64-setup.exe#/dl.7z"
            },
            "arm64": {
                "url": "https://github.com/readest/readest/releases/download/v$version/Readest_$version_arm64-setup.exe#/dl.7z"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
