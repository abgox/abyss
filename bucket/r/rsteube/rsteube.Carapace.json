{
    "version": "1.6.2",
    "description": "多 shell、多命令、参数补全器 | multi-shell, multi-command, argument completer",
    "homepage": "https://carapace.sh/",
    "license": {
        "identifier": "MIT"
    },
    "notes": [
        "After installation, you need to manually register the completer according to different shells.",
        "Refer to: https://carapace-sh.github.io/carapace-bin/setup.html"
    ],
    "notes_cn": [
        "安装完成后，需要根据不同 Shell 手动注册补全器",
        "具体操作请参考：https://carapace-sh.github.io/carapace-bin/setup.html"
    ],
    "suggest": {
        "PSCompletions": "abyss/abgox.PSCompletions"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/carapace-sh/carapace-bin/releases/download/v1.6.2/carapace-bin_1.6.2_windows_amd64.zip",
            "hash": "c6f18ee32ae02a2a8e00838de4424ba70a64589a261ba46b27fc1a82d80bb984"
        },
        "arm64": {
            "url": "https://github.com/carapace-sh/carapace-bin/releases/download/v1.6.2/carapace-bin_1.6.2_windows_arm64.zip",
            "hash": "0cddab640e83f3d21b05300629e766dfe4bc441db3d8b1b5e8a59cb909fe7a98"
        }
    },
    "extract_to": "app",
    "bin": "app\\carapace.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\carapace\", \"$env:LocalAppData\\carapace\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/carapace-sh/carapace-bin/releases/download/v$version/carapace-bin_$version_windows_amd64.zip"
            },
            "arm64": {
                "url": "https://github.com/carapace-sh/carapace-bin/releases/download/v$version/carapace-bin_$version_windows_arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
