{
    "version": "2.0.23",
    "description": "一款基于 todo.txt 语法的开源待办事项管理器 | An open-source todo manager based on the todo.txt syntax",
    "homepage": "https://github.com/ransome1/sleek",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/ransome1/sleek/releases/download/v2.0.23/sleek-2.0.23-win-x64-Setup.exe",
            "hash": "42f5c992ded4afb4b0eaf6b97eb540cb29b9b7fb3737c03ad1f0ef7a93d6b635"
        },
        "arm64": {
            "url": "https://github.com/ransome1/sleek/releases/download/v2.0.23/sleek-2.0.23-win-arm64-Setup.exe",
            "hash": "d350a42617ceef357150676c23491933c73c95c1af120bc016e03b7200a24702"
        }
    },
    "shortcuts": [
        [
            "app\\sleek.exe",
            "sleek"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\sleek\"",
        "A-Install-App -Uninstaller 'app\\Uninstall sleek.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\sleek-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/ransome1/sleek/releases/download/v$version/sleek-$version-win-x64-Setup.exe"
            },
            "arm64": {
                "url": "https://github.com/ransome1/sleek/releases/download/v$version/sleek-$version-win-arm64-Setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
