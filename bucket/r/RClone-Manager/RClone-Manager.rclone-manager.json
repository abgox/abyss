{
    "version": "0.2.1",
    "description": "一款功能强大的跨平台图形用户界面，可轻松且美观地管理 Rclone remotes | A powerful, cross-platform GUI for managing Rclone remotes with style and ease",
    "homepage": "https://zarestia-dev.github.io/rclone-manager/",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Zarestia-Dev/rclone-manager/releases/download/v0.2.1/RClone.Manager_0.2.1_x64-setup.exe",
            "hash": "416e6dcf45e38a79a23a251a798440ef2e3fed2eaec36a12443a63cb13d26f71"
        },
        "arm64": {
            "url": "https://github.com/Zarestia-Dev/rclone-manager/releases/download/v0.2.1/RClone.Manager_0.2.1_arm64-setup.exe",
            "hash": "1f045aaaa4c95c80a0ad639240920eb29c39d0f2fe4c45e631627c3fb68fdc27"
        }
    },
    "shortcuts": [
        [
            "app\\rclone-manager.exe",
            "RClone Manager"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.rclone.manager\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process @() 'rclone'",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\com.rclone.manager\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Zarestia-Dev/rclone-manager/releases/download/v$version/RClone.Manager_$version_x64-setup.exe"
            },
            "arm64": {
                "url": "https://github.com/Zarestia-Dev/rclone-manager/releases/download/v$version/RClone.Manager_$version_arm64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
