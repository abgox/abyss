{
    "version": "1.3.1",
    "description": "在一个地方关注所有事情 | Follow everything in one place",
    "homepage": "https://follow.is/",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/RSSNext/Folo/releases/download/desktop/v1.3.1/Folo-1.3.1-windows-x64.exe#/dl.7z",
            "hash": "011da064f3fa700391ef4a607418d4f84ce561a46694d72d957246230f4c07c5"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\Folo.exe",
            "Folo"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Folo\"",
        "Get-ChildItem \"$dir\\*\" -Exclude 'Folo-*nupkg' | Remove-Item",
        "Expand-7zipArchive \"$dir\\app\\Folo-*-full.nupkg\" \"$dir\\app\" -ExtractDir 'lib\\net45' -Removal"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "desktop/(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/RSSNext/Folo/releases/download/desktop/v$version/Folo-$version-windows-x64.exe#/dl.7z"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
