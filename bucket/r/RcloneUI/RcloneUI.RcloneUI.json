{
    "version": "3.3.0",
    "description": "rclone 之上的一个轻便、透明的层（桌面图形用户界面），能以更用户友好的方式管理你的远程存储和任务。 | A light, transparent layer (desktop GUI) on top of rclone to manage your remotes & tasks in a more user-friendly way.",
    "homepage": "https://rcloneui.com/",
    "license": {
        "identifier": "Apache-2.0"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Rclone UI",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:ProgramFiles\\Rclone UI",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/rclone-ui/rclone-ui/releases/download/v3.3.0/Rclone.UI_x64.exe",
            "hash": "cdfc8b4af276cdd40f96e1811895aeb6a18ca012ea558a308d4062634b805197"
        },
        "arm64": {
            "url": "https://github.com/rclone-ui/rclone-ui/releases/download/v3.3.0/Rclone.UI_arm64.exe",
            "hash": "b9fb7764b5235a7d3c4833010e63b5f881bc1c5df18ee04f51ff072a5331c548"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:AppData\\com.rclone.ui\"",
        "A-Install-App -Uninstaller \"$env:ProgramFiles\\Rclone UI\\uninstall.exe\" -ArgumentList '/S'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process \"$env:ProgramFiles\\Rclone UI\"",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\com.rclone.ui\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/rclone-ui/rclone-ui/releases/download/v$version/Rclone.UI_x64.exe"
            },
            "arm64": {
                "url": "https://github.com/rclone-ui/rclone-ui/releases/download/v$version/Rclone.UI_arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
