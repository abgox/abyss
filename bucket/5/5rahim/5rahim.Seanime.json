{
    "version": "3.4.0",
    "description": "免费开源的媒体服务器，为动漫爱好者提供丰富功能 | Free and open-source media server packed with features for anime and manga enthusiasts.",
    "homepage": "https://seanime.rahim.app/",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/5rahim/seanime/releases/download/v3.4.0/seanime-denshi-3.4.0_Windows_x64.exe",
            "hash": "801f59fa2ee6bcb628ebac1be0887ed4a7c8a59cf53e575f03ee672fd0d26960"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\Seanime Denshi.exe",
            "Seanime Denshi"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:AppData\\Seanime\"",
        "A-Install-App -Uninstaller 'app\\Uninstall Seanime Denshi.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:AppData\\seanime-denshi\",\"$env:LocalAppData\\app.seanime.desktop\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/5rahim/seanime/releases/download/v$version/seanime-denshi-$version_Windows_x64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
