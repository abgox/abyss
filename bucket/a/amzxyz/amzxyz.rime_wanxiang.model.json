{
    "version": "2025.07.15.155010",
    "description": "Rime 小狼毫 - 万象语法模型。Rime Weasel - Wanxiang syntax model.",
    "homepage": "https://github.com/amzxyz/RIME-LMDG",
    "license": {
        "identifier": "CC-BY-4.0",
        "url": "https://github.com/amzxyz/RIME-LMDG/blob/main/LICENSE"
    },
    "depends": "abyss/Rime.Weasel",
    "suggest": {
        "input-schemes": "abyss/amzxyz.rime_wanxiang"
    },
    "notes": [
        "After installation, update, or uninstallation, you need to redeploy in Rime Weasel",
        "Recommended to install the Wanxiang input scheme: abyss/amzxyz.rime_wanxiang"
    ],
    "notes-cn": [
        "安装/更新/卸载后都需要在小狼毫中进行重新部署",
        "推荐安装万象输入方案: abyss/amzxyz.rime_wanxiang"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/amzxyz/RIME-LMDG/releases/download/LTS/wanxiang-lts-zh-hans.gram",
            "hash": "db7375a4dc660dedbc30d303833032aa4c39d75780b01742d2d492c1e44ada5a"
        },
        "arm64": {
            "url": "https://github.com/amzxyz/RIME-LMDG/releases/download/LTS/wanxiang-lts-zh-hans.gram",
            "hash": "db7375a4dc660dedbc30d303833032aa4c39d75780b01742d2d492c1e44ada5a"
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-PreInstall",
        "if($PSUICulture -like 'zh*') {",
        "    Write-Host \"正在将 $app 语法模型复制到 Rime.Weasel 用户文件夹中...\" -ForegroundColor Yellow",
        "}",
        "else {",
        "    Write-Host \"Copying $app syntax model to Rime.Weasel configuration directory...\" -ForegroundColor Yellow",
        "}",
        "$RimeDir = Join-Path (Split-Path $persist_dir -Parent) 'Rime.Weasel'",
        "$RimeDataDir = \"$env:AppData\\Rime\".Replace($env:UserProfile,$RimeDir)",
        "Copy-Item \"$dir\\wanxiang-lts-zh-hans.gram\" $RimeDataDir -Force"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-PostInstall"
    ],
    "pre_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-PreUninstall",
        "A-Require-Admin",
        "if($PSUICulture -like 'zh*') {",
        "    Write-Host \"正在从 Rime.Weasel 用户文件夹中移除 $app 语法模型...\" -ForegroundColor Yellow",
        "}",
        "else {",
        "    Write-Host \"Removing $app syntax model from Rime.Weasel configuration directory...\" -ForegroundColor Yellow",
        "}",
        "Get-Process | Where-Object { $_.Name -eq 'WeaselServer' } | Select-Object -First 1 | Stop-Process -Force -ErrorAction SilentlyContinue",
        "$RimeDir = Join-Path (Split-Path $persist_dir -Parent) 'Rime.Weasel'",
        "$RimeDataDir = \"$env:AppData\\Rime\".Replace($env:UserProfile,$RimeDir)",
        "Remove-Item \"$RimeDataDir\\wanxiang-lts-zh-hans.gram\" -Force -ErrorAction SilentlyContinue"
    ],
    "post_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-PostUninstall"
    ],
    "checkver": {
        "url": "https://api.github.com/repos/amzxyz/RIME-LMDG/releases/tags/LTS",
        "jsonpath": "$.assets[?(@.name == 'wanxiang-lts-zh-hans.gram')].updated_at",
        "regex": "(\\d+)-(\\d+)-(\\d+)T(\\d+):(\\d+):(\\d+)Z",
        "replace": "${1}.${2}.${3}.${4}${5}${6}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/amzxyz/RIME-LMDG/releases/download/LTS/wanxiang-lts-zh-hans.gram"
            },
            "arm64": {
                "url": "https://github.com/amzxyz/RIME-LMDG/releases/download/LTS/wanxiang-lts-zh-hans.gram"
            }
        }
    }
}
