{
    "version": "0.9.0",
    "description": "一个跨平台桌宠 | A cross-platform desktop pet",
    "homepage": "https://github.com/ayangweb/BongoCat",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/ayangweb/BongoCat/releases/download/v0.9.0/BongoCat_0.9.0_x64-setup.exe#/dl.7z",
            "hash": "bb64046137fe59ef0eb8028e500faf271a57597c7d71bd2d22c286feb67c4aa8"
        },
        "arm64": {
            "url": "https://github.com/ayangweb/BongoCat/releases/download/v0.9.0/BongoCat_0.9.0_arm64-setup.exe#/dl.7z",
            "hash": "97a82d7515ec928e0f6257788ab8cc7867f5ee6b0878a7b08c666a16897f24c7"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\bongo-cat.exe",
            "BongoCat"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.ayangweb.BongoCat\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:LocalAppData\\com.ayangweb.BongoCat\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/ayangweb/BongoCat/releases/download/v$version/BongoCat_$version_x64-setup.exe#/dl.7z"
            },
            "arm64": {
                "url": "https://github.com/ayangweb/BongoCat/releases/download/v$version/BongoCat_$version_arm64-setup.exe#/dl.7z"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
