{
    "version": "0.8.2",
    "description": "一个跨平台桌宠 | A cross-platform desktop pet.",
    "homepage": "https://github.com/ayangweb/BongoCat",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/ayangweb/BongoCat/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/ayangweb/BongoCat/releases/download/v0.8.2/BongoCat_0.8.2_x64-setup.exe#/dl.7z",
            "hash": "913bb5eafb515a3801819791154c017f42554a5665ccb15a3272fb64233016fc"
        },
        "arm64": {
            "url": "https://github.com/ayangweb/BongoCat/releases/download/v0.8.2/BongoCat_0.8.2_arm64-setup.exe#/dl.7z",
            "hash": "2d67b8793132978c2a74770fad547932ff1743ba418f552b418aba4939bc1332"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\bongo-cat.exe",
            "BongoCat"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:AppData\\com.ayangweb.BongoCat\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData @(\"$env:LocalAppData\\com.ayangweb.BongoCat\")"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/ayangweb/BongoCat/releases/download/v$version/BongoCat_$version_x64-setup.exe#/dl.7z"
            },
            "arm64": {
                "url": "https://github.com/ayangweb/BongoCat/releases/download/v$version/BongoCat_$version_arm64-setup.exe#/dl.7z"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
