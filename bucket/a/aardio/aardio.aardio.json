{
    "version": "40.75.0",
    "description": "灵活而强大的动态语言 | A flexible and powerful dynamic language.",
    "homepage": "https://www.aardio.com/",
    "license": {
        "identifier": "Freeware"
    },
    "architecture": {
        "64bit": {
            "url": "https://www.aardio.com/download/ide/aardio.7z",
            "hash": "76fb324898992dd36f772eb8cf4d57484a393454c28b96ff1ddd20e40766ba13"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\aardio.exe",
            "aardio"
        ]
    ],
    "persist": [
        [
            "app\\config",
            "config"
        ],
        [
            "app\\project",
            "project"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-TempData \"$env:LocalAppData\\aardio\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://d.aardio.com/ide/check",
        "jsonpath": "$.version"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.aardio.com/download/ide/aardio.7z"
            }
        }
    }
}
