{
    "version": "1.12.5",
    "description": "一个 Markdown 编辑器和阅读器，所见即所得 | A Markdown editor and reader.",
    "homepage": "https://typora.io/",
    "license": {
        "identifier": "Proprietary",
        "url": "https://support.typora.io/License-Agreement/"
    },
    "architecture": {
        "64bit": {
            "url": "https://download.typora.io/windows/typora-setup-x64.exe",
            "hash": "9d15be00ae51082c80cdac8b9060802d76a417c42dbefee0e42dc9fd3a7a7331"
        },
        "arm64": {
            "url": "https://download.typora.io/windows/typora-setup-arm64.exe",
            "hash": "a02c78dcd5e1d77d4d4802b5d46cc24f319ecb789809bd7d473969d5d16e0452"
        }
    },
    "extract_to": "app",
    "innosetup": true,
    "bin": "app\\Typora.exe",
    "shortcuts": [
        [
            "app\\Typora.exe",
            "Typora"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Typora\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://typora.io/releases/stable",
        "regex": "<h2>([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.typora.io/windows/typora-setup-x64.exe"
            },
            "arm64": {
                "url": "https://download.typora.io/windows/typora-setup-arm64.exe"
            }
        }
    }
}
