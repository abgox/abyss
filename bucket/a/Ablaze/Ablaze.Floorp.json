{
    "version": "12.10.1",
    "description": "Floorp 基于 Firefox 构建，是一款具备卓越隐私保护功能和高度灵活性的新型浏览器。 | Floorp is built on Firefox, and is a new browser with excellent privacy & flexibility.",
    "homepage": "https://floorp.app/",
    "license": {
        "identifier": "MPL-2.0"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Ablaze Floorp",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes-cn": [
        "安装目录: $env:ProgramFiles\\Ablaze Floorp",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Floorp-Projects/Floorp/releases/download/v12.10.1/floorp-windows-x86_64.installer.exe",
            "hash": "d895cc5e29ab5b17c53dc5403a33da63fd24d2cc4b7d9f3ea1ec429a5cf9434c"
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:AppData\\Floorp\"",
        "A-Install-Exe -Uninstaller \"$env:ProgramFiles\\Ablaze Floorp\\uninstall\\helper.exe\" -ArgumentList '/S','/PreventRebootRequired=true'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process \"$env:ProgramFiles\\Ablaze Floorp\"",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData \"$env:LocalAppData\\Floorp\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Floorp-Projects/Floorp/releases/download/v$version/floorp-windows-x86_64.installer.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
