{
    "version": "2.0.0-beta.1",
    "description": "一款免费、开源、快速发展的现代文件管理器 (explorer) 应用程序 | A free, open-source, quickly evolving, modern file manager (explorer) app",
    "homepage": "https://sigma-file-manager.vercel.app/",
    "license": {
        "identifier": "Unknown"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/aleksey-hoffman/sigma-file-manager/releases/download/v2.0.0-beta.1/Sigma.File.Manager_2.0.0-beta.1_x64-setup.exe",
            "hash": "f1fa873e18aef1e014f869ea0629798c8d36c697baa5083fd605f8a35517476f"
        }
    },
    "shortcuts": [
        [
            "app\\Sigma file manager.exe",
            "Sigma file manager"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.sigma-file-manager.app\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\com.sigma-file-manager.app\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/aleksey-hoffman/sigma-file-manager/releases/download/v$version/Sigma.File.Manager_$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
