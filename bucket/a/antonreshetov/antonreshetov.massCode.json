{
    "version": "4.4.0",
    "description": "一款面向开发者的免费开源代码片段管理器 | A free and open source code snippet manager for developers",
    "homepage": "https://masscode.io/",
    "license": {
        "identifier": "AGPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/massCodeIO/massCode/releases/download/v4.4.0/massCode-4.4.0-x64.exe",
            "hash": "23af001c48ef0284b7e99a704aa3360a07e245fdafa61e8cc986449b6900a0c7"
        }
    },
    "shortcuts": [
        [
            "app\\massCode.exe",
            "massCode"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\masscode\", \"$home\\massCode\"",
        "A-Install-App -Uninstaller 'app\\Uninstall massCode.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\masscode-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/massCodeIO/massCode/releases/download/v$version/massCode-$version-x64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
