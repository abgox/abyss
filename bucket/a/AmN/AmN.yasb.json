{
    "version": "1.8.7",
    "description": "一款用 Python 编写的具有高度可配置性的 Windows 状态栏 | A highly configurable Windows status bar written in Python",
    "homepage": "https://yasb.dev/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/amnweb/yasb/releases/download/v1.8.7/yasb-1.8.7-x64.msi",
            "hash": "dd5286968499c6d596107f107e28f73b8015f86737e731cc8d3de78a2547ab9b"
        },
        "arm64": {
            "url": "https://github.com/amnweb/yasb/releases/download/v1.8.7/yasb-1.8.7-aarch64.msi",
            "hash": "d78daecf62b922b0b86a557c58c21024ab25d70b0fd8ea16eacf40f4be108c4f"
        }
    },
    "extract_to": "app",
    "bin": [
        "app\\yasb.exe",
        "app\\yasbc.exe",
        "app\\yasb_themes.exe"
    ],
    "shortcuts": [
        [
            "app\\yasb.exe",
            "YASB"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$home\\.config\\yasb\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/amnweb/yasb/releases/download/v$version/yasb-$version-x64.msi"
            },
            "arm64": {
                "url": "https://github.com/amnweb/yasb/releases/download/v$version/yasb-$version-aarch64.msi"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
