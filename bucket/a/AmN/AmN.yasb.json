{
    "version": "1.9.0",
    "description": "一款用 Python 编写的具有高度可配置性的 Windows 状态栏 | A highly configurable Windows status bar written in Python",
    "homepage": "https://yasb.dev/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/amnweb/yasb/releases/download/v1.9.0/yasb-1.9.0-x64.msi",
            "hash": "04e1c46a0a50025e91b57bf0e17aa93c4041ef23c4b8f1d2f0216113ab328675"
        },
        "arm64": {
            "url": "https://github.com/amnweb/yasb/releases/download/v1.9.0/yasb-1.9.0-aarch64.msi",
            "hash": "1fb13b4d0b115d1e773d2d15237efccd6950baa7174a92eb85d057392cce6683"
        }
    },
    "extract_to": "app",
    "bin": [
        "app\\yasb.exe",
        "app\\yasbc.exe",
        "app\\yasb_themes.exe"
    ],
    "shortcuts": [
        [
            "app\\yasb.exe",
            "YASB"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$home\\.config\\yasb\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/amnweb/yasb/releases/download/v$version/yasb-$version-x64.msi"
            },
            "arm64": {
                "url": "https://github.com/amnweb/yasb/releases/download/v$version/yasb-$version-aarch64.msi"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
