{
    "version": "1.8.8",
    "description": "一款用 Python 编写的具有高度可配置性的 Windows 状态栏 | A highly configurable Windows status bar written in Python",
    "homepage": "https://yasb.dev/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/amnweb/yasb/releases/download/v1.8.8/yasb-1.8.8-x64.msi",
            "hash": "3e87150c202993da6727b35897c1b1b7dbdeb4e32d21e08c05ec9f70f0c21675"
        },
        "arm64": {
            "url": "https://github.com/amnweb/yasb/releases/download/v1.8.8/yasb-1.8.8-aarch64.msi",
            "hash": "07706487bfc4673b08898dd75e4537ee1e39acded18f897887d0e7228a21a81e"
        }
    },
    "extract_to": "app",
    "bin": [
        "app\\yasb.exe",
        "app\\yasbc.exe",
        "app\\yasb_themes.exe"
    ],
    "shortcuts": [
        [
            "app\\yasb.exe",
            "YASB"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$home\\.config\\yasb\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/amnweb/yasb/releases/download/v$version/yasb-$version-x64.msi"
            },
            "arm64": {
                "url": "https://github.com/amnweb/yasb/releases/download/v$version/yasb-$version-aarch64.msi"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
