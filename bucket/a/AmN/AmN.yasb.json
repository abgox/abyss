{
    "version": "1.8.9",
    "description": "一款用 Python 编写的具有高度可配置性的 Windows 状态栏 | A highly configurable Windows status bar written in Python",
    "homepage": "https://yasb.dev/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/amnweb/yasb/releases/download/v1.8.9/yasb-1.8.9-x64.msi",
            "hash": "299f07871673a50962992f3c08551ff322efd6f7a3d2871912ab652a9d116df4"
        },
        "arm64": {
            "url": "https://github.com/amnweb/yasb/releases/download/v1.8.9/yasb-1.8.9-aarch64.msi",
            "hash": "e06c8d3330a277bebaf3f1958a2f0e4052ff4aa926716b9dd16bd6762c55f14e"
        }
    },
    "extract_to": "app",
    "bin": [
        "app\\yasb.exe",
        "app\\yasbc.exe",
        "app\\yasb_themes.exe"
    ],
    "shortcuts": [
        [
            "app\\yasb.exe",
            "YASB"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$home\\.config\\yasb\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/amnweb/yasb/releases/download/v$version/yasb-$version-x64.msi"
            },
            "arm64": {
                "url": "https://github.com/amnweb/yasb/releases/download/v$version/yasb-$version-aarch64.msi"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
