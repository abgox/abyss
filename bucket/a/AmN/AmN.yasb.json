{
    "version": "1.8.6",
    "description": "一款用 Python 编写的具有高度可配置性的 Windows 状态栏。 | A highly configurable Windows status bar written in Python.",
    "homepage": "https://yasb.dev/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/amnweb/yasb/releases/download/v1.8.6/yasb-1.8.6-x64.msi",
            "hash": "5b008bd5d54f8b45c4a7a234329275010d0c7427e8d6362766a54e15a27e008d"
        },
        "arm64": {
            "url": "https://github.com/amnweb/yasb/releases/download/v1.8.6/yasb-1.8.6-aarch64.msi",
            "hash": "17bb8fe97bac37cf364706fb3cb440505258bfe277e62d2510de728f3c0c5e33"
        }
    },
    "extract_to": "app",
    "bin": [
        "app\\yasb.exe",
        "app\\yasbc.exe",
        "app\\yasb_themes.exe"
    ],
    "shortcuts": [
        [
            "app\\yasb.exe",
            "YASB"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$home\\.config\\yasb\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/amnweb/yasb/releases/download/v$version/yasb-$version-x64.msi"
            },
            "arm64": {
                "url": "https://github.com/amnweb/yasb/releases/download/v$version/yasb-$version-aarch64.msi"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
