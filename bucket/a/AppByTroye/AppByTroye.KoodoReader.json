{
    "version": "2.2.1",
    "description": "一个跨平台的电子书阅读器 | A cross-platform ebook reader.",
    "homepage": "https://koodo.960960.xyz/",
    "license": {
        "identifier": "AGPL-3.0-only",
        "url": "https://github.com/koodo-reader/koodo-reader/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/koodo-reader/koodo-reader/releases/download/v2.2.1/Koodo-Reader-2.2.1-x64-Win.zip",
            "hash": "4bafdfc84327fe90e8d1dfcceab39e77eafdfa361a8154515fcafeaa69d8f347"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\Koodo Reader.exe",
            "Koodo Reader"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:AppData\\koodo-reader\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/koodo-reader/koodo-reader",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/koodo-reader/koodo-reader/releases/download/v$version/Koodo-Reader-$version-x64-Win.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
