{
    "version": "0.10.6",
    "description": "一个开源的 Notion 替代品，数据和定制由你掌控 | An open-source alternative to Notion. You are in charge of your data and customizations.",
    "homepage": "https://www.appflowy.io/",
    "license": {
        "identifier": "AGPL-3.0-only",
        "url": "https://github.com/AppFlowy-IO/AppFlowy/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/AppFlowy-IO/AppFlowy/releases/download/0.10.6/AppFlowy-0.10.6-windows-x86_64.zip",
            "hash": "c08a232e32bb0393e696417421983a8225ccf65fc8aa92aea6058cd2e87acd07"
        }
    },
    "extract_dir": "AppFlowy",
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\AppFlowy.exe",
            "AppFlowy"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:AppData\\io.appflowy\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/AppFlowy-IO/AppFlowy",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/AppFlowy-IO/AppFlowy/releases/download/$version/AppFlowy-$version-windows-x86_64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
