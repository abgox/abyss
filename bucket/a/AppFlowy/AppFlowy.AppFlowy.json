{
    "version": "0.10.9",
    "description": "一个开源的 Notion 替代品，数据和定制由你掌控 | An open-source alternative to Notion. You are in charge of your data and customizations.",
    "homepage": "https://www.appflowy.io/",
    "license": {
        "identifier": "AGPL-3.0-only",
        "url": "https://github.com/AppFlowy-IO/AppFlowy/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/AppFlowy-IO/AppFlowy/releases/download/0.10.9/AppFlowy-0.10.9-windows-x86_64.zip",
            "hash": "55cd7b5c727617898be7a3c4dcb8d033f4a49025b674e7b989f6f96c5c3be263"
        }
    },
    "extract_dir": "AppFlowy",
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\AppFlowy.exe",
            "AppFlowy"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\io.appflowy\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/AppFlowy-IO/AppFlowy/releases/download/$version/AppFlowy-$version-windows-x86_64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
