{
    "version": "0.20.0",
    "description": "一款全面的生产力工具，旨在帮助你管理任务、培养新习惯并优化时间。 | A comprehensive productivity app designed to help you manage tasks, develop new habits, and optimize your time.",
    "homepage": "https://whph.ahmetcetinkaya.me/",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/ahmet-cetinkaya/whph/releases/download/v0.20.0/whph-v0.20.0-windows-setup.exe",
            "hash": "480fb571f9ab995d6a4ce980ab00558b3dc0693ab7f4a4b8b785654a7a99cac9"
        }
    },
    "shortcuts": [
        [
            "app\\whph.exe",
            "WHPH"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\whph\"",
        "A-Install-Inno"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Inno"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/ahmet-cetinkaya/whph/releases/download/v$version/whph-v$version-windows-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
