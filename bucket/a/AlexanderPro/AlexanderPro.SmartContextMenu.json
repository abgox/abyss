{
    "version": "1.7.2",
    "description": "系统中所有窗口的智能上下文菜单 | Smart context menu for all windows in the system.",
    "homepage": "https://github.com/AlexanderPro/SmartContextMenu",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/AlexanderPro/SmartContextMenu/releases/download/v1.7.2/SmartContextMenu_v1.7.2.zip",
            "hash": "957ba30cedd92e90d66fdb6d565d180e4b153379da7d29a6d512c5485c36bf30"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\SmartContextMenu.exe",
            "SmartContextMenu"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\SmartContextMenu\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/AlexanderPro/SmartContextMenu/releases/download/v$version/SmartContextMenu_v$version.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
