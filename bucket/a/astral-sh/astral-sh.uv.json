{
    "version": "0.9.17",
    "description": "一个极其快速的 Python 包和项目管理器，用 Rust 编写 | An extremely fast Python package and project manager, written in Rust.",
    "homepage": "https://docs.astral.sh/uv/",
    "license": {
        "identifier": "Apache-2.0|MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/astral-sh/uv/releases/download/0.9.17/uv-x86_64-pc-windows-msvc.zip",
            "hash": "ebc76197bf3e1a58f9dac6f70f49b0ebd3e6907ab35289ce228bce5ba8a3f201"
        },
        "arm64": {
            "url": "https://github.com/astral-sh/uv/releases/download/0.9.17/uv-aarch64-pc-windows-msvc.zip",
            "hash": "28423a27ad1d82347c00411a6792567119b3c1cfe775d3312c0e08a6b489be5b"
        }
    },
    "extract_to": "app",
    "env_add_path": "$env:UserProfile\\.local\\bin",
    "env_set": {
        "UV_PYTHON_INSTALL_DIR": "$persist_dir\\AppData\\Roaming\\uv\\python",
        "UV_TOOL_DIR": "$persist_dir\\AppData\\Roaming\\uv\\tools",
        "UV_CACHE_DIR": "$persist_dir\\AppData\\Local\\uv\\cache"
    },
    "bin": [
        "app\\uv.exe",
        "app\\uvx.exe",
        "app\\uvw.exe"
    ],
    "persist": [
        "AppData\\Roaming\\uv\\python",
        "AppData\\Roaming\\uv\\tools",
        "AppData\\Local\\uv\\cache"
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/astral-sh/uv/releases/download/$version/uv-x86_64-pc-windows-msvc.zip"
            },
            "arm64": {
                "url": "https://github.com/astral-sh/uv/releases/download/$version/uv-aarch64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
