{
    "version": "0.9.21",
    "description": "一个极其快速的 Python 包和项目管理器，用 Rust 编写 | An extremely fast Python package and project manager, written in Rust.",
    "homepage": "https://docs.astral.sh/uv/",
    "license": {
        "identifier": "Apache-2.0|MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/astral-sh/uv/releases/download/0.9.21/uv-x86_64-pc-windows-msvc.zip",
            "hash": "d27952e73183ef8f6ee8c2a50cf8b3f2e08e01b6a9279a00a85cb261ea8d8337"
        },
        "arm64": {
            "url": "https://github.com/astral-sh/uv/releases/download/0.9.21/uv-aarch64-pc-windows-msvc.zip",
            "hash": "54f66a44108b1b68583c9da0a515195d011189874ec9547710c032801726e042"
        }
    },
    "extract_to": "app",
    "env_set": {
        "UV_PYTHON_INSTALL_DIR": "$persist_dir\\AppData\\Roaming\\uv\\python",
        "UV_TOOL_DIR": "$persist_dir\\AppData\\Roaming\\uv\\tools",
        "UV_CACHE_DIR": "$persist_dir\\AppData\\Local\\uv\\cache"
    },
    "bin": [
        "app\\uv.exe",
        "app\\uvx.exe",
        "app\\uvw.exe"
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Add-Path \"$env:UserProfile\\.local\\bin\"",
        "A-New-LinkDirectory \"$env:AppData\\uv\", \"$env:LocalAppData\\uv\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Remove-Link",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/astral-sh/uv/releases/download/$version/uv-x86_64-pc-windows-msvc.zip"
            },
            "arm64": {
                "url": "https://github.com/astral-sh/uv/releases/download/$version/uv-aarch64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
