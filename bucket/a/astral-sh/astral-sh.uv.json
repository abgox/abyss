{
    "version": "0.10.0",
    "description": "一个极其快速的 Python 包和项目管理器，用 Rust 编写 | An extremely fast Python package and project manager, written in Rust",
    "homepage": "https://docs.astral.sh/uv/",
    "license": {
        "identifier": "Apache-2.0|MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/astral-sh/uv/releases/download/0.10.0/uv-x86_64-pc-windows-msvc.zip",
            "hash": "4037b444541f695cd2eb93188a9346de3e334af562381411deade0a31c7bf898"
        },
        "arm64": {
            "url": "https://github.com/astral-sh/uv/releases/download/0.10.0/uv-aarch64-pc-windows-msvc.zip",
            "hash": "614dd3c409d7fb5a98b516d532c98db9b7799a23fb450150e3784338a9ebd903"
        }
    },
    "extract_to": "app",
    "env_set": {
        "UV_PYTHON_INSTALL_DIR": "$persist_dir\\AppData\\Roaming\\uv\\python",
        "UV_TOOL_DIR": "$persist_dir\\AppData\\Roaming\\uv\\tools",
        "UV_CACHE_DIR": "$persist_dir\\AppData\\Local\\uv\\cache"
    },
    "bin": [
        "app\\uv.exe",
        "app\\uvx.exe",
        "app\\uvw.exe"
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Add-Path \"$home\\.local\\bin\"",
        "A-New-LinkDirectory \"$env:AppData\\uv\", \"$env:LocalAppData\\uv\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Remove-Link",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/astral-sh/uv/releases/download/$version/uv-x86_64-pc-windows-msvc.zip"
            },
            "arm64": {
                "url": "https://github.com/astral-sh/uv/releases/download/$version/uv-aarch64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
