{
    "version": "2.0.20",
    "description": "AutoHotkey(AHK) - 一款免费的开源宏创建和自动化软件工具，允许用户自动执行重复性任务 | AutoHotkey(AHK) - A free, open source macro-creation and automation software utility that allows users to automate repetitive tasks",
    "homepage": "https://github.com/AutoHotkey/AutoHotkey",
    "license": {
        "identifier": "GPL-2.0"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\AutoHotkey",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:ProgramFiles\\AutoHotkey",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/AutoHotkey/AutoHotkey/releases/download/v2.0.20/AutoHotkey_2.0.20_setup.exe",
            "hash": "7f70bac4dba20aa55c12e59a7bbdec748601af864d47c3ee892635216b76f89e"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:ProgramFiles\\AutoHotkey\\Compiler\",\"$home\\Documents\\AutoHotkey\"",
        "A-Ensure-Directory \"$persist_dir\\Documents\\AutoHotkey\\lib\"",
        "A-Install-App -ArgumentList '/silent'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process \"$env:ProgramFiles\\AutoHotkey\"",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:ProgramFiles\\AutoHotkey\", \"$env:ProgramData\\Microsoft\\Windows\\Start Menu\\Programs\\AutoHotkey Dash.lnk\",\"$env:ProgramData\\Microsoft\\Windows\\Start Menu\\Programs\\AutoHotkey Window Spy.lnk\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/AutoHotkey/AutoHotkey/releases/download/v$version/AutoHotkey_$version_setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
