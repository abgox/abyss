{
    "version": "8.4.4",
    "description": "一款适用于所有平台、功能丰富的 GraphQL 客户端 | A beautiful feature-rich GraphQL Client for all platforms.",
    "homepage": "https://altairgraphql.dev/",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/altair-graphql/altair/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/altair-graphql/altair/releases/download/v8.4.4/altair_8.4.4_x64_win.exe",
            "hash": "a2503b78a98af182ac1c8e44644661e28688ecfb34df49dd9c16ba9ea413e75c"
        }
    },
    "shortcuts": [
        [
            "app\\Altair GraphQL Client.exe",
            "Altair GraphQL Client"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Altair GraphQL Client\"",
        "A-Install-Exe -Uninstaller 'app\\Uninstall Altair GraphQL Client.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData \"$env:LocalAppData\\altair-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/altair-graphql/altair/releases/download/v$version/altair_$version_x64_win.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
