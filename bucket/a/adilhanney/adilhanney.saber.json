{
    "version": "1.29.3",
    "description": "一款专为手写设计的笔记应用。 | The notes app built for handwriting.",
    "homepage": "https://saber.adil.hanney.org/",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/saber-notes/saber/releases/download/v1.29.3/SaberInstaller_v1.29.3.exe",
            "hash": "85abe716f5ae8bf4423e9c101d05db59970bf9a3bee417b8967034911fa9eea2"
        }
    },
    "shortcuts": [
        [
            "app\\saber.exe",
            "Saber"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.adilhanney\\Saber\", \"$env:UserProfile\\Documents\\Saber\"",
        "A-Install-Inno"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Inno"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/saber-notes/saber/releases/download/v$version/SaberInstaller_v$version.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
