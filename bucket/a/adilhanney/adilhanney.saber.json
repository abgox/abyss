{
    "version": "1.31.1",
    "description": "一款专为手写设计的笔记应用 | The notes app built for handwriting",
    "homepage": "https://saber.adil.hanney.org/",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/saber-notes/saber/releases/download/v1.31.1/SaberInstaller_v1.31.1.exe",
            "hash": "f7c6e4c93efba31bfc5b68ba8523f516738d5597b5424ffe0b15d4fb09523d8c"
        }
    },
    "shortcuts": [
        [
            "app\\saber.exe",
            "Saber"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.adilhanney\\Saber\", \"$home\\Documents\\Saber\"",
        "A-Install-Inno"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Inno"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/saber-notes/saber/releases/download/v$version/SaberInstaller_v$version.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
