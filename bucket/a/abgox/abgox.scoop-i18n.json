{
    "version": "2025.10.24.135002",
    "description": "Scoop 的国际化解决方案(语言包)，提升不同语言的用户使用 Scoop 时的体验 | An internationalization tool (language pack) for Scoop helps users of different languages use Scoop more easily.",
    "homepage": "https://scoop-i18n.abgox.com/",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/abgox/scoop-i18n/blob/main/license"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/abgox/scoop-i18n/archive/a0555d47e0f46745ba846c15faa83cd1afaf2e48.zip",
            "hash": "73b8e83dbe9d181ccd7e9ffb19fe5082860bd7eb7751e33ddd5417977cc3ebbd"
        },
        "arm64": {
            "url": "https://github.com/abgox/scoop-i18n/archive/a0555d47e0f46745ba846c15faa83cd1afaf2e48.zip",
            "hash": "73b8e83dbe9d181ccd7e9ffb19fe5082860bd7eb7751e33ddd5417977cc3ebbd"
        }
    },
    "extract_dir": "scoop-i18n-a0555d47e0f46745ba846c15faa83cd1afaf2e48",
    "extract_to": "app",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Ensure-Directory \"$dir\\app\\original\"",
        "A-Ensure-Directory \"$dir\\app\\shims\"",
        "Get-ChildItem \"$bucketsdir\\$bucket\\extras\\$app\" | ForEach-Object {",
        "    Move-Item \"$scoopdir\\shims\\$($_.Name)\" \"$dir\\app\\original\"",
        "    $content = Get-Content $_.FullName -Raw",
        "    $content = $content.Replace('${scoop.ps1}', \"$scoopdir\\apps\\scoop\\current\\bin\\scoop.ps1\")",
        "    $content = $content.Replace('${scoop-i18n.ps1}', \"$scoopdir\\apps\\$app\\current\\app\\scoop-i18n.ps1\")",
        "    [System.IO.File]::WriteAllText(\"$dir\\app\\shims\\$($_.Name)\", ($content -join [System.Environment]::NewLine), [System.Text.UTF8Encoding]::new($false))",
        "}",
        "Get-ChildItem \"$dir\\app\\shims\" | ForEach-Object {",
        "    Copy-Item $_.FullName \"$scoopdir\\shims\" -Force",
        "}"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "@{ configFile = $configFile } | ConvertTo-Json -Depth 100 | Out-File \"$dir\\app\\data.json\" -Encoding utf8 -Force",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "Get-ChildItem \"$dir\\app\\original\" | ForEach-Object {",
        "    Move-Item $_.FullName \"$scoopdir\\shims\" -Force",
        "}"
    ],
    "post_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://api.github.com/repos/abgox/scoop-i18n/commits?per_page=1",
        "regex": "sha\":\\s*?\"(?<sha>[^\"]+).*?\"date\":\\s*?\"(\\d+)-(\\d+)-(\\d+)T(\\d+):(\\d+):(\\d+)",
        "replace": "${1}.${2}.${3}.${4}${5}${6}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/abgox/scoop-i18n/archive/$matchSha.zip"
            },
            "arm64": {
                "url": "https://github.com/abgox/scoop-i18n/archive/$matchSha.zip"
            }
        },
        "extract_dir": "scoop-i18n-$matchSha"
    }
}
