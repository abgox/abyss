{
    "version": "2025.09.27.055920",
    "description": "Scoop 的国际化解决方案(语言包)，提升不同语言的用户使用 Scoop 时的体验。An internationalization tool (language pack) for Scoop helps users of different languages use Scoop more easily.",
    "homepage": "https://scoop-i18n.abgox.com",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/abgox/scoop-i18n/blob/main/license"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/abgox/scoop-i18n/archive/48bf7e67f2504111b947ed1902a4a2570394722a.zip",
            "hash": "3d54b75b9fbd8e74611623e7b6c5a43500d984151b3c7b79fe31ae751a82dbca"
        },
        "arm64": {
            "url": "https://github.com/abgox/scoop-i18n/archive/48bf7e67f2504111b947ed1902a4a2570394722a.zip",
            "hash": "3d54b75b9fbd8e74611623e7b6c5a43500d984151b3c7b79fe31ae751a82dbca"
        }
    },
    "extract_dir": "scoop-i18n-48bf7e67f2504111b947ed1902a4a2570394722a",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Ensure-Directory \"$dir\\original\"",
        "A-Ensure-Directory \"$dir\\shims\"",
        "Get-ChildItem \"$bucketsdir\\$bucket\\extras\\$app\" | ForEach-Object {",
        "    Move-Item \"$scoopdir\\shims\\$($_.Name)\" \"$dir\\original\"",
        "    $content = Get-Content $_.FullName -Raw",
        "    $content = $content.Replace('${scoop.ps1}', \"$scoopdir\\apps\\scoop\\current\\bin\\scoop.ps1\")",
        "    $content = $content.Replace('${scoop-i18n.ps1}', \"$scoopdir\\apps\\$app\\current\\scoop-i18n.ps1\")",
        "    [System.IO.File]::WriteAllText(\"$dir\\shims\\$($_.Name)\", ($content -join [System.Environment]::NewLine), [System.Text.UTF8Encoding]::new($false))",
        "}",
        "Get-ChildItem \"$dir\\shims\" | ForEach-Object {",
        "    Copy-Item $_.FullName \"$scoopdir\\shims\" -Force",
        "}"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "if (!$ScoopConfig.root_path) {",
        "   $ScoopConfig | Add-Member -MemberType NoteProperty -Name 'root_path' -Value $scoopdir",
        "}",
        "$ScoopConfig | ConvertTo-Json -Depth 100 | Out-File \"$dir\\config.json\" -Encoding utf8 -Force",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "Get-ChildItem \"$dir\\original\" | ForEach-Object {",
        "    Move-Item $_.FullName \"$scoopdir\\shims\" -Force",
        "}"
    ],
    "post_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://api.github.com/repos/abgox/scoop-i18n/commits?per_page=1",
        "regex": "sha\":\\s*?\"(?<sha>[^\"]+).*?\"date\":\\s*?\"(\\d+)-(\\d+)-(\\d+)T(\\d+):(\\d+):(\\d+)",
        "replace": "${1}.${2}.${3}.${4}${5}${6}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/abgox/scoop-i18n/archive/$matchSha.zip"
            },
            "arm64": {
                "url": "https://github.com/abgox/scoop-i18n/archive/$matchSha.zip"
            }
        },
        "extract_dir": "scoop-i18n-$matchSha"
    }
}
