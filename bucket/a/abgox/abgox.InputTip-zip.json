{
    "version": "2025.10.09",
    "description": "(zip 版本) 一个输入法状态管理工具: 实时提示(鼠标方案/符号方案) + 状态切换(窗口触发/热键触发) | (zip version) An input method state management tool: real-time tip(mouse scheme/symbol scheme) + state switching (window trigger/hotkey trigger)",
    "homepage": "https://inputtip.abgox.com/",
    "license": {
        "identifier": "AGPL-3.0-only",
        "url": "https://github.com/abgox/InputTip/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/abgox/InputTip/releases/download/v2025.10.09/InputTip.zip",
            "hash": "ca8c82378b871154fb4f1b4f12c1cb5dcff71338a2b35674db8fe7a6e918e137"
        }
    },
    "extract_dir": "InputTip-main",
    "extract_to": "app",
    "bin": [
        [
            "app\\src\\AutoHotkey\\AutoHotkey64.exe",
            "InputTip",
            "$dir\\app\\src\\InputTip.ahk"
        ]
    ],
    "shortcuts": [
        [
            "app\\src\\AutoHotkey\\AutoHotkey64.exe",
            "InputTip",
            "\"$dir\\app\\src\\InputTip.ahk\"",
            "app\\src\\InputTipIcon\\default\\app.ico"
        ]
    ],
    "persist": [
        [
            "app\\src\\InputTip.ini",
            "InputTip.ini"
        ],
        [
            "app\\src\\InputTipSymbol",
            "InputTipSymbol"
        ],
        [
            "app\\src\\InputTipCursor",
            "InputTipCursor"
        ],
        [
            "app\\src\\InputTipIcon",
            "InputTipIcon"
        ],
        [
            "app\\src\\plugins",
            "plugins"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Copy-Item \"$bucketsdir\\$bucket\\extras\\$app\\InputTip.ini\" \"$persist_dir\\InputTip.ini\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/abgox/InputTip",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/abgox/InputTip/releases/download/v$version/InputTip.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
