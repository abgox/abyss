{
    "version": "6.0.0",
    "description": "一个补全管理器，旨在为 PowerShell 带来更出色、更简便的补全体验。 | A completion manager for a better and simpler tab-completion experience in PowerShell.",
    "homepage": "https://pscompletions.abgox.com/",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/abgox/PSCompletions/blob/main/LICENSE"
    },
    "notes": [
        "Use the module: Import-Module PSCompletions",
        "Add it to your $Profile to make it permanent."
    ],
    "notes-cn": [
        "使用此模块: Import-Module PSCompletions",
        "可以将它写入 $Profile 中，就不需要每次都导入了"
    ],
    "architecture": {
        "64bit": {
            "url": "https://cdn.powershellgallery.com/packages/pscompletions.6.0.0.nupkg",
            "hash": "81b31d4e4eca574a711b010e1cb344f7f1f8192040444ad6da6986eef2183ea7"
        },
        "arm64": {
            "url": "https://cdn.powershellgallery.com/packages/pscompletions.6.0.0.nupkg",
            "hash": "81b31d4e4eca574a711b010e1cb344f7f1f8192040444ad6da6986eef2183ea7"
        }
    },
    "psmodule": {
        "name": "PSCompletions"
    },
    "persist": [
        "completions",
        "data.json"
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "Remove-Item \"$dir\\_rels\", \"$dir\\package\", \"$dir\\*Content*.xml\" -Recurse",
        "A-New-PersistFile \"$persist_dir\\data.json\" -Content '{}'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://raw.githubusercontent.com/abgox/PSCompletions/refs/heads/main/module/version.json",
        "jsonpath": "$.version"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.powershellgallery.com/packages/pscompletions.$version.nupkg"
            },
            "arm64": {
                "url": "https://cdn.powershellgallery.com/packages/pscompletions.$version.nupkg"
            }
        }
    }
}
