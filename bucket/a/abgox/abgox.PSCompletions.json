{
    "version": "5.11.0",
    "description": "一个补全管理器，旨在为 PowerShell 带来更出色、更简便的补全体验。 | A completion manager for a better and simpler tab-completion experience in PowerShell.",
    "homepage": "https://pscompletions.abgox.com/",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/abgox/PSCompletions/blob/main/LICENSE"
    },
    "notes": [
        "Use the module: Import-Module PSCompletions",
        "Add it to your $Profile to make it permanent."
    ],
    "notes-cn": [
        "使用此模块: Import-Module PSCompletions",
        "可以将它写入 $Profile 中，就不需要每次都导入了"
    ],
    "architecture": {
        "64bit": {
            "url": "https://cdn.powershellgallery.com/packages/pscompletions.5.11.0.nupkg",
            "hash": "13b07f858f3b3f480c6beb81f562c746361403a0ea4e6a9781f0c22e0a8eb5ab"
        },
        "arm64": {
            "url": "https://cdn.powershellgallery.com/packages/pscompletions.5.11.0.nupkg",
            "hash": "13b07f858f3b3f480c6beb81f562c746361403a0ea4e6a9781f0c22e0a8eb5ab"
        }
    },
    "psmodule": {
        "name": "PSCompletions"
    },
    "persist": [
        "completions",
        "data.json"
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "Remove-Item \"$dir\\_rels\", \"$dir\\package\", \"$dir\\*Content*.xml\" -Recurse",
        "A-New-PersistFile \"$persist_dir\\data.json\" -Content '{}'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/abgox/PSCompletions",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.powershellgallery.com/packages/pscompletions.$version.nupkg"
            },
            "arm64": {
                "url": "https://cdn.powershellgallery.com/packages/pscompletions.$version.nupkg"
            }
        }
    }
}
