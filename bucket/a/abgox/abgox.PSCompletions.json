{
    "version": "6.4.0",
    "description": "一个补全管理器，旨在为 PowerShell 带来更出色、更简便的 Tab 补全体验 | A completion manager for a better and simpler tab-completion experience in PowerShell",
    "homepage": "https://pscompletions.abgox.com/",
    "license": {
        "identifier": "MIT"
    },
    "notes": [
        "Use the module: 'Import-Module PSCompletions'",
        "Add it to your $Profile to make it permanent."
    ],
    "notes_cn": [
        "使用此模块: Import-Module PSCompletions",
        "可以将它写入 $Profile 中，就不需要每次都导入了"
    ],
    "architecture": {
        "64bit": {
            "url": "https://cdn.powershellgallery.com/packages/pscompletions.6.4.0.nupkg",
            "hash": "47294f774ba3ab01667523737e93846f9d49ea03178cc5a42c215d7ec3052009"
        },
        "arm64": {
            "url": "https://cdn.powershellgallery.com/packages/pscompletions.6.4.0.nupkg",
            "hash": "47294f774ba3ab01667523737e93846f9d49ea03178cc5a42c215d7ec3052009"
        }
    },
    "psmodule": {
        "name": "PSCompletions"
    },
    "persist": [
        "completions",
        "data.json"
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-File \"$persist_dir\\data.json\" -Content '{}'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "if (Test-Path \"$dir\\completions.original\") {",
        "    Get-ChildItem \"$dir\\completions.original\" | Copy-Item -Destination \"$dir\\completions\" -Recurse -Force",
        "}",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://www.powershellgallery.com/packages/pscompletions",
        "regex": "<h2>([\\d.]+)</h2>"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.powershellgallery.com/packages/pscompletions.$version.nupkg"
            },
            "arm64": {
                "url": "https://cdn.powershellgallery.com/packages/pscompletions.$version.nupkg"
            }
        }
    }
}
