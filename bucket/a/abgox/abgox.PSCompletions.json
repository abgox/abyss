{
    "version": "6.3.0",
    "description": "一个补全管理器，旨在为 PowerShell 带来更出色、更简便的 Tab 补全体验。 | A completion manager for a better and simpler tab-completion experience in PowerShell.",
    "homepage": "https://pscompletions.abgox.com/",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/abgox/PSCompletions/blob/main/LICENSE"
    },
    "notes": [
        "Use the module: 'Import-Module PSCompletions'",
        "Add it to your $Profile to make it permanent."
    ],
    "notes-cn": [
        "使用此模块: Import-Module PSCompletions",
        "可以将它写入 $Profile 中，就不需要每次都导入了"
    ],
    "architecture": {
        "64bit": {
            "url": "https://cdn.powershellgallery.com/packages/pscompletions.6.3.0.nupkg",
            "hash": "8b646c88e3026aaf74980277a184084bdb48fd1d433a25d7ec58a04eda91bf03"
        },
        "arm64": {
            "url": "https://cdn.powershellgallery.com/packages/pscompletions.6.3.0.nupkg",
            "hash": "8b646c88e3026aaf74980277a184084bdb48fd1d433a25d7ec58a04eda91bf03"
        }
    },
    "psmodule": {
        "name": "PSCompletions"
    },
    "persist": [
        "completions",
        "data.json"
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-File \"$persist_dir\\data.json\" -Content '{}'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "if (Test-Path \"$dir\\completions.original\") {",
        "    Get-ChildItem \"$dir\\completions.original\" | Copy-Item -Destination \"$dir\\completions\" -Recurse -Force",
        "}",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://raw.githubusercontent.com/abgox/PSCompletions/refs/heads/main/module/version.json",
        "jsonpath": "$.version"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.powershellgallery.com/packages/pscompletions.$version.nupkg"
            },
            "arm64": {
                "url": "https://cdn.powershellgallery.com/packages/pscompletions.$version.nupkg"
            }
        }
    }
}
