{
    "version": "0.2.2",
    "description": "一款高颜值的本地音乐播放器 | A pretty local music player.",
    "homepage": "https://github.com/asxez/MusicBox",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/asxez/MusicBox/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/asxez/MusicBox/releases/download/0.2.2/MusicBox-setup-0.2.2.exe",
            "hash": "97709eb027879d69a7a1261e7da9963c6147c2a438fe4a562189e6ddf2f1e437"
        }
    },
    "shortcuts": [
        [
            "app\\MusicBox.exe",
            "MusicBox"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:AppData\\musicbox\")",
        "A-Install-Exe -Uninstaller 'app\\Uninstall MusicBox.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData @(\"$env:LocalAppData\\musicbox-updater\")"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/asxez/MusicBox",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/asxez/MusicBox/releases/download/$version/MusicBox-setup-$version.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
