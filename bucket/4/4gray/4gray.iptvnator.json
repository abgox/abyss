{
    "version": "0.17.1",
    "description": "一个支持 IPTV 播放列表播放 (m3u、m3u8) 的视频播放器应用程序 | A video player application that provides support for the playback of IPTV playlists (m3u, m3u8).",
    "homepage": "https://iptvnator.vercel.app/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/4gray/iptvnator/releases/download/v0.17.1/iptvnator-0.17.1-windows-x64-setup.exe",
            "hash": "e6ce8031f231c8a6e89489ea63cbb44def658fcec537c5aef947f75d8d4660b0"
        }
    },
    "shortcuts": [
        [
            "app\\iptvnator.exe",
            "IPTVnator"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\iptvnator\"",
        "A-Install-App -Uninstaller 'app\\Uninstall IPTVnator.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\iptvnator-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/4gray/iptvnator/releases/download/v$version/iptvnator-$version-windows-x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
