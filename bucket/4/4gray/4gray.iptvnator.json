{
    "version": "0.17.0",
    "description": "一个支持 IPTV 播放列表播放 (m3u、m3u8) 的视频播放器应用程序 | A video player application that provides support for the playback of IPTV playlists (m3u, m3u8).",
    "homepage": "https://iptvnator.vercel.app/",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/4gray/iptvnator/blob/master/LICENSE.md"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/4gray/iptvnator/releases/download/v0.17.0/iptvnator-0.17.0-windows-x64-setup.exe",
            "hash": "78db0da6d4231893f468929a04b2a03778a3df22f7ab4fa8837087dcc2d86533"
        }
    },
    "shortcuts": [
        [
            "app\\iptvnator.exe",
            "IPTVnator"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\iptvnator\"",
        "A-Install-Exe -Uninstaller 'app\\Uninstall IPTVnator.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData \"$env:LocalAppData\\iptvnator-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/4gray/iptvnator/releases/download/v$version/iptvnator-$version-windows-x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
