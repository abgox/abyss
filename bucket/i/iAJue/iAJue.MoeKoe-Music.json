{
    "version": "1.5.5",
    "description": "一款开源、简洁、高颜值的酷狗音乐第三方客户端 | An open-source, concise, and aesthetically pleasing third-party client for KuGou Music.",
    "homepage": "https://music.moekoe.cn/",
    "license": {
        "identifier": "GPL-2.0",
        "url": "https://github.com/iAJue/MoeKoeMusic/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/iAJue/MoeKoeMusic/releases/download/v1.5.5/MoeKoe_Music_Setup_v1.5.5.exe",
            "hash": "86e3e09f9792ac14661b8ec857ec2214286e06555fccff2054d01b02b8a23859"
        }
    },
    "shortcuts": [
        [
            "app\\MoeKoe Music.exe",
            "MoeKoe Music"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:AppData\\moekoemusic\"",
        "A-Install-App -Uninstaller 'app\\Uninstall MoeKoe Music.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\moekoemusic-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/iAJue/MoeKoeMusic/releases/download/v$version/MoeKoe_Music_Setup_v$version.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
