{
    "version": "3.0.0",
    "description": "一个简约的音乐播放器 | A simple music player",
    "homepage": "http://splayer.imsyy.top/",
    "license": {
        "identifier": "AGPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/imsyy/SPlayer/releases/download/v3.0.0/SPlayer-3.0.0-x64-setup.exe",
            "hash": "ae235ee70c745d881f5038db30241436808e34aaaf1a819e479f718cba57a1c1"
        },
        "arm64": {
            "url": "https://github.com/imsyy/SPlayer/releases/download/v3.0.0/SPlayer-3.0.0-arm64-setup.exe",
            "hash": "a30df945f86fc2db69c234ccf3efa9b9f6542d7cd8416d3022f6b27750981ad2"
        }
    },
    "shortcuts": [
        [
            "app\\SPlayer.exe",
            "SPlayer"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\SPlayer\"",
        "A-Install-App -Uninstaller 'app\\Uninstall SPlayer.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\splayer-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/imsyy/SPlayer/releases/download/v$version/SPlayer-$version-x64-setup.exe"
            },
            "arm64": {
                "url": "https://github.com/imsyy/SPlayer/releases/download/v$version/SPlayer-$version-arm64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
