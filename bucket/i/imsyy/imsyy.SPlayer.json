{
    "version": "3.0.0-beta.9",
    "description": "一个简约的音乐播放器 | A simple music player",
    "homepage": "http://splayer.imsyy.top/",
    "license": {
        "identifier": "AGPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/imsyy/SPlayer/releases/download/v3.0.0-beta.9/SPlayer-3.0.0-beta.9-x64-setup.exe",
            "hash": "23f0aa80c32702823404b85806bb6bb5a1067095b4b18ab0cfbeec27269067a8"
        },
        "arm64": {
            "url": "https://github.com/imsyy/SPlayer/releases/download/v3.0.0-beta.9/SPlayer-3.0.0-beta.9-arm64-setup.exe",
            "hash": "aff2adade92ed3f7c7504d56ec0aa94e7607e733a50cec4a0873a1bf23cec918"
        }
    },
    "shortcuts": [
        [
            "app\\SPlayer.exe",
            "SPlayer"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\SPlayer\"",
        "A-Install-App -Uninstaller 'app\\Uninstall SPlayer.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\splayer-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/imsyy/SPlayer/releases/download/v$version/SPlayer-$version-x64-setup.exe"
            },
            "arm64": {
                "url": "https://github.com/imsyy/SPlayer/releases/download/v$version/SPlayer-$version-arm64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
