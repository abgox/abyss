{
    "version": "5.2.1",
    "description": "给图片添加水印, 防止被恶意使用 | Your pictures, your signature",
    "homepage": "https://www.picguard.app/",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/picguard/picguard/releases/download/v5.2.1/picguard-5.2.1-windows-setup-x64.exe",
            "hash": "1bf51b3ba96bf6f91d49d19dafdca8f67c493b28dea7203b62f0bfbd4bea8e58"
        }
    },
    "shortcuts": [
        [
            "app\\PicGuard.exe",
            "PicGuard"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Insco\\PicGuard\"",
        "A-Install-Inno"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Inno"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/picguard/picguard/releases/download/v$version/picguard-$version-windows-setup-x64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
