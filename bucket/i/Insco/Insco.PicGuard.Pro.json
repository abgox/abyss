{
    "version": "5.1.0",
    "description": "给图片添加水印, 防止被恶意使用 | Your pictures, your signature.",
    "homepage": "https://www.picguard.app/",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/picguard/picguard/releases/download/v5.1.0/picguard-pro-5.1.0-windows-setup-x64.exe",
            "hash": "ce7bc4aede7381d96d6c660d78a3094e3058e134f814f78efbef68b3c0a86a2d"
        }
    },
    "shortcuts": [
        [
            "app\\PicGuardPro.exe",
            "PicGuard Pro"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Insco\\PicGuardPro\"",
        "A-Install-Inno"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Inno"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/picguard/picguard/releases/download/v$version/picguard-pro-$version-windows-setup-x64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
