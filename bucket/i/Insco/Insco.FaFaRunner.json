    "homepage": "https://www.fafarunner.com/",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/fafarunner/fafarunner/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/fafarunner/fafarunner/releases/download/v2.6.0/fafarunner-2.6.0-windows-setup-x64.exe",
            "hash": "fa261461cab940a423c27724701943078aab125fa6acbbc8246506f1ac8db3b8"
        }
    },
    "shortcuts": [
        [
            "app\\FaFaRunner.exe",
            "FaFa Runner"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Install-Exe inno"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Uninstall-Exe"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/fafarunner/fafarunner/releases/download/v$version/fafarunner-$version-windows-setup-x64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
