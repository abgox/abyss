{
    "version": "0.2.4",
    "description": "一款开源应用程序，它提供了一个临时的拖放存放区域，以便在桌面上更轻松地进行文件管理和多任务处理 | An open-source app that provides a temporary drag-and-drop holding area for easier file management and multitasking on desktop.",
    "homepage": "https://github.com/iamzubin/holdem",
    "license": {
        "identifier": "Unknown"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/iamzubin/holdem/releases/download/0.2.4/holdem_0.2.4_x64-setup.exe",
            "hash": "89e2b38a7a555018dc3384dbede0c96188176e6296b2f825fa83a81d676dd232"
        }
    },
    "shortcuts": [
        [
            "app\\holdem.exe",
            "Holdem"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'",
        "A-New-LinkDirectory \"$env:AppData\\com.holdem.app\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\com.holdem.app\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/iamzubin/holdem/releases/download/$version/holdem_$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
