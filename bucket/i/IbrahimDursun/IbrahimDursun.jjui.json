{
    "version": "0.9.11",
    "description": "Jujutsu UI (jjui) 是一个文本用户界面 (TUI)，专为与 Jujutsu 版本控制系统交互而设计 | Jujutsu UI (jjui) is a Text User Interface (TUI) designed for interacting with the Jujutsu version control system",
    "homepage": "https://idursun.github.io/jjui/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/idursun/jjui/releases/download/v0.9.11/jjui-0.9.11-windows-amd64.zip",
            "hash": "092cbef0e68949ffc3944a033ab4597ec04de6992450c23bee8867dee54e9366"
        },
        "arm64": {
            "url": "https://github.com/idursun/jjui/releases/download/v0.9.11/jjui-0.9.11-windows-arm64.zip",
            "hash": "638d69b7d388f7b09827b5efdee37caeb6c1b86ce2ec80973a423b8749720fe9"
        }
    },
    "extract_to": "app",
    "env_set": {
        "JJUI_CONFIG_DIR": "$persist_dir\\AppData\\Roaming\\jjui"
    },
    "bin": "app\\jjui.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\jjui\", \"$env:LocalAppData\\jjui\"",
        "Get-ChildItem -Path $dir -Filter 'jjui*.exe' -Recurse | Select-Object -First 1 | Rename-Item -NewName 'jjui.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/idursun/jjui/releases/download/v$version/jjui-$version-windows-amd64.zip"
            },
            "arm64": {
                "url": "https://github.com/idursun/jjui/releases/download/v$version/jjui-$version-windows-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
