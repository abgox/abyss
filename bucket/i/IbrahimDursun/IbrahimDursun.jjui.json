{
    "version": "0.9.7",
    "description": "Jujutsu UI (jjui) 是一个文本用户界面 (TUI)，专为与 Jujutsu 版本控制系统交互而设计 | Jujutsu UI (jjui) is a Text User Interface (TUI) designed for interacting with the Jujutsu version control system.",
    "homepage": "https://idursun.github.io/jjui/",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/idursun/jjui/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/idursun/jjui/releases/download/v0.9.7/jjui-0.9.7-windows-amd64.zip",
            "hash": "a93a8aa6b801fe25a7d13f06caf859afb8d138e2f132081d68074802943e8d3f"
        },
        "arm64": {
            "url": "https://github.com/idursun/jjui/releases/download/v0.9.7/jjui-0.9.7-windows-arm64.zip",
            "hash": "6daddbfddbc70c7f7c68d98631a1cc4758f6b481dd61f5324bb57d19e606c8bb"
        }
    },
    "env_set": {
        "JJUI_CONFIG_DIR": "$dir\\app\\AppData\\Roaming\\jjui"
    },
    "extract_to": "app",
    "bin": "app\\jjui.exe",
    "persist": [
        [
            "app\\AppData\\Roaming\\jjui",
            "AppData\\Roaming\\jjui"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "Get-ChildItem -Path $dir -Filter 'jjui*.exe' -Recurse | Select-Object -First 1 | Rename-Item -NewName 'jjui.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/idursun/jjui",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/idursun/jjui/releases/download/v$version/jjui-$version-windows-amd64.zip"
            },
            "arm64": {
                "url": "https://github.com/idursun/jjui/releases/download/v$version/jjui-$version-windows-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
