{
    "version": "0.9.8",
    "description": "Jujutsu UI (jjui) 是一个文本用户界面 (TUI)，专为与 Jujutsu 版本控制系统交互而设计 | Jujutsu UI (jjui) is a Text User Interface (TUI) designed for interacting with the Jujutsu version control system.",
    "homepage": "https://idursun.github.io/jjui/",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/idursun/jjui/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/idursun/jjui/releases/download/v0.9.8/jjui-0.9.8-windows-amd64.zip",
            "hash": "65bbdb2414aa323f8c2e99bf2b35c52ca397479f675502b48476ae4694d0b557"
        },
        "arm64": {
            "url": "https://github.com/idursun/jjui/releases/download/v0.9.8/jjui-0.9.8-windows-arm64.zip",
            "hash": "a1325752bd4a46339119dacee589eda519e1353e01de0f45a23fc24e7ed9233b"
        }
    },
    "extract_to": "app",
    "env_set": {
        "JJUI_CONFIG_DIR": "$persist_dir\\AppData\\Roaming\\jjui"
    },
    "bin": "app\\jjui.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\jjui\"",
        "Get-ChildItem -Path $dir -Filter 'jjui*.exe' -Recurse | Select-Object -First 1 | Rename-Item -NewName 'jjui.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/idursun/jjui/releases/download/v$version/jjui-$version-windows-amd64.zip"
            },
            "arm64": {
                "url": "https://github.com/idursun/jjui/releases/download/v$version/jjui-$version-windows-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
