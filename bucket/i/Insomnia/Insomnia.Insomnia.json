{
    "version": "12.1.0",
    "description": "一个开源的跨平台 API 客户端，适用于 GraphQL、REST、WebSockets、SSE 和 gRPC，具有 Cloud、Local 和 Git 存储 | The open-source, cross-platform API client for GraphQL, REST, WebSockets, SSE and gRPC. With Cloud, Local and Git storage.",
    "homepage": "https://insomnia.rest/",
    "license": {
        "identifier": "Apache-2.0",
        "url": "https://github.com/Kong/insomnia/blob/develop/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Kong/insomnia/releases/download/core%4012.1.0/insomnia-12.1.0-full.nupkg",
            "hash": "e96c7da33c523e46c861cda84c269223152691be40721426444fc69ea231c627"
        }
    },
    "extract_dir": "lib\\net45",
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\Insomnia.exe",
            "Insomnia"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:AppData\\Insomnia\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/Kong/insomnia",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "core@(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Kong/insomnia/releases/download/core%40$version/insomnia-$version-full.nupkg"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
