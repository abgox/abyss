{
    "version": "25.01",
    "description": "一个拥有极高压缩比的开源压缩软件 | A file archiver with a high compression ratio.",
    "homepage": "https://7-zip.org/",
    "license": {
        "identifier": "Unknown",
        "url": "https://7-zip.org/license.txt"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\7-Zip",
        "Scoop only manages data, installation, update, and uninstallation operations."
    ],
    "notes-cn": [
        "实际安装目录: $env:ProgramFiles\\7-Zip",
        "Scoop 只管理数据(通过 Link)，安装、更新、卸载操作"
    ],
    "architecture": {
        "64bit": {
            "url": "https://7-zip.org/a/7z2501-x64.msi#/dl.msi_",
            "hash": "e7eb0b7ed5efa4e087b7b17f191797f7af5b7f442d1290c66f3a21777005ef57"
        }
    },
    "env_add_path": "$env:ProgramFiles\\7-Zip",
    "shortcuts": [
        [
            "$env:ProgramFiles\\7-Zip\\7zFM.exe",
            "7-Zip File Manager"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Install-Exe msi"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process \"$env:ProgramFiles\\7-Zip\"",
        "$ProductCode = A-Get-ProductCode '^7-Zip'",
        "A-Uninstall-Exe $ProductCode"
    ],
    "post_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget '7zip.7zip' 'msi'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_machine.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_machine.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_machine.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64#/dl.msi_",
                "hash": {
                    "url": "bin/scoop-auto-check-update-temp-data.jsonc",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            }
        }
    }
}
