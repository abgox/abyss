{
    "version": "1.6.10",
    "description": "轻量级的开源项目管理工具 | Lightweight task management tool",
    "homepage": "https://www.dootask.com/",
    "license": {
        "identifier": "AGPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/kuaifan/dootask/releases/download/v1.6.10/DooTask-v1.6.10-win-x64.exe",
            "hash": "8dce30facda89fd16bc676b431e9ff93ddf3c8c031642e3aad1909d92c7ccc0f"
        },
        "arm64": {
            "url": "https://github.com/kuaifan/dootask/releases/download/v1.6.10/DooTask-v1.6.10-win-arm64.exe",
            "hash": "a7239decf0ceddcfb98c50ebd83e01a6c259b1a0026bfa24cfb5c0f117197146"
        }
    },
    "shortcuts": [
        [
            "app\\DooTask.exe",
            "DooTask"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\DooTask\"",
        "A-Install-App -Uninstaller 'app\\Uninstall DooTask.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\dootask-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/kuaifan/dootask/releases/download/v$version/DooTask-v$version-win-x64.exe"
            },
            "arm64": {
                "url": "https://github.com/kuaifan/dootask/releases/download/v$version/DooTask-v$version-win-arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
