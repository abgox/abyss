        "arm64": {
            "url": "https://github.com/kuaifan/dootask/releases/download/v1.6.89/DooTask-v1.6.89-win-arm64.exe",
            "hash": "6e3feb7909bb17d2600458da82728b1562817cf3673c3d68b66c0911387f98cd"
