        "identifier": "AGPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/kuaifan/dootask/releases/download/v1.5.18/DooTask-v1.5.18-win-x64.exe",
            "hash": "4d8f7f3badb11e31265118fa1f9eb6829d2724b4d9a12c7521886fc6943f88e0"
        },
        "arm64": {
            "url": "https://github.com/kuaifan/dootask/releases/download/v1.5.18/DooTask-v1.5.18-win-arm64.exe",
            "hash": "f750ca42dfcd52c8ddcddd9242d0b095a5a37d39be312229e9b5ecbbc6c871c4"
        }
    },
    "shortcuts": [
        [
            "app\\DooTask.exe",
            "DooTask"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\DooTask\"",
        "A-Install-App -Uninstaller 'app\\Uninstall DooTask.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\dootask-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/kuaifan/dootask/releases/download/v$version/DooTask-v$version-win-x64.exe"
            },
            "arm64": {
                "url": "https://github.com/kuaifan/dootask/releases/download/v$version/DooTask-v$version-win-arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
