{
    "version": "25.12.0",
    "description": "免费开源的视频编辑器 | Free and Open Source Video Editor",
    "homepage": "https://kdenlive.org/",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://invent.kde.org/multimedia/kdenlive/-/blob/HEAD/COPYING"
    },
    "architecture": {
        "64bit": {
            "url": "https://download.kde.org/stable/kdenlive/25.12/windows/kdenlive-25.12.0-B.exe",
            "hash": "2617f8025b3add844b62d9534c58ac1851142ed07b4eb88be8cf56587dd2dde7"
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-File \"$env:LocalAppData\\kdenliverc\"",
        "A-New-LinkFile \"$env:LocalAppData\\kdenliverc\"",
        "A-New-LinkDirectory \"$env:AppData\\kdenlive\"",
        "A-Install-Exe -Uninstaller \"$env:ProgramFiles\\kdenlive\\uninstall.exe\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process \"$env:ProgramFiles\\kdenlive\"",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData \"$env:LocalAppData\\kdenlive\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'KDE.Kdenlive' 'exe'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_user.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_user.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_user.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_user.InstallerSha256"
                }
            }
        }
    }
}
