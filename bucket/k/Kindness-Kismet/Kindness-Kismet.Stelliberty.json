            "hash": "24f55be8c936b666e3d21aa44b6ace2008fe46e019d5665f3d68976a8293c4e5"
        },
        "arm64": {
            "url": "https://github.com/Kindness-Kismet/Stelliberty/releases/download/v1.2.150/Stelliberty-v1.2.150-windows-arm64-setup.exe",
            "hash": "bd64ef7bfb6674c03879f5f1ff8f2d59b27cd12dfea066aef2aab64c0f0d5295"
        }
    },
    "shortcuts": [
        [
            "app\\stelliberty.exe",
            "Stelliberty"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:AppData\\stelliberty\"",
        "A-Install-Inno -Uninstaller 'app\\uninstall\\unins000.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Uninstall-Manually 'app'",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Kindness-Kismet/Stelliberty/releases/download/v$version/Stelliberty-v$version-windows-x64-setup.exe"
            },
            "arm64": {
                "url": "https://github.com/Kindness-Kismet/Stelliberty/releases/download/v$version/Stelliberty-v$version-windows-arm64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
