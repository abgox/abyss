{
    "version": "1.2.0",
    "description": "Windows 文件夹颜色工具 | The Windows folder color utility.",
    "homepage": "https://github.com/kweatherman/Folcolor",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/kweatherman/Folcolor/releases/download/1.2.0/Folcolor.zip",
            "hash": "c7b1d7b576ed698b0c8d5f6496ee7c00fdac7bd259e802f2052c1221519f5f33"
        }
    },
    "extract_dir": "Folcolor",
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\Folcolor.exe",
            "Folcolor"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/kweatherman/Folcolor/releases/download/$version/Folcolor.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
