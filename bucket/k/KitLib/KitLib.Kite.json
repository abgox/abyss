{
    "version": "0.2.0",
    "description": "Kite 待办是一款按天规划的待办应用。轻量精简，无广告，注重隐私，数据离线存储在本地 | Kite To-Do is a lightweight and streamlined to-do app for planning by day with no ads. It focuses on privacy and stores data locally",
    "homepage": "https://kite.kitlib.cn/",
    "license": {
        "identifier": "Proprietary"
    },
    "architecture": {
        "64bit": {
            "url": "https://kite.kitlib.cn/app/v0.2.0/kite_0.2.0_x64-setup.exe",
            "hash": "aad69b592d31d5fdebe09600526b144884ede13a5d6d1fccbe4bbf950b2754a0"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.kitlib.kite\"",
        "A-Install-App -Uninstaller \"$env:LocalAppData\\kite\\uninstall.exe\" -ArgumentList '/S'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\com.kitlib.kite\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$res, $out = A-Get-InstallerInfoFromWinget 'KitLib.Kite' 'exe'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_user.InstallerSha256"
                }
            }
        }
    }
}
