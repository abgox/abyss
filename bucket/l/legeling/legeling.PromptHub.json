{
    "version": "0.3.4",
    "description": "一款开源、纯本地 AI Prompt 管理工具，帮助你高效管理、版本控制和复用 Prompt | An open-source, local-first AI prompt management tool that helps you efficiently manage, version-control, and reuse your prompts",
    "homepage": "https://github.com/legeling/PromptHub",
    "license": {
        "identifier": "AGPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/legeling/PromptHub/releases/download/v0.3.4/PromptHub-Setup-0.3.4-x64.exe",
            "hash": "49b5f16fb107df430c198060e45ccec6090b5a789d490720027f5132b523761a"
        },
        "arm64": {
            "url": "https://github.com/legeling/PromptHub/releases/download/v0.3.4/PromptHub-Setup-0.3.4-arm64.exe",
            "hash": "1f927e0ba2ece7d731a003cff529729853eefd01ad32de520b2ab36d92c7c35e"
        }
    },
    "shortcuts": [
        [
            "app\\PromptHub.exe",
            "PromptHub"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\prompthub\"",
        "A-Install-Exe -Uninstaller 'app\\Uninstall PromptHub.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData \"$env:LocalAppData\\prompthub-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/legeling/PromptHub/releases/download/v$version/PromptHub-Setup-$version-x64.exe"
            },
            "arm64": {
                "url": "https://github.com/legeling/PromptHub/releases/download/v$version/PromptHub-Setup-$version-arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
