{
    "version": "0.4.0",
    "description": "一款开源、纯本地 AI Prompt 管理工具，帮助你高效管理、版本控制和复用 Prompt | An open-source, local-first AI prompt management tool that helps you efficiently manage, version-control, and reuse your prompts",
    "homepage": "https://github.com/legeling/PromptHub",
    "license": {
        "identifier": "AGPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/legeling/PromptHub/releases/download/v0.4.0/PromptHub-Setup-0.4.0-x64.exe",
            "hash": "be36bed8092179e75863fee1eee2da40adeb2be9f91ae49c0649e8659f15e625"
        },
        "arm64": {
            "url": "https://github.com/legeling/PromptHub/releases/download/v0.4.0/PromptHub-Setup-0.4.0-arm64.exe",
            "hash": "97e1691f0440ca84411ba4bb3ec9280cdd0abc96963c3602ee9643fb22ad3c2f"
        }
    },
    "shortcuts": [
        [
            "app\\PromptHub.exe",
            "PromptHub"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\prompthub\"",
        "A-Install-App -Uninstaller 'app\\Uninstall PromptHub.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\prompthub-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/legeling/PromptHub/releases/download/v$version/PromptHub-Setup-$version-x64.exe"
            },
            "arm64": {
                "url": "https://github.com/legeling/PromptHub/releases/download/v$version/PromptHub-Setup-$version-arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
