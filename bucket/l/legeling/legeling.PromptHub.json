{
    "version": "0.3.8",
    "description": "一款开源、纯本地 AI Prompt 管理工具，帮助你高效管理、版本控制和复用 Prompt | An open-source, local-first AI prompt management tool that helps you efficiently manage, version-control, and reuse your prompts",
    "homepage": "https://github.com/legeling/PromptHub",
    "license": {
        "identifier": "AGPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/legeling/PromptHub/releases/download/v0.3.8/PromptHub-Setup-0.3.8-x64.exe",
            "hash": "2bc73ef7cab185a5a8f991b5678b51590e55aea8d79ff19fba8c3af95d41bd36"
        },
        "arm64": {
            "url": "https://github.com/legeling/PromptHub/releases/download/v0.3.8/PromptHub-Setup-0.3.8-arm64.exe",
            "hash": "9a1bc5248d007b9b5e23a67afd4f965ce213101ed2397a6fcf60306f7f3798b5"
        }
    },
    "shortcuts": [
        [
            "app\\PromptHub.exe",
            "PromptHub"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\prompthub\"",
        "A-Install-App -Uninstaller 'app\\Uninstall PromptHub.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\prompthub-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/legeling/PromptHub/releases/download/v$version/PromptHub-Setup-$version-x64.exe"
            },
            "arm64": {
                "url": "https://github.com/legeling/PromptHub/releases/download/v$version/PromptHub-Setup-$version-arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
