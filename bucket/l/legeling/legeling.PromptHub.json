{
    "version": "0.3.9",
    "description": "一款开源、纯本地 AI Prompt 管理工具，帮助你高效管理、版本控制和复用 Prompt | An open-source, local-first AI prompt management tool that helps you efficiently manage, version-control, and reuse your prompts",
    "homepage": "https://github.com/legeling/PromptHub",
    "license": {
        "identifier": "AGPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/legeling/PromptHub/releases/download/v0.3.9/PromptHub-Setup-0.3.9-x64.exe",
            "hash": "f404e0732762b2e047fd6f088000e735f969e5736d3853dd8ea7f1ec6a8b8df5"
        },
        "arm64": {
            "url": "https://github.com/legeling/PromptHub/releases/download/v0.3.9/PromptHub-Setup-0.3.9-arm64.exe",
            "hash": "bb14f4ed6edfaa7889b87717ffc1fc8cfc7e4c720346704a7291ed54c37fa875"
        }
    },
    "shortcuts": [
        [
            "app\\PromptHub.exe",
            "PromptHub"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\prompthub\"",
        "A-Install-App -Uninstaller 'app\\Uninstall PromptHub.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\prompthub-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/legeling/PromptHub/releases/download/v$version/PromptHub-Setup-$version-x64.exe"
            },
            "arm64": {
                "url": "https://github.com/legeling/PromptHub/releases/download/v$version/PromptHub-Setup-$version-arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
