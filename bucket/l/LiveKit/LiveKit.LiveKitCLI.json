{
    "version": "2.13.2",
    "description": "LiveKit 的命令行界面 | Command line interface to LiveKit",
    "homepage": "https://livekit.io/",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/livekit/livekit-cli/releases/download/v2.13.2/lk_2.13.2_windows_amd64.zip",
            "hash": "2fb5945809122ec33987f7f6e1d0b999afe255bfa18a784e5d2da2503d3afbbf"
        },
        "arm64": {
            "url": "https://github.com/livekit/livekit-cli/releases/download/v2.13.2/lk_2.13.2_windows_arm64.zip",
            "hash": "be25c5bf33e8cdfc068ae71a2d1313899906923753ca800417f960487b77aed7"
        }
    },
    "extract_to": "app",
    "bin": "app\\lk.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/livekit/livekit-cli/releases/download/v$version/lk_$version_windows_amd64.zip"
            },
            "arm64": {
                "url": "https://github.com/livekit/livekit-cli/releases/download/v$version/lk_$version_windows_arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
