{
    "version": "2.13.0",
    "description": "LiveKit 的命令行界面 | Command line interface to LiveKit.",
    "homepage": "https://livekit.io/",
    "license": {
        "identifier": "Apache-2.0",
        "url": "https://github.com/livekit/livekit-cli/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/livekit/livekit-cli/releases/download/v2.13.0/lk_2.13.0_windows_amd64.zip",
            "hash": "096e394b214fc0091cff4139a9dd0c3cc416bc5726e86b3d2e9cb74e3d296b1a"
        },
        "arm64": {
            "url": "https://github.com/livekit/livekit-cli/releases/download/v2.13.0/lk_2.13.0_windows_arm64.zip",
            "hash": "f496642dd8155aaf926a4abba3f7cc4c6027e987dc29ef17857edbaf12847369"
        }
    },
    "extract_to": "app",
    "bin": "app\\lk.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/livekit/livekit-cli/releases/download/v$version/lk_$version_windows_amd64.zip"
            },
            "arm64": {
                "url": "https://github.com/livekit/livekit-cli/releases/download/v$version/lk_$version_windows_arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
