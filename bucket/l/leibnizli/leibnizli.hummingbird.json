{
    "##": [
        "卸载时需要两次 scoop uninstall",
        "数据目录不够规范，等待后续调整"
    ],
    "version": "pending",
    "description": "一个图片压缩程序 (jpg/png/webp/svg/gif/css/js/html/mp4/mov)，它可以转换不同格式的图片 | A compression (jpg/png/webp/svg/gif/css/js/html/mp4/mov) App, it can convert different format pictures",
    "homepage": "https://arayofsunshine.dev/hummingbird",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/abgox/abyss/releases/download/empty/empty",
            "hash": "36a9e7f1c95b82ffb99743e0c5c4ce95d83c9a430aac59f84ef3cbfab6145068"
        }
    },
    "shortcuts": [
        [
            "app\\hummingbird.exe",
            "hummingbird"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Deny-Manifest",
        "A-New-LinkFile \"$home\\hummingbird-config.json\"",
        "A-Install-App -Uninstaller 'app\\Uninstall hummingbird.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$home\\hummingbird-log.txt\",\"$env:AppData\\hummingbird\",\"$env:LocalAppData\\hummingbird-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)",
        "replace": "pending"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/leibnizli/hummingbird/releases/download/v$version/hummingbird-Setup-$version.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
