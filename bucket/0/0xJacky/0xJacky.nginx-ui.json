{
    "version": "2.3.3",
    "description": "另一个适用于 Nginx 的 Web 用户界面 | Yet another Web UI for Nginx",
    "homepage": "https://nginxui.com/",
    "license": {
        "identifier": "AGPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/0xJacky/nginx-ui/releases/download/v2.3.3/nginx-ui-windows-64.zip",
            "hash": "61b4fc370ce2a50a9c5593a4ac6da4c112e9818f95e361f0ea52027e747d4ac6"
        }
    },
    "extract_to": "app",
    "bin": "app\\nginx-ui.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:LocalAppData\\nginx-ui\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/0xJacky/nginx-ui/releases/download/v$version/nginx-ui-windows-64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
