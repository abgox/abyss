{
    "version": "0.101.2",
    "description": "一款免费开源、跨平台的分层式笔记应用程序，专注于构建大型个人知识库 | A free and open-source, cross-platform hierarchical note taking application with focus on building large personal knowledge bases.",
    "homepage": "https://github.com/TriliumNext/Trilium",
    "license": {
        "identifier": "AGPL-3.0-only",
        "url": "https://github.com/TriliumNext/Trilium/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/TriliumNext/Trilium/releases/download/v0.101.2/TriliumNotes-v0.101.2-windows-x64.zip",
            "hash": "fcd840e26fa0a206626a44da11f3c198336103c2f734475bba97009ea470802e"
        },
        "arm64": {
            "url": "https://github.com/TriliumNext/Trilium/releases/download/v0.101.2/TriliumNotes-v0.101.2-windows-arm64.zip",
            "hash": "a41f6cb75c1323e1eacc48c0b9dd90cf12e913ca53bc24f9cef581d664c94cab"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\trilium.exe",
            "Trilium Notes"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\trilium-data\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:AppData\\trilium\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/TriliumNext/Trilium/releases/download/v$version/TriliumNotes-v$version-windows-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/TriliumNext/Trilium/releases/download/v$version/TriliumNotes-v$version-windows-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
