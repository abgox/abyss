{
    "version": "0.7.0",
    "description": "使用 Google Gemini AI 为您编写 git 提交消息的 CLI | CLI that writes git commit messages for you with Google Gemini AI",
    "homepage": "https://github.com/tfkhdyt/geminicommit",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/tfkhdyt/geminicommit/releases/download/v0.7.0/gmc-v0.7.0-windows-amd64.zip",
            "hash": "16de1b12093c20a860a1864d9a2a176fbf794204666ffe51a6d82fe70fdfa4c4"
        }
    },
    "extract_to": "app",
    "bin": "app\\gmc.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\geminicommit\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/tfkhdyt/geminicommit/releases/download/v$version/gmc-v$version-windows-amd64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
