{
    "version": "1.8.4",
    "description": "澜音，一个跨平台的音乐播放器应用，提供插件运行框架与播放功能 | A cross-platform music player application that provides a plug-in running framework and playback functions",
    "homepage": "https://ceru.docs.shiqianjiang.cn/",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/timeshiftsauce/CeruMusic/releases/download/v1.8.4/ceru-music-1.8.4-win-x64-setup.exe",
            "hash": "e1a3237e3b56c57eddfe6fa144a48dbcc3b15704ec5b4442a84e962a6fc29b66"
        }
    },
    "shortcuts": [
        [
            "app\\ceru-music.exe",
            "澜音"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\ceru-music\"",
        "A-Install-App -Uninstaller 'app\\Uninstall ceru-music.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\ceru-music-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/timeshiftsauce/CeruMusic/releases/download/v$version/ceru-music-$version-win-x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
