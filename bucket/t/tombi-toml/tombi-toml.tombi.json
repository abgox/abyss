{
    "version": "0.8.0",
    "description": "适用于 TOML 的工具包，提供了格式化工具、代码检查工具和语言服务器，帮助您维护整洁且一致的 TOML 文件 | A toolkit for TOML that provides a Formatter, Linter, and Language Server to help you maintain clean and consistent TOML files",
    "homepage": "http://tombi-toml.github.io/tombi/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/tombi-toml/tombi/releases/download/v0.8.0/tombi-cli-0.8.0-x86_64-pc-windows-msvc.zip",
            "hash": "3b1c112d20cf10b5957205f089d5058b9ea9016ae807d4aea8a0c4171a4ccfaa"
        },
        "arm64": {
            "url": "https://github.com/tombi-toml/tombi/releases/download/v0.8.0/tombi-cli-0.8.0-aarch64-pc-windows-msvc.zip",
            "hash": "57cecc4747210f86b9b2a5f4220f1e7baaa1266c19e346646617cbbdd8da934b"
        }
    },
    "extract_to": "app",
    "bin": "app\\tombi.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\tombi\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/tombi-toml/tombi/releases/download/v$version/tombi-cli-$version-x86_64-pc-windows-msvc.zip"
            },
            "arm64": {
                "url": "https://github.com/tombi-toml/tombi/releases/download/v$version/tombi-cli-$version-aarch64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
