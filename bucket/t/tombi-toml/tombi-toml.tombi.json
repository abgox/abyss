            "hash": "4f506405a97cf4cd5a8e7b6720e7633eda550248823a651de91b63880ba8f034"
        },
        "arm64": {
            "url": "https://github.com/tombi-toml/tombi/releases/download/v0.7.28/tombi-cli-0.7.28-aarch64-pc-windows-msvc.zip",
