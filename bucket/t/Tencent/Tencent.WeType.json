{
    "version": "1.4.3.8",
    "description": "微信输入法，由腾讯的微信团队开发 | An input method developed by the WeChat team of Tencent.",
    "homepage": "https://z.weixin.qq.com/",
    "license": {
        "identifier": "Unknown",
        "url": "https://wetype.wxqcloud.qq.com/page/article/index/14.html"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Tencent\\WeType",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:ProgramFiles\\Tencent\\WeType",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://download.z.weixin.qq.com/app/win/WeTypeSetup_1.4.3.8_3.exe",
            "hash": "22ec92dac7f84c6c19f06809ead8d082c96052b4d217e9d72ed255442aeafc61"
        },
        "arm64": {
            "url": "https://download.z.weixin.qq.com/app/win/WeTypeSetup_1.4.3.8_3.exe",
            "hash": "22ec92dac7f84c6c19f06809ead8d082c96052b4d217e9d72ed255442aeafc61"
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Install-App -ArgumentList '/s'",
        "A-Hold-App"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Deny-Update",
        "A-Uninstall-Manually \"$env:ProgramFiles\\Tencent\\WeType\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo, $out = A-Get-InstallerInfoFromWinget 'Tencent.WeType' 'exe'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
