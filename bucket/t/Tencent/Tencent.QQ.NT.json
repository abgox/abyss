{
    "version": "9.9.26.44343",
    "description": "(NT 版本) QQ，腾讯的一款聊天通讯工具 | (NT version) A chat communication tool by Tencent.",
    "homepage": "https://im.qq.com/",
    "license": {
        "identifier": "Unknown",
        "url": "https://rule.tencent.com/rule/46a15f24-e42c-4cb6-a308-2347139b1201"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Tencent\\QQNT",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes-cn": [
        "安装目录: $env:ProgramFiles\\Tencent\\QQNT",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://dldir1v6.qq.com/qqfile/qq/QQNT/Windows/QQ_9.9.26_260108_x64_01.exe",
            "hash": "1d63aeff1fefb59892bda0b4313776f81cb7c12529c91b263b5f407386956860"
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "$DataDir = \"$home\\Documents\\Tencent Files\"",
        "$PersistDir = $DataDir.Replace($home, $persist_dir)",
        "$SubDir1 = Get-ChildItem $DataDir -Directory -Depth 2 | ForEach-Object { if ($_.FullName -like \"$DataDir\\*\\nt_qq\") { Split-Path (Split-Path $_.FullName -Parent) -Leaf } }",
        "$SubDir2 = Get-ChildItem $PersistDir -Directory -Depth 2 | ForEach-Object { if ($_.FullName -like \"$PersistDir\\*\\nt_qq\") { Split-Path (Split-Path $_.FullName -Parent) -Leaf } }",
        "$LinkPaths = @()",
        "@($SubDir1) + @($SubDir2) | Select-Object -Unique | ForEach-Object { $LinkPaths += Join-Path $DataDir \"$_\\nt_qq\" }",
        "$LinkPaths += Join-Path $DataDir \"nt_qq\"",
        "A-New-LinkDirectory $LinkPaths",
        "A-Install-App -ArgumentList '/S'",
        "A-Hold-App"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Deny-Update",
        "A-Uninstall-Manually \"$env:ProgramFiles\\Tencent\\QQNT\"",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'Tencent.QQ.NT' 'exe'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_machine.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_machine.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_machine.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            }
        }
    }
}
