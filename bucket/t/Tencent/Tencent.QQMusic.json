{
    "version": "22.01",
    "description": "QQ音乐，腾讯的音乐平台 | A music platform by Tencent.",
    "homepage": "https://y.qq.com/",
    "license": {
        "identifier": "Unknown",
        "url": "https://y.qq.com/i/user_terms.html"
    },
    "architecture": {
        "64bit": {
            "url": "https://c.y.qq.com/cgi-bin/file_redirect.fcg?bid=dldir&file=ecosfile%2Fmusic_clntupate%2Fpc%2Fother%2FQQMusic_Setup_2201.exe&sign=1-c98195b3a0589ddd4429c727f6f529c843fa894b02bbe09e7a616f8152f053a3-694e3336#/dl.exe",
            "hash": "a17543e02bacf7525587bd47b337dabf07107a809ea4092d0af1327d3738d9ae"
        }
    },
    "shortcuts": [
        [
            "app\\QQMusic\\QQMusic.exe",
            "QQ音乐"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:AppData\\Tencent\\QQMusic\"",
        "$InstallLocation = '\"' + \"$dir\\app\" + '\"'",
        "A-Install-App -ArgumentList 'silence=1', 'runafterinstall=no', \"installdir=$InstallLocation\"",
        "A-Hold-App"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Uninstall-Manually 'app'",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo, $out = A-Get-InstallerInfoFromWinget 'Tencent.QQMusic' ''",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64#/dl.exe",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            }
        }
    }
}
