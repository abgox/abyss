{
    "version": "4.1.6.46",
    "description": "微信，腾讯的一款聊天通讯工具 | A chat communication tool by Tencent",
    "homepage": "https://www.wechat.com/",
    "license": {
        "identifier": "Unknown",
        "url": "https://www.wechat.com/zh_CN/service_terms.html"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Tencent\\Weixin",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:ProgramFiles\\Tencent\\Weixin",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://dldir1v6.qq.com/weixin/Universal/Windows/WeChatWin_4.1.6.exe",
            "hash": "30bcfd5831f08cae1ecbdcb04189c9fd5685995236633a9a7e32e2b160df8ded"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Install-App -Uninstaller \"$env:ProgramFiles\\Tencent\\Weixin\\Uninstall.exe\" -ArgumentList '/S'",
        "# 安装程序会清理 $env:AppData\\Tencent\\xwechat，所以安装完成后再进行链接",
        "A-New-LinkDirectory \"$env:AppData\\Tencent\\xwechat\", \"$home\\Documents\\xwechat_files\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process \"$env:ProgramFiles\\Tencent\\Weixin\"",
        "A-Remove-Link",
        "A-Uninstall-App"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo, $out = A-Get-InstallerInfoFromWinget 'Tencent.WeChat.Universal' 'exe'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            }
        }
    }
}
