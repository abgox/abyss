{
    "version": "8.0",
    "description": "一个免费，易于使用的工具，可帮助您收集，组织，注释，引用和共享研究 | A free, easy-to-use tool to help you collect, organize, annotate, cite, and share research.",
    "homepage": "https://www.zotero.org/",
    "license": {
        "identifier": "Freeware"
    },
    "architecture": {
        "64bit": {
            "url": "https://download.zotero.org/client/release/8.0/Zotero-8.0_x64_setup.exe#/dl.7z",
            "hash": "fcea1bbae0775af8bbfa8d7481827050f017d0b1f99ab9ed225f9b65efe5bd03"
        },
        "arm64": {
            "url": "https://download.zotero.org/client/release/8.0/Zotero-8.0_arm64_setup.exe#/dl.7z",
            "hash": "06b60dd065c50947647e0d59ae3d26d013b88da6de79013f2699f96a5f230211"
        }
    },
    "extract_dir": "core",
    "extract_to": "app",
    "bin": "app\\zotero.exe",
    "shortcuts": [
        [
            "app\\zotero.exe",
            "Zotero"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Zotero\",\"$home\\Zotero\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:ProgramData\\Zotero\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://www.zotero.org/support/changelog",
        "regex": "Changes in ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.zotero.org/client/release/$version/Zotero-$version_x64_setup.exe#/dl.7z"
            },
            "arm64": {
                "url": "https://download.zotero.org/client/release/$version/Zotero-$version_arm64_setup.exe#/dl.7z"
            }
        }
    }
}
