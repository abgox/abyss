{
    "version": "7.0.30",
    "description": "一个免费，易于使用的工具，可帮助您收集，组织，注释，引用和共享研究 | A free, easy-to-use tool to help you collect, organize, annotate, cite, and share research.",
    "homepage": "https://www.zotero.org/",
    "license": {
        "identifier": "Freeware"
    },
    "architecture": {
        "64bit": {
            "url": "https://download.zotero.org/client/release/7.0.30/Zotero-7.0.30_x64_setup.exe#/dl.7z",
            "hash": "e363f7fafc41a7d966270ec02027d937415e46d8a7e1960675ac856110a239d1"
        },
        "arm64": {
            "url": "https://download.zotero.org/client/release/7.0.30/Zotero-7.0.30_arm64_setup.exe#/dl.7z",
            "hash": "d0918624e668d0b752844b658e9786eaf5804e0ad0c1f865b5de226ca9d7292d"
        }
    },
    "extract_dir": "core",
    "extract_to": "app",
    "bin": "app\\zotero.exe",
    "shortcuts": [
        [
            "app\\zotero.exe",
            "Zotero"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Zotero\",\"$env:UserProfile\\Zotero\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:ProgramData\\Zotero\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://www.zotero.org/support/changelog",
        "regex": "Changes in ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.zotero.org/client/release/$version/Zotero-$version_x64_setup.exe#/dl.7z"
            },
            "arm64": {
                "url": "https://download.zotero.org/client/release/$version/Zotero-$version_arm64_setup.exe#/dl.7z"
            }
        }
    }
}
