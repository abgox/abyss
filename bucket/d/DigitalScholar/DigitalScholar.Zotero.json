{
    "version": "8.0.2",
    "description": "一个免费，易于使用的工具，可帮助您收集，组织，注释，引用和共享研究 | A free, easy-to-use tool to help you collect, organize, annotate, cite, and share research",
    "homepage": "https://www.zotero.org/",
    "license": {
        "identifier": "Freeware"
    },
    "architecture": {
        "64bit": {
            "url": "https://download.zotero.org/client/release/8.0.2/Zotero-8.0.2_x64_setup.exe#/dl.7z",
            "hash": "190a746b691f409ebca4c53c4aa2034a425a89a8c461dbaa17e0aa40538cb11b"
        },
        "arm64": {
            "url": "https://download.zotero.org/client/release/8.0.2/Zotero-8.0.2_arm64_setup.exe#/dl.7z",
            "hash": "0efc973709a472fd33f60a7c19eff1e21fb15d06e41dd789fa1943d7c3fcfefa"
        }
    },
    "extract_dir": "core",
    "extract_to": "app",
    "bin": "app\\zotero.exe",
    "shortcuts": [
        [
            "app\\zotero.exe",
            "Zotero"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Zotero\",\"$home\\Zotero\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:ProgramData\\Zotero\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://www.zotero.org/support/changelog",
        "regex": "Changes in ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.zotero.org/client/release/$version/Zotero-$version_x64_setup.exe#/dl.7z"
            },
            "arm64": {
                "url": "https://download.zotero.org/client/release/$version/Zotero-$version_arm64_setup.exe#/dl.7z"
            }
        }
    }
}
