{
    "version": "7.0.31",
    "description": "一个免费，易于使用的工具，可帮助您收集，组织，注释，引用和共享研究 | A free, easy-to-use tool to help you collect, organize, annotate, cite, and share research.",
    "homepage": "https://www.zotero.org/",
    "license": {
        "identifier": "Freeware"
    },
    "architecture": {
        "64bit": {
            "url": "https://download.zotero.org/client/release/7.0.31/Zotero-7.0.31_x64_setup.exe#/dl.7z",
            "hash": "5901b7c198670c6d8ed3763f231ef89ea6d51055d1e7082d6c50582855336c0f"
        },
        "arm64": {
            "url": "https://download.zotero.org/client/release/7.0.31/Zotero-7.0.31_arm64_setup.exe#/dl.7z",
            "hash": "d49bfac029e3551a08aa874fde970bb9a4dc1bf16c7f4997480ae2d991f938e2"
        }
    },
    "extract_dir": "core",
    "extract_to": "app",
    "bin": "app\\zotero.exe",
    "shortcuts": [
        [
            "app\\zotero.exe",
            "Zotero"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Zotero\",\"$home\\Zotero\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:ProgramData\\Zotero\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://www.zotero.org/support/changelog",
        "regex": "Changes in ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.zotero.org/client/release/$version/Zotero-$version_x64_setup.exe#/dl.7z"
            },
            "arm64": {
                "url": "https://download.zotero.org/client/release/$version/Zotero-$version_arm64_setup.exe#/dl.7z"
            }
        }
    }
}
