{
    "version": "2.35.0",
    "description": "适用于桌面端、带有聊天共享工具和游戏的去中心化私人即时通讯软件 | Decentralized private messenger with chat-shared tools and games for Desktop.",
    "homepage": "https://github.com/deltachat/deltachat-desktop",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/deltachat/deltachat-desktop/releases/download/v2.35.0/DeltaChat-2.35.0-Setup.x64.exe",
            "hash": "5de40a420d6d37c708b0251194e52b78dad2fe761b2b2acde2bf308a72f1e3f6"
        }
    },
    "shortcuts": [
        [
            "app\\DeltaChat.exe",
            "DeltaChat"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:LocalAppData\\DeltaChat\"",
        "A-Install-App -Uninstaller 'app\\Uninstall DeltaChat.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\deltachat-desktop-updater\",\"$env:AppData\\DeltaChat\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/deltachat/deltachat-desktop/releases/download/v$version/DeltaChat-$version-Setup.x64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
