{
    "version": "2.33.0",
    "description": "适用于桌面端、带有聊天共享工具和游戏的去中心化私人即时通讯软件 | Decentralized private messenger with chat-shared tools and games for Desktop.",
    "homepage": "https://github.com/deltachat/deltachat-desktop",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://github.com/deltachat/deltachat-desktop/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/deltachat/deltachat-desktop/releases/download/v2.33.0/DeltaChat-2.33.0-Setup.x64.exe",
            "hash": "353e32b9e7b665655e2c1ad260c6ba55c8c06c0caf9fd64605a5cb08bd2125a9"
        }
    },
    "shortcuts": [
        [
            "app\\DeltaChat.exe",
            "DeltaChat"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:LocalAppData\\DeltaChat\"",
        "A-Install-Exe -Uninstaller 'app\\Uninstall DeltaChat.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData \"$env:LocalAppData\\deltachat-desktop-updater\",\"$env:AppData\\DeltaChat\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/deltachat/deltachat-desktop/releases/download/v$version/DeltaChat-$version-Setup.x64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
