{
    "version": "0.10.1",
    "description": "一个基于 Flutter 构建的简单 Jellyfin 前端 | A Simple Jellyfin frontend built on top of Flutter",
    "homepage": "https://github.com/DonutWare/Fladder",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/DonutWare/Fladder/releases/download/v0.10.1/Fladder-Windows-0.10.1.zip",
            "hash": "42111aa8224bd51ecd3cce1b236e46aa892df1a0e6d2d2815a488358069c935e"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\fladder.exe",
            "Fladder"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\DonutWare\\fladder\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:LocalAppData\\DonutWare\\fladder\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/DonutWare/Fladder/releases/download/v$version/Fladder-Windows-$version.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
