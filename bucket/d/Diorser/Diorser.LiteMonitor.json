{
    "version": "1.3.0",
    "description": "一款轻量、可定制的开源桌面硬件监控软件 | A lightweight and customizable desktop hardware monitoring tool",
    "homepage": "https://github.com/Diorser/LiteMonitor",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Diorser/LiteMonitor/releases/download/v1.3.0/LiteMonitor_v1.3.0-win-x64.zip",
            "hash": "e34c2de5ea9946cbb40920176af3e5da25261e47010e7d70ec1f6b1e86cd05a5",
            "extract_dir": "LiteMonitor_v1.3.0-win-x64"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\LiteMonitor.exe",
            "LiteMonitor"
        ]
    ],
    "persist": [
        [
            "app\\settings.json",
            "settings.json"
        ],
        [
            "app\\TrafficHistory.json",
            "TrafficHistory.json"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-File \"$persist_dir\\settings.json\"",
        "A-New-File \"$persist_dir\\TrafficHistory.json\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Diorser/LiteMonitor/releases/download/v$version/LiteMonitor_v$version-win-x64.zip",
                "extract_dir": "LiteMonitor_v$version-win-x64"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
