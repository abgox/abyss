{
    "version": "0.51.0",
    "description": "一个跨平台 Markdown 编辑器，但是更轻快、更智能、更纯粹 | A cross platform Markdown editor, but it is lighter, smarter, and purer.",
    "homepage": "https://www.markflowy.cc/",
    "license": {
        "identifier": "AGPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/drl990114/MarkFlowy/releases/download/v0.51.0/MarkFlowy_v0.51.0_x64-setup.exe",
            "hash": "10f99b6b4676288d96d6a66b7aac10883507a811658ba119829dabbdf8083a13"
        }
    },
    "shortcuts": [
        [
            "app\\markflowy.exe",
            "MarkFlowy"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.drl990114.markflowy\",\"$home\\.markflowy\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/drl990114/MarkFlowy/releases/download/v$version/MarkFlowy_v$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
