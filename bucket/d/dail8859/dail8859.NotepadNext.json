{
    "version": "0.12",
    "description": "Notepad++ 的跨平台重新实现 | A cross-platform, reimplementation of Notepad++.",
    "homepage": "https://github.com/dail8859/NotepadNext",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/dail8859/NotepadNext/releases/download/v0.12/NotepadNext-v0.12-win64.zip",
            "hash": "f1b15378a249ab73f36a0e44486f75029dce6506c6ab3f96885de9bfe9adeb62"
        }
    },
    "extract_to": "app",
    "bin": "app\\NotepadNext.exe",
    "shortcuts": [
        [
            "app\\NotepadNext.exe",
            "NotepadNext"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\NotepadNext\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/dail8859/NotepadNext/releases/download/v$version/NotepadNext-v$version-win64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
