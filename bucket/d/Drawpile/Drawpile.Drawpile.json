{
    "version": "2.3.0",
    "description": "一款绘图程序，能让你与他人在同一画布上共同进行绘制、涂色和制作动画 | A drawing program that lets you draw, paint and animate together with others on the same canvas.",
    "homepage": "https://drawpile.net/",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://github.com/drawpile/Drawpile/blob/main/LICENSE.txt"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/drawpile/Drawpile/releases/download/2.3.0/Drawpile-2.3.0-x86_64.zip",
            "hash": "83a290b720ef4593985cebf7c2e79277952c55b3a99afaa9eb8acdd85657ad23",
            "extract_dir": "Drawpile-2.3.0-x86_64"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\drawpile.exe",
            "Drawpile"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\drawpile\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/drawpile/Drawpile/releases/download/$version/Drawpile-$version-x86_64.zip",
                "extract_dir": "Drawpile-$version-x86_64"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
