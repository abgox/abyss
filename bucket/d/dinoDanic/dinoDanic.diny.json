{
    "version": "0.5.0",
    "description": "根据 git diff 生成有意义的提交信息 | Generate meaningful commit messages from git diff",
    "homepage": "https://diny-cli.vercel.app/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/dinoDanic/diny/releases/download/v0.5.0/diny_Windows_x86_64.zip",
            "hash": "1a183372d15c1ceff9dc1d72bc866abf1cdd8c405bee5c3388a7a1e00ac6a7ef"
        },
        "arm64": {
            "url": "https://github.com/dinoDanic/diny/releases/download/v0.5.0/diny_Windows_arm64.zip",
            "hash": "6b138915c0f424a908abd3d4e33b5496b21223ce2d52c86ea7710ff2535d6ef1"
        }
    },
    "extract_to": "app",
    "bin": "app\\diny.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/dinoDanic/diny/releases/download/v$version/diny_Windows_x86_64.zip"
            },
            "arm64": {
                "url": "https://github.com/dinoDanic/diny/releases/download/v$version/diny_Windows_arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
