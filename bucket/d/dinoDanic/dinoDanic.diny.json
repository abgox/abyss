    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/dinoDanic/diny/releases/download/v0.5.2/diny_Windows_x86_64.zip",
            "hash": "312c09855b562bf7680b7c2eef21bde911363e73b73985cb08f0fad9a5d956cd"
        },
        "arm64": {
            "url": "https://github.com/dinoDanic/diny/releases/download/v0.5.2/diny_Windows_arm64.zip",
            "hash": "ea1c66ab8a0948f587a81829a1cbb3096b7952ce6413e21299f69dc587c0ad36"
        }
    },
    "extract_to": "app",
    "bin": "app\\diny.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/dinoDanic/diny/releases/download/v$version/diny_Windows_x86_64.zip"
            },
            "arm64": {
                "url": "https://github.com/dinoDanic/diny/releases/download/v$version/diny_Windows_arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
