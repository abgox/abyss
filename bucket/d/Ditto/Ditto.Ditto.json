{
    "version": "3.25.113.0",
    "description": "一个 Windows 剪贴板的扩展工具 | An extension to the Windows Clipboard.",
    "homepage": "https://sabrogden.github.io/Ditto/",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://github.com/sabrogden/Ditto/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/sabrogden/Ditto/releases/download/3.25.113.0/DittoSetup_3_25_113_0.exe",
            "hash": "fc354f1e9b9d2984099d4da93b4c569866dfe9bf1f590c1313e85e07f41224d3"
        }
    },
    "extract_to": "app",
    "innosetup": true,
    "shortcuts": [
        [
            "app\\Ditto.exe",
            "Ditto"
        ]
    ],
    "persist": [
        [
            "app\\Ditto.db",
            "AppData\\Roaming\\Ditto\\Ditto.db"
        ],
        [
            "app\\Ditto.Settings",
            "AppData\\Roaming\\Ditto\\Ditto.Settings"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "# A-New-LinkDirectory \"$env:AppData\\Ditto\"",
        "A-Copy-Item \"$bucketsdir\\$bucket\\extra\\$app\\Ditto.db\" \"$persist_dir\\AppData\\Roaming\\Ditto\\Ditto.db\"",
        "if (!(Test-Path \"$persist_dir\\AppData\\Roaming\\Ditto\\Ditto.Settings\")) {",
        "    '[Ditto]', \"DBPath3=Ditto.db\" | Set-Content \"$persist_dir\\AppData\\Roaming\\Ditto\\Ditto.Settings\" -Encoding Ascii",
        "}"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/sabrogden/Ditto/releases/download/$version/DittoSetup_$underscoreVersion.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
