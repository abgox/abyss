{
    "version": "2025.9.0",
    "description": "一款快速、注重隐私的API客户端，支持REST、GraphQL、SSE、WebSocket和gRPC | A fast, privacy-first API client for REST, GraphQL, SSE, WebSocket, and gRPC.",
    "homepage": "https://yaak.app/",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/mountain-loop/yaak/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/mountain-loop/yaak/releases/download/v2025.9.0/Yaak_2025.9.0_x64-setup.exe",
            "hash": "7dd371cecbb9c97ee840d7f634de143708529c7310c767ca262d1ebf03722f90"
        }
    },
    "shortcuts": [
        [
            "app\\yaak-app.exe",
            "Yaak"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:AppData\\app.yaak.desktop\")",
        "A-Install-Exe -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData @(\"$env:LocalAppData\\app.yaak.desktop\")"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/mountain-loop/yaak",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/mountain-loop/yaak/releases/download/v$version/Yaak_$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
