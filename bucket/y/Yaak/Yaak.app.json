{
    "version": "2026.2.0",
    "description": "一款快速、注重隐私的 API 客户端，支持 REST、GraphQL、SSE、WebSocket 和 gRPC | A fast, privacy-first API client for REST, GraphQL, SSE, WebSocket, and gRPC",
    "homepage": "https://yaak.app/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/mountain-loop/yaak/releases/download/v2026.2.0/Yaak_2026.2.0_x64-setup.exe",
            "hash": "d43b5476a303a884a4d3ffea6e8c9b100f3d392fd05619b9f66789b580c6ad73"
        }
    },
    "shortcuts": [
        [
            "app\\yaak-app.exe",
            "Yaak"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\app.yaak.desktop\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\app.yaak.desktop\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/mountain-loop/yaak/releases/download/v$version/Yaak_$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
