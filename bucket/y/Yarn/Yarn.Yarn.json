{
    "version": "1.22.22",
    "description": "快速、可靠且安全的 Node.js 依赖管理器 | Fast, reliable, and secure dependency Node.js dependency manager",
    "homepage": "https://github.com/yarnpkg/yarn",
    "license": {
        "identifier": "BSD-2-Clause"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/yarnpkg/yarn/releases/download/v1.22.22/yarn-1.22.22.msi",
            "hash": "ebc1f46891b8d507efad2dd18eec2c4e617457f93e13bc701483cb047a053fa1"
        }
    },
    "extract_dir": "Yarn",
    "extract_to": "app",
    "env_add_path": [
        "bin",
        "app\\bin"
    ],
    "persist": [
        [
            "bin",
            "AppData\\Local\\Yarn\\bin"
        ],
        [
            "global",
            "AppData\\Local\\Yarn\\Data\\global"
        ],
        [
            "cache",
            "AppData\\Local\\Yarn\\cache"
        ],
        [
            "mirror",
            "AppData\\Local\\Yarn\\mirror"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-File \"$home\\.yarnrc\"",
        "A-New-LinkFile \"$home\\.yarnrc\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "yarn config set prefix \"$dir\\bin\"",
        "yarn config set global-folder \"$dir\\global\"",
        "yarn config set cache-folder \"$dir\\cache\"",
        "yarn config set yarn-offline-mirror \"$dir\\mirror\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/yarnpkg/yarn/releases/download/v$version/yarn-$version.msi"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
