{
    "version": "7.5.1",
    "description": "新一代效率工具平台，自由组合插件应用，打造专属你的趁手工具集 | A modern, simple, and extensible desktop software that allows you to create a handy toolset by freely choosing from a rich set of plugins.",
    "homepage": "https://u.tools/",
    "license": {
        "identifier": "Unknown",
        "url": "https://u.tools/agreement.html"
    },
    "architecture": {
        "64bit": {
            "url": "https://open.u-tools.cn/download/uTools-7.5.1.exe",
            "hash": "2a842cb3b4647502d6e421520861fd97b03da5e9f03113af44c854dfc03fd06c"
        }
    },
    "shortcuts": [
        [
            "app\\uTools.exe",
            "uTools"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\uTools\"",
        "A-Install-App -Uninstaller 'app\\Uninstall uTools.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\utools-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo, $out = A-Get-InstallerInfoFromWinget 'Yuanli.uTools' 'exe'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_user.InstallerSha256"
                }
            }
        }
    }
}
