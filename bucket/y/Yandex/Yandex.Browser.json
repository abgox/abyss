{
    "version": "25.12.3.1098",
    "description": "Yandex 浏览器内置 Alice，可跨设备同步密码、书签和银行卡，浏览速度快且安全 | Yandex Browser delivers fast and secure browsing with built-in Alice and the ability to sync passwords, bookmarks, and bank cards across devices",
    "homepage": "https://browser.yandex.com/",
    "license": {
        "identifier": "Freeware",
        "url": "https://yandex.com/legal/browser_agreement/"
    },
    "notes": [
        "The installation directory: $env:LocalAppData\\Yandex\\YandexBrowser",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:LocalAppData\\Yandex\\YandexBrowser",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://download.cdn.yandex.net/browser/int/25_12_3_1098_99222/en/Yandex.exe",
            "hash": "df0d1cf24cf5202f620a9915b0048b766e1a5a474e861ef19a6242336539303e"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:LocalAppData\\Yandex\\YandexBrowser\\User Data\"",
        "A-Install-App -ArgumentList '--silent','--do-not-launch-browser'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process \"$env:LocalAppData\\Yandex\\YandexBrowser\"",
        "$Uninstaller = Get-ChildItem \"$env:LocalAppData\\Yandex\\YandexBrowser\\Application\" setup.exe -Recurse | Sort-Object LastWriteTime -Descending | Select-Object -First 1",
        "A-Uninstall-App -Uninstaller $Uninstaller.FullName -ArgumentList '--uninstall', '--force-uninstall'",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:LocalAppData\\Yandex\\YandexBrowser\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$res, $out = A-Get-InstallerInfoFromWinget 'Yandex.Browser' 'exe'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_user.InstallerSha256"
                }
            }
        }
    }
}
