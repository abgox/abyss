{
    "version": "5.83.0",
    "description": "Yandex Music 是一项寻找和收听音乐和播客的服务，可为每位用户提供个性化推荐 | Yandex Music is a service for finding and listening to music and podcasts that provides personalized recommendations for each user",
    "homepage": "https://music.yandex.com/",
    "license": {
        "identifier": "Proprietary",
        "url": "https://yandex.com/legal/"
    },
    "architecture": {
        "64bit": {
            "url": "https://music-desktop-application.s3.yandex.net/stable/Yandex_Music_x64_5.83.0.exe",
            "hash": "bc31fae378602fa46c57629d231c75fadd58bbf34f99df9ae672f0cdeea2bb2c"
        }
    },
    "shortcuts": [
        [
            "app\\Яндекс Музыка.exe",
            "Яндекс Музыка"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\YandexMusic\"",
        "A-Install-App -Uninstaller 'app\\Uninstall Яндекс Музыка.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\yandexmusic-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo, $out = A-Get-InstallerInfoFromWinget 'Yandex.Music' 'exe'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_user.InstallerSha256"
                }
            }
        }
    }
}
