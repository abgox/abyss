{
    "version": "5.3.0",
    "description": "集找番、追番、看番的一站式弹幕追番平台 | An all-in-one bullet-screen anime platform for finding, following, and watching anime",
    "homepage": "https://animeko.org/",
    "license": {
        "identifier": "AGPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/open-ani/animeko/releases/download/v5.3.0/ani-5.3.0-windows-x86_64.zip",
            "hash": "6531d32e6d39b5efe11331e1a2b8f8fa5c2c3c3f7a8e2a040d8f65f43a2d864c"
        }
    },
    "extract_dir": "Ani",
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\Ani.exe",
            "Animeko"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Him188\\Ani\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:LocalAppData\\Him188\\Ani\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/open-ani/animeko/releases/download/v$version/ani-$version-windows-x86_64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
