{
    "version": "25.3.0",
    "description": "一个免费、开源、跨平台的 JavaScript 运行时环境 | A free, open-source, cross-platform JavaScript runtime environment.",
    "homepage": "https://nodejs.org/",
    "license": {
        "identifier": "Freeware"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\nodejs",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory",
        " ",
        "If you install multiple versions of OpenJS.NodeJS, they will overwrite each other, keeping only the highest version."
    ],
    "notes_cn": [
        "安装目录: $env:ProgramFiles\\nodejs",
        "参考: https://abyss.abgox.com/faq/external-installation-directory",
        " ",
        "如果同时安装 OpenJS.NodeJS 的多个版本，会相互覆盖，仅保留最高版本"
    ],
    "architecture": {
        "64bit": {
            "url": "https://nodejs.org/dist/v25.3.0/node-v25.3.0-x64.msi#/dl.msi_",
            "hash": "3f8c82f6d7edc2b00a1c9852e3bdd16feb6dbf8990279da9650a2fca9ebfdd65"
        },
        "arm64": {
            "url": "https://nodejs.org/dist/v25.3.0/node-v25.3.0-arm64.msi#/dl.msi_",
            "hash": "6f6d3bbc3edf9f52e168fcacb065bdb6ab8a496b9a6e75ee11637fc3a79cb873"
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Install-Msi"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Uninstall-Msi"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/nodejs/node",
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://nodejs.org/dist/v$version/node-v$version-x64.msi#/dl.msi_"
            },
            "arm64": {
                "url": "https://nodejs.org/dist/v$version/node-v$version-arm64.msi#/dl.msi_"
            }
        }
    }
}
