    ],
    "notes_cn": [
        "安装目录: $env:ProgramFiles\\nodejs",
        "参考: https://abyss.abgox.com/faq/external-installation-directory",
        " ",
        "如果同时安装 OpenJS.NodeJS 的多个版本，会相互覆盖，仅保留最高版本"
    ],
    "architecture": {
        "64bit": {
            "url": "https://nodejs.org/dist/v25.7.0/node-v25.7.0-x64.msi#/dl.msi_",
            "hash": "5cb49889fd408ab9fe19471b0ab52badaf5724e47a6f824b0e11cafd09576838"
        },
        "arm64": {
            "url": "https://nodejs.org/dist/v25.7.0/node-v25.7.0-arm64.msi#/dl.msi_",
            "hash": "39d400db485fdb261981849a15c52c1f051ff8356c0f75c02bb09151498c290d"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Install-Msi"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Uninstall-Msi"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/nodejs/node",
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://nodejs.org/dist/v$version/node-v$version-x64.msi#/dl.msi_"
            },
            "arm64": {
                "url": "https://nodejs.org/dist/v$version/node-v$version-arm64.msi#/dl.msi_"
            }
        }
    }
}
