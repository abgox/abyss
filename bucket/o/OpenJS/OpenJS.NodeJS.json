{
    "version": "25.2.0",
    "description": "一个免费、开源、跨平台的 JavaScript 运行时环境 | A free, open-source, cross-platform JavaScript runtime environment.",
    "homepage": "https://nodejs.org/",
    "license": {
        "identifier": "Freeware",
        "url": "https://github.com/nodejs/node/blob/main/LICENSE"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\nodejs",
        "Reference: https://abyss.abgox.com/faq/external-installation-directories",
        " ",
        "If you install multiple versions of OpenJS.NodeJS, they will overwrite each other, keeping only the highest version."
    ],
    "notes-cn": [
        "安装目录: $env:ProgramFiles\\nodejs",
        "参考: https://abyss.abgox.com/faq/external-installation-directories",
        " ",
        "如果同时安装 OpenJS.NodeJS 的多个版本，会相互覆盖，仅保留最高版本"
    ],
    "architecture": {
        "64bit": {
            "url": "https://nodejs.org/dist/v25.2.0/node-v25.2.0-x64.msi#/dl.msi_",
            "hash": "2713ab55a425f4367ea161e3e92b69cfa2704c0fd32f64c1b067247ac6b1f5f8"
        },
        "arm64": {
            "url": "https://nodejs.org/dist/v25.2.0/node-v25.2.0-arm64.msi#/dl.msi_",
            "hash": "652e602a34e67725db596b4a3da17fa2bc65c789e5c98a88c5e04e8066b989b6"
        }
    },
    "shortcuts": [
        [
            "$env:ProgramFiles\\nodejs\\node.exe",
            "Node.js"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Install-Exe msi"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "$ProductCode = A-Get-ProductCode '^Node.js$'",
        "A-Uninstall-Exe $ProductCode"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/nodejs/node",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://nodejs.org/dist/v$version/node-v$version-x64.msi#/dl.msi_"
            },
            "arm64": {
                "url": "https://nodejs.org/dist/v$version/node-v$version-arm64.msi#/dl.msi_"
            }
        }
    }
}
