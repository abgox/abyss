    ],
    "architecture": {
        "64bit": {
            "url": "https://nodejs.org/dist/v24.13.0/node-v24.13.0-x64.msi#/dl.msi_",
            "hash": "1a5f0cd914386f3be2fbaf03ad9fff808a588ce50d2e155f338fad5530575f18"
        },
        "arm64": {
            "url": "https://nodejs.org/dist/v24.13.0/node-v24.13.0-arm64.msi#/dl.msi_",
            "hash": "9ef67a1cc2b64de38bdd6139d7967699915312df37e9b176277631165e39798d"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Install-Msi"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Uninstall-Msi"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://nodejs.org/dist/index.json",
        "jsonpath": "$..[?(@.lts != false)].version",
        "regex": "v([\\d.]+).*"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://nodejs.org/dist/v$version/node-v$version-x64.msi#/dl.msi_"
            },
            "arm64": {
                "url": "https://nodejs.org/dist/v$version/node-v$version-arm64.msi#/dl.msi_"
            }
        }
    }
