{
    "version": "22.18.0",
    "description": "一个免费、开源、跨平台的 JavaScript 运行时环境。A free, open-source, cross-platform JavaScript runtime environment.",
    "homepage": "https://nodejs.org/",
    "license": {
        "identifier": "Freeware",
        "url": "https://github.com/nodejs/node/blob/main/LICENSE"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\nodejs",
        "Scoop only manages installation, update, and uninstallation operations.",
        "If you install multiple versions of OpenJS.NodeJS, they will overwrite each other, keeping only the highest version."
    ],
    "notes-cn": [
        "实际安装目录: $env:ProgramFiles\\nodejs",
        "Scoop 只管理安装、更新和卸载操作",
        "如果同时安装 OpenJS.NodeJS 的多个版本，会相互覆盖，仅保留最高版本"
    ],
    "architecture": {
        "64bit": {
            "url": "https://nodejs.org/dist/v22.18.0/node-v22.18.0-x64.msi#/dl.exe",
            "hash": "dffd8e34d8eb1a1a2e6f5e6f129c4b1b8a34aa54e02799007adc99d73efac75c"
        },
        "arm64": {
            "url": "https://nodejs.org/dist/v22.18.0/node-v22.18.0-arm64.msi#/dl.exe",
            "hash": "1dd46ad5edd1085da2b1a5b7e3e2a03d0266476786a7849a1207045fecc73d39"
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Install-Exe -Installer 'C:\\Windows\\System32\\msiexec.exe' -ArgumentList @('/i', \"$dir\\$fname\", '/passive') -SuccessFile \"$env:ProgramFiles\\nodejs\\node.exe\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "$ProductCode = A-Get-ProductCode '^Node.js$'",
        "A-Uninstall-Exe -Uninstaller 'C:\\Windows\\System32\\msiexec.exe' -ArgumentList @('/x', $ProductCode, '/passive') -FailureFile \"$env:ProgramFiles\\nodejs\\node.exe\""
    ],
    "post_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://nodejs.org/dist/index.json",
        "jsonpath": "$..[?(@.lts != false)].version",
        "regex": "v([\\d\\.]+).*"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://nodejs.org/dist/v$version/node-v$version-x64.msi#/dl.exe"
            },
            "arm64": {
                "url": "https://nodejs.org/dist/v$version/node-v$version-arm64.msi#/dl.exe"
            }
        }
    }
}
