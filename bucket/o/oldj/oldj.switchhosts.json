{
    "version": "4.2.0",
    "description": "一个管理、切换多个 hosts 方案的工具，快速切换 hosts | An App for hosts management & switching. Switch hosts quickly",
    "homepage": "https://switchhosts.vercel.app/",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/oldj/SwitchHosts/releases/download/v4.2.0/SwitchHosts-4.2.0-win.zip",
            "hash": "4a36b2e6f65dbf35045c28ed19a50d736fe24139967931bcc293108ca3a0d3ac"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\SwitchHosts.exe",
            "SwitchHosts"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$home\\.SwitchHosts\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:AppData\\SwitchHosts\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/oldj/SwitchHosts/releases/download/v$version/SwitchHosts-$version-win.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
