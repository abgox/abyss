{
    "version": "1.3.1",
    "description": "一个命令行工具，用于搜索 Git 仓库并将结果输出为 TSV 格式。 | A command-line tool that searches Git repositories using ripgrep and outputs results in TSV format.",
    "homepage": "https://github.com/onozaty/reporg",
    "license": {
        "identifier": "MIT"
    },
    "depends": "abyss/BurntSushi.ripgrep.MSVC",
    "architecture": {
        "64bit": {
            "url": "https://github.com/onozaty/reporg/releases/download/v1.3.1/reporg_v1.3.1_Windows_x86_64.zip",
            "hash": "bc9a6959efb144b95e4503089e0c03b968efecd7f4a6736e933ae5ab0f268eef"
        },
        "arm64": {
            "url": "https://github.com/onozaty/reporg/releases/download/v1.3.1/reporg_v1.3.1_Windows_arm64.zip",
            "hash": "7029858736e804fb71192f4e5a88e48d2defe5116ec6016d31ac3dbf2aab69ca"
        }
    },
    "extract_to": "app",
    "bin": "app\\reporg.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/onozaty/reporg/releases/download/v$version/reporg_v$version_Windows_x86_64.zip"
            },
            "arm64": {
                "url": "https://github.com/onozaty/reporg/releases/download/v$version/reporg_v$version_Windows_arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
