{
    "version": "1.2.0",
    "description": "一个命令行工具，用于搜索 Git 仓库并将结果输出为 TSV 格式。 | A command-line tool that searches Git repositories using ripgrep and outputs results in TSV format.",
    "homepage": "https://github.com/onozaty/reporg",
    "license": {
        "identifier": "MIT"
    },
    "depends": "abyss/BurntSushi.ripgrep.MSVC",
    "architecture": {
        "64bit": {
            "url": "https://github.com/onozaty/reporg/releases/download/v1.2.0/reporg_v1.2.0_Windows_x86_64.zip",
            "hash": "c8b36daca0c5921171c56f5ac5401e271eeaf2ee5a12eaf69deb22d66528fe9e"
        },
        "arm64": {
            "url": "https://github.com/onozaty/reporg/releases/download/v1.2.0/reporg_v1.2.0_Windows_arm64.zip",
            "hash": "a7f6954183d74afcd43cb9c168fa005aece4fe645439aaf1feec7753d2c82aa6"
        }
    },
    "extract_to": "app",
    "bin": "app\\reporg.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/onozaty/reporg/releases/download/v$version/reporg_v$version_Windows_x86_64.zip"
            },
            "arm64": {
                "url": "https://github.com/onozaty/reporg/releases/download/v$version/reporg_v$version_Windows_arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
