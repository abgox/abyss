{
    "version": "1.42.0",
    "description": "一款高性能 JavaScript 和 TypeScript 代码检查工具。 | A high-performance linter for JavaScript and TypeScript.",
    "homepage": "https://oxc.rs/docs/guide/usage/linter.html",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/oxc-project/oxc/releases/download/apps_v1.42.0/oxlint-win32-x64.zip",
            "hash": "75e1c3d5545966017b639f8bd77ee8507710e760d9400d0d55b8ab7ac71dcfc3"
        },
        "arm64": {
            "url": "https://github.com/oxc-project/oxc/releases/download/apps_v1.42.0/oxlint-win32-arm64.zip",
            "hash": "67114b66d36981d18b0a2a7b88da724886b3826b2bb2e8b03648fa7208c63b16"
        }
    },
    "extract_to": "app",
    "bin": "app\\oxlint.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "Get-ChildItem -Path $dir -Filter oxlint*.exe -Recurse | Select-Object -First 1 | Rename-Item -NewName oxlint.exe"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "apps_(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/oxc-project/oxc/releases/download/apps_v$version/oxlint-win32-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/oxc-project/oxc/releases/download/apps_v$version/oxlint-win32-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
