{
    "version": "1.43.0",
    "description": "一款高性能 JavaScript 和 TypeScript 代码检查工具 | A high-performance linter for JavaScript and TypeScript",
    "homepage": "https://oxc.rs/docs/guide/usage/linter.html",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/oxc-project/oxc/releases/download/apps_v1.43.0/oxlint-win32-x64.zip",
            "hash": "7df7f8623c612376eb746343521fe1054a5cb7c12e4d574b606f38fa772a98c2"
        },
        "arm64": {
            "url": "https://github.com/oxc-project/oxc/releases/download/apps_v1.43.0/oxlint-win32-arm64.zip",
            "hash": "c60d502df9d5f58f5a27b931512bbc2e51f18dde3b33ffc9e01d604980b9e1ae"
        }
    },
    "extract_to": "app",
    "bin": "app\\oxlint.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "Get-ChildItem -Path $dir -Filter oxlint*.exe -Recurse | Select-Object -First 1 | Rename-Item -NewName oxlint.exe"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "apps_(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/oxc-project/oxc/releases/download/apps_v$version/oxlint-win32-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/oxc-project/oxc/releases/download/apps_v$version/oxlint-win32-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
