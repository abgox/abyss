{
    "version": "1.36.0",
    "description": "一款高性能 JavaScript 和 TypeScript 代码检查工具。 | A high-performance linter for JavaScript and TypeScript.",
    "homepage": "https://oxc.rs/docs/guide/usage/linter.html",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/oxc-project/oxc/releases/download/apps_v1.36.0/oxlint-win32-x64.zip",
            "hash": "c372632304ae494b6459e240a1d8ced8a54d9d7aa8618007fe229c0b70871d5a"
        },
        "arm64": {
            "url": "https://github.com/oxc-project/oxc/releases/download/apps_v1.36.0/oxlint-win32-arm64.zip",
            "hash": "0a3d90e593f0b24ce2e2800b1f6b50b630492fa06ea87a30c7227213afe2848b"
        }
    },
    "extract_to": "app",
    "bin": "app\\oxlint.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "Get-ChildItem -Path $dir -Filter oxlint*.exe -Recurse | Select-Object -First 1 | Rename-Item -NewName oxlint.exe"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "apps_(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/oxc-project/oxc/releases/download/apps_v$version/oxlint-win32-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/oxc-project/oxc/releases/download/apps_v$version/oxlint-win32-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
