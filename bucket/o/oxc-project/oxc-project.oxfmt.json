{
    "version": "1.43.0",
    "description": "一个与 Prettier 兼容的代码格式化工具 | A Prettier-compatible code formatter",
    "homepage": "https://oxc.rs/docs/guide/usage/formatter.html",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/oxc-project/oxc/releases/download/apps_v1.43.0/oxfmt-win32-x64.zip",
            "hash": "fb212a86cec43120ae8a246105e48210b9e7cae9b905b173d375da5ece2ef332"
        },
        "arm64": {
            "url": "https://github.com/oxc-project/oxc/releases/download/apps_v1.43.0/oxfmt-win32-arm64.zip",
            "hash": "01ef009a38a21f17cb8fd0a8a68d3c697164772ef7e14ceffc9c707c59944ea1"
        }
    },
    "extract_to": "app",
    "bin": "app\\oxfmt.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "Get-ChildItem -Path $dir -Filter oxfmt*.exe -Recurse | Select-Object -First 1 | Rename-Item -NewName oxfmt.exe"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "apps_(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/oxc-project/oxc/releases/download/apps_v$version/oxfmt-win32-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/oxc-project/oxc/releases/download/apps_v$version/oxfmt-win32-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
