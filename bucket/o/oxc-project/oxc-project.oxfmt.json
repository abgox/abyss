{
    "version": "1.39.0",
    "description": "一个与 Prettier 兼容的代码格式化工具。 | A Prettier-compatible code formatter.",
    "homepage": "https://oxc.rs/docs/guide/usage/formatter.html",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/oxc-project/oxc/releases/download/apps_v1.39.0/oxfmt-win32-x64.zip",
            "hash": "8a34698febfa6a25e31b856d1a179cd2559333ad4447f94c03d1e88c3aab1471"
        },
        "arm64": {
            "url": "https://github.com/oxc-project/oxc/releases/download/apps_v1.39.0/oxfmt-win32-arm64.zip",
            "hash": "df455c8793474004b48276aa6bbc032c56ae0f91238a54e9b53d21eb7dee80d8"
        }
    },
    "extract_to": "app",
    "bin": "app\\oxfmt.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "Get-ChildItem -Path $dir -Filter oxfmt*.exe -Recurse | Select-Object -First 1 | Rename-Item -NewName oxfmt.exe"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "apps_(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/oxc-project/oxc/releases/download/apps_v$version/oxfmt-win32-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/oxc-project/oxc/releases/download/apps_v$version/oxfmt-win32-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
