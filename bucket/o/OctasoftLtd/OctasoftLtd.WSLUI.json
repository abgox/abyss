{
    "version": "0.16.2",
    "description": "WSL-UI - 一款轻量级桌面应用程序，用于管理 Windows 子系统 Linux（WSL）发行版 | WSL-UI - A lightweight desktop application to manage Windows Subsystem for Linux (WSL) distributions",
    "homepage": "https://wsl-ui.octasoft.co.uk/",
    "license": {
        "identifier": "BUSL-1.1"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/octasoft-ltd/wsl-ui/releases/download/v0.16.2/WSL.UI_0.16.2_x64-setup.exe",
            "hash": "2b435c6a9657f13336ed57be5bb1d9ece56a0f565469e0f1d20018173971e984"
        },
        "arm64": {
            "url": "https://github.com/octasoft-ltd/wsl-ui/releases/download/v0.16.2/WSL.UI_0.16.2_arm64-setup.exe",
            "hash": "13d09805debe88b51170c70c1281a2b5b4ef7f726866d16af930635138c0c9ac"
        }
    },
    "shortcuts": [
        [
            "app\\wsl-ui.exe",
            "WSL UI"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:LocalAppData\\wsl-ui\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/octasoft-ltd/wsl-ui/releases/download/v$version/WSL.UI_$version_x64-setup.exe"
            },
            "arm64": {
                "url": "https://github.com/octasoft-ltd/wsl-ui/releases/download/v$version/WSL.UI_$version_arm64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
