{
    "version": "0.18.0",
    "description": "WSL-UI - 一款轻量级桌面应用程序，用于管理 Windows 子系统 Linux（WSL）发行版 | WSL-UI - A lightweight desktop application to manage Windows Subsystem for Linux (WSL) distributions",
    "homepage": "https://wsl-ui.octasoft.co.uk/",
    "license": {
        "identifier": "BUSL-1.1"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/octasoft-ltd/wsl-ui/releases/download/v0.18.0/WSL.UI_0.18.0_x64-setup.exe",
            "hash": "808a4b34188a9a8068219ad447ff7039950f3716c6c42deda6814cac791d263b"
        },
        "arm64": {
            "url": "https://github.com/octasoft-ltd/wsl-ui/releases/download/v0.18.0/WSL.UI_0.18.0_arm64-setup.exe",
            "hash": "0982b153a9e68058ca2764803f9998ec9cb90babfbdd9eb32a5f1bc929e1156c"
        }
    },
    "shortcuts": [
        [
            "app\\wsl-ui.exe",
            "WSL UI"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:LocalAppData\\wsl-ui\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/octasoft-ltd/wsl-ui/releases/download/v$version/WSL.UI_$version_x64-setup.exe"
            },
            "arm64": {
                "url": "https://github.com/octasoft-ltd/wsl-ui/releases/download/v$version/WSL.UI_$version_arm64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
