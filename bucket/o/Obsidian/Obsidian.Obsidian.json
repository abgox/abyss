{
    "version": "1.11.7",
    "description": "强大的知识库，基于 Markdown 文件 | Powerful knowledge base that works on top of a local folder of plain text Markdown files",
    "homepage": "https://obsidian.md/",
    "license": {
        "identifier": "Unknown",
        "url": "https://obsidian.md/eula"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/obsidianmd/obsidian-releases/releases/download/v1.11.7/Obsidian-1.11.7.exe",
            "hash": "b29fd8812282bc44e8782f3ed00c13bc54ef8a4039c1d86b2d3559311e77b895"
        },
        "arm64": {
            "url": "https://github.com/obsidianmd/obsidian-releases/releases/download/v1.11.7/Obsidian-1.11.7.exe",
            "hash": "b29fd8812282bc44e8782f3ed00c13bc54ef8a4039c1d86b2d3559311e77b895"
        }
    },
    "bin": "app\\obsidian.exe",
    "shortcuts": [
        [
            "app\\obsidian.exe",
            "Obsidian"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$home\\Documents\\Obsidian Vault\", \"$env:AppData\\obsidian\"",
        "A-Install-App -Uninstaller 'app\\Uninstall Obsidian.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\obsidian-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/obsidianmd/obsidian-releases/releases/download/v$version/Obsidian-$version.exe"
            },
            "arm64": {
                "url": "https://github.com/obsidianmd/obsidian-releases/releases/download/v$version/Obsidian-$version.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
