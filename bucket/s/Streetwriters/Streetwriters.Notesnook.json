{
    "version": "3.2.4",
    "description": "一款完全开源且端到端加密的笔记应用，可替代 Evernote。A fully open source & end-to-end encrypted note taking alternative to Evernote.",
    "homepage": "https://github.com/streetwriters/notesnook",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://github.com/streetwriters/notesnook/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/streetwriters/notesnook/releases/download/v3.2.4/notesnook_win_x64.exe",
            "hash": "sha512:660bf2ee8476d9087465564c7dfba21dccc66e1435018d0a9ffa64926c7334cafb1786990c4ce57697fbf515377a51a6a6fc51fd1c9273add1a304a952d5c1ed"
        },
        "arm64": {
            "url": "https://github.com/streetwriters/notesnook/releases/download/v3.2.4/notesnook_win_arm64.exe",
            "hash": "sha512:257291add6930af7f0540d1afc30241aa7e10b3918a6556e9437ddddad07807b138059d2b613987a1bb6fa8f346c52ba1756a058a7ba2e707c5bb9296d63c430"
        }
    },
    "shortcuts": [
        [
            "Notesnook.exe",
            "Notesnook"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Install-Exe -Uninstaller 'Uninstall Notesnook.exe'",
        "A-New-LinkDirectory @(\"$env:AppData\\Notesnook\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData @(\"$env:LocalAppData\\@notesnookdesktop-updater\")"
    ],
    "post_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/streetwriters/notesnook/releases/latest",
        "regex": "/tree/(?:v|V)?([^\"?]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/streetwriters/notesnook/releases/download/v$version/notesnook_win_x64.exe"
            },
            "arm64": {
                "url": "https://github.com/streetwriters/notesnook/releases/download/v$version/notesnook_win_arm64.exe"
            }
        },
        "hash": {
            "url": "$baseurl/latest.yml",
            "regex": "(?sm)$basename.*?$base64"
        }
    }
}
