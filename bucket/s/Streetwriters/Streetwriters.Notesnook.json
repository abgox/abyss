    "homepage": "https://github.com/streetwriters/notesnook",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/streetwriters/notesnook/releases/download/v3.3.8/notesnook_win_x64.exe",
            "hash": "ef034d7411ec69493ca2009daceedc2ee0b4d1e192a95867f9def48e4b8c9690"
        },
        "arm64": {
            "url": "https://github.com/streetwriters/notesnook/releases/download/v3.3.8/notesnook_win_arm64.exe",
            "hash": "eb38d04c04ae4f6ecbab240b3d74382d668c00936c682862f5aad93ac90b7512"
        }
    },
    "shortcuts": [
        [
            "app\\Notesnook.exe",
            "Notesnook"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Notesnook\"",
        "A-Install-App -Uninstaller 'app\\Uninstall Notesnook.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\@notesnookdesktop-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/streetwriters/notesnook/releases/download/v$version/notesnook_win_x64.exe"
            },
            "arm64": {
                "url": "https://github.com/streetwriters/notesnook/releases/download/v$version/notesnook_win_arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
