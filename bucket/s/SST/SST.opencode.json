{
    "version": "1.2.2",
    "description": "专为终端打造的 AI 编程助手 | The AI coding agent built for the terminal",
    "homepage": "https://opencode.ai/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/sst/opencode/releases/download/v1.2.2/opencode-windows-x64.zip",
            "hash": "775020b56804fb43037afbf40ca8fc35a3e2f12cc14a30e2a1544da95fd78bba"
        }
    },
    "extract_to": "app",
    "bin": "app\\opencode.exe",
    "shortcuts": [
        [
            "app\\opencode.exe",
            "OpenCode"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$home\\.config\\opencode\", \"$home\\.local\\share\\opencode\", \"$home\\.local\\state\\opencode\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$home\\.cache\\opencode\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/sst/opencode/releases/download/v$version/opencode-windows-x64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
