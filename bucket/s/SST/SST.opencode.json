{
    "version": "1.1.17",
    "description": "专为终端打造的 AI 编程助手 | The AI coding agent built for the terminal.",
    "homepage": "https://opencode.ai/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/sst/opencode/releases/download/v1.1.17/opencode-windows-x64.zip",
            "hash": "585b02e2fbfdc9d46346df7aee04fe3c2ca5d54629e743d108384d85bc0b74bc"
        }
    },
    "extract_to": "app",
    "bin": "app\\opencode.exe",
    "shortcuts": [
        [
            "app\\opencode.exe",
            "OpenCode"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$home\\.config\\opencode\", \"$home\\.local\\share\\opencode\", \"$home\\.local\\state\\opencode\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$home\\.cache\\opencode\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/sst/opencode/releases/download/v$version/opencode-windows-x64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
