{
    "version": "0.237",
    "description": "适用于华硕笔记本电脑的轻量级开源控制工具 | Lightweight control tool for Asus laptops",
    "homepage": "https://g-helper.com/",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://github.com/seerge/g-helper/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/seerge/g-helper/releases/download/v0.237/GHelper.zip",
            "hash": "f13c14bbd7bd596aa0be7491a6cf32aa3dac13013a9e0ec8880f9d1042cc8dd4"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\GHelper.exe",
            "G-Helper"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\GHelper\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/seerge/g-helper/releases/download/v$version/GHelper.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
