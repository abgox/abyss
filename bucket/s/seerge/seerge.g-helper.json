{
    "version": "0.236",
    "description": "适用于华硕笔记本电脑的轻量级开源控制工具 | Lightweight control tool for Asus laptops",
    "homepage": "https://g-helper.com/",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://github.com/seerge/g-helper/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/seerge/g-helper/releases/download/v0.236/GHelper.zip",
            "hash": "dccd8d045a1888213a7179e825f303c38e75436ef31a4a27d9f98cd93f075306"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\GHelper.exe",
            "G-Helper"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:AppData\\GHelper\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/seerge/g-helper/releases/download/v$version/GHelper.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
