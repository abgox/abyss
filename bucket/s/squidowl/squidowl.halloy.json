{
    "version": "2025.12",
    "description": "一款用 Rust 编写的开源 IRC 客户端，采用 Iced 图形用户界面库 | An open-source IRC client written in Rust, with the Iced GUI library.",
    "homepage": "https://halloy.chat/",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Halloy",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes-cn": [
        "安装目录: $env:ProgramFiles\\Halloy",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/squidowl/halloy/releases/download/2025.12/halloy-installer.msi#/dl.msi_",
            "hash": "60efefdacfe0cd3e83c695014440064cf0eaf5079daeec52e7f48b229ef80435"
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:AppData\\halloy\"",
        "A-Install-Msi"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Uninstall-Msi",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/squidowl/halloy/releases/download/$version/halloy-installer.msi#/dl.msi_"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
