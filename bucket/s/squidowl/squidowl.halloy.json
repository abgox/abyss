    "notes-cn": [
        "安装目录: $env:ProgramFiles\\Halloy",
        "参考: https://abyss.abgox.com/faq/external-installation-directories"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/squidowl/halloy/releases/download/2025.10/halloy-installer.msi#/dl.msi_",
