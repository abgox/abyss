{
    "version": "26.1.4",
    "description": "一个用 Rust 编写的终端文件管理器，基于非阻塞异步 I/O | A terminal file manager written in Rust, based on non-blocking async I/O.",
    "homepage": "https://github.com/sxyazi/yazi",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/sxyazi/yazi/blob/main/LICENSE"
    },
    "depends": [
        "abyss/sharkdp.fd",
        "abyss/BurntSushi.ripgrep.MSVC"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/sxyazi/yazi/releases/download/v26.1.4/yazi-x86_64-pc-windows-msvc.zip",
            "hash": "16876e1a7acd62a6daf14c1a7c142dd1de12649786b511d4a2ad5a345829478c",
            "extract_dir": "yazi-x86_64-pc-windows-msvc"
        },
        "arm64": {
            "url": "https://github.com/sxyazi/yazi/releases/download/v26.1.4/yazi-aarch64-pc-windows-msvc.zip",
            "hash": "b428feb2bce88219f4797075289a27a2d2d9131b53502a693ab9683aeb51f907",
            "extract_dir": "yazi-aarch64-pc-windows-msvc"
        }
    },
    "extract_to": "app",
    "bin": [
        "app\\ya.exe",
        "app\\yazi.exe"
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\yazi\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/sxyazi/yazi/releases/download/v$version/yazi-x86_64-pc-windows-msvc.zip"
            },
            "arm64": {
                "url": "https://github.com/sxyazi/yazi/releases/download/v$version/yazi-aarch64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
