{
    "version": "26.1.22",
    "description": "一个用 Rust 编写的终端文件管理器，基于非阻塞异步 I/O | A terminal file manager written in Rust, based on non-blocking async I/O.",
    "homepage": "https://github.com/sxyazi/yazi",
    "license": {
        "identifier": "MIT"
    },
    "depends": [
        "abyss/sharkdp.fd",
        "abyss/BurntSushi.ripgrep.MSVC"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/sxyazi/yazi/releases/download/v26.1.22/yazi-x86_64-pc-windows-msvc.zip",
            "hash": "7d6c8e3f596f99dd8f20fc7b806c9195c4746c2b7100d0e90a7ff80c259c899a",
            "extract_dir": "yazi-x86_64-pc-windows-msvc"
        },
        "arm64": {
            "url": "https://github.com/sxyazi/yazi/releases/download/v26.1.22/yazi-aarch64-pc-windows-msvc.zip",
            "hash": "9053be6be1d4f8b06395d55af733f247fb060b14410b9165907f279844e7501b",
            "extract_dir": "yazi-aarch64-pc-windows-msvc"
        }
    },
    "env_set": {
        "YAZI_FILE_ONE": "$env:ProgramFiles\\Git\\usr\\bin\\file.exe"
    },
    "extract_to": "app",
    "bin": [
        "app\\ya.exe",
        "app\\yazi.exe"
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\yazi\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/sxyazi/yazi/releases/download/v$version/yazi-x86_64-pc-windows-msvc.zip"
            },
            "arm64": {
                "url": "https://github.com/sxyazi/yazi/releases/download/v$version/yazi-aarch64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
