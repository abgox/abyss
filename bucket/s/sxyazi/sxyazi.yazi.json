{
    "version": "25.12.29",
    "description": "一个用 Rust 编写的终端文件管理器，基于非阻塞异步 I/O | A terminal file manager written in Rust, based on non-blocking async I/O.",
    "homepage": "https://github.com/sxyazi/yazi",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/sxyazi/yazi/blob/main/LICENSE"
    },
    "depends": [
        "abyss/sharkdp.fd",
        "abyss/BurntSushi.ripgrep.MSVC"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/sxyazi/yazi/releases/download/v25.12.29/yazi-x86_64-pc-windows-msvc.zip",
            "hash": "b4508afabb008eb8bd30807b4bf74c940c2ba3b8bf8c9b8ad8e8ff5083f1cb94",
            "extract_dir": "yazi-x86_64-pc-windows-msvc"
        },
        "arm64": {
            "url": "https://github.com/sxyazi/yazi/releases/download/v25.12.29/yazi-aarch64-pc-windows-msvc.zip",
            "hash": "3191b77c0d36d5a99401597ad338c276fdf8aad63718d5a2bd2801d86c9fd5bd",
            "extract_dir": "yazi-aarch64-pc-windows-msvc"
        }
    },
    "extract_to": "app",
    "bin": [
        "app\\ya.exe",
        "app\\yazi.exe"
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\yazi\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/sxyazi/yazi/releases/download/v$version/yazi-x86_64-pc-windows-msvc.zip"
            },
            "arm64": {
                "url": "https://github.com/sxyazi/yazi/releases/download/v$version/yazi-aarch64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
