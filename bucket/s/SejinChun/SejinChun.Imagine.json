                ]
            ],
            "shortcuts": [
                [
                    "app\\Imagine64.exe",
                    "Imagine"
                ]
            ]
        },
        "arm64": {
            "url": "https://raw.githubusercontent.com/nyam1003/imagine/main/arm64/Imagine_2.4.0_arm64_Unicode_Full.zip",
            "hash": "984e07adeaae71dabb9d948ce8a25986d9f00eaf24804610a8ce55d704f286f1",
            "bin": [
                "app\\ImagineA64.exe",
                [
                    "app\\ImagineA64.exe",
                    "Imagine"
                ]
            ],
            "shortcuts": [
                [
                    "app\\ImagineA64.exe",
                    "Imagine"
                ]
            ]
        }
    },
    "extract_to": "app",
    "persist": [
        [
            "app\\Imagine.ini",
            "Imagine.ini"
        ],
        [
            "app\\PlugInst.inf",
            "PlugInst.inf"
        ],
        [
            "app\\Plugin",
            "Plugin"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-File \"$persist_dir\\Imagine.ini\"",
        "A-New-File \"$persist_dir\\PlugInst.inf\"",
        "A-New-LinkDirectory \"$env:AppData\\Imagine\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://www.nyam.pe.kr/dev/imagine/",
        "regex": "v(\\d[\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://raw.githubusercontent.com/nyam1003/imagine/main/x64/Imagine_$version_x64_Unicode_Full.zip"
            },
            "arm64": {
                "url": "https://raw.githubusercontent.com/nyam1003/imagine/main/arm64/Imagine_$version_arm64_Unicode_Full.zip"
            }
        }
    }
