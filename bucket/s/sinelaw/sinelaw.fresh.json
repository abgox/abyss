{
    "version": "0.2.1",
    "description": "一个基于终端的文本编辑器 | A terminal-based text editor",
    "homepage": "https://sinelaw.github.io/fresh/",
    "license": {
        "identifier": "GPL-2.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/sinelaw/fresh/releases/download/v0.2.1/fresh-editor-x86_64-pc-windows-msvc.zip",
            "hash": "2fc926a436e37406afcf63f6d6291da11efac95abd1c3e4069dc11c93ad8f3f4"
        }
    },
    "extract_to": "app",
    "bin": "app\\fresh.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\fresh\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/sinelaw/fresh/releases/download/v$version/fresh-editor-x86_64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
