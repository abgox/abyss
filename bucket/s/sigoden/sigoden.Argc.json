{
    "version": "1.23.0",
    "description": "一个 Bash CLI 框架，也是 Bash Command Runner | A Bash CLI framework, also a Bash command runner.",
    "homepage": "https://github.com/sigoden/argc",
    "license": {
        "identifier": "Apache-2.0|MIT"
    },
    "suggest": {
        "Argc-completions": "abyss/sigoden.Argc-completions",
        "PSCompletions": "abyss/abgox.PSCompletions"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/sigoden/argc/releases/download/v1.23.0/argc-v1.23.0-x86_64-pc-windows-msvc.zip",
            "hash": "55afd573dc89198a828e117125fd950c9f06124ff7c3aee2e7b30ffcc3eadecc"
        },
        "arm64": {
            "url": "https://github.com/sigoden/argc/releases/download/v1.23.0/argc-v1.23.0-aarch64-pc-windows-msvc.zip",
            "hash": "ad48ca7fa4752f07027af000fcb5b80c519de2121df3836d3826942c80b50f3b"
        }
    },
    "extract_to": "app",
    "bin": "app\\argc.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "arm64": {
                "url": "https://github.com/sigoden/argc/releases/download/v$version/argc-v$version-aarch64-pc-windows-msvc.zip"
            },
            "64bit": {
                "url": "https://github.com/sigoden/argc/releases/download/v$version/argc-v$version-x86_64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
