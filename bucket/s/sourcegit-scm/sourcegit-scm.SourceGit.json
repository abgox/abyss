{
    "version": "2026.03",
    "description": "为 git 用户提供的开源图形用户界面客户端 | Open-source GUI client for git users",
    "homepage": "https://github.com/sourcegit-scm/sourcegit",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/sourcegit-scm/sourcegit/releases/download/v2026.03/sourcegit_2026.03.win-x64.zip",
            "hash": "9e0b7e206cb18a8e6e608a8776df95c89e71429bbc7455e9f58498c8cf7288d2"
        },
        "arm64": {
            "url": "https://github.com/sourcegit-scm/sourcegit/releases/download/v2026.03/sourcegit_2026.03.win-arm64.zip",
            "hash": "b3668fd306f4116b0862de1b9fd42706965ed66d09642d3fe0d6e796a39ceffb"
        }
    },
    "extract_dir": "SourceGit",
    "extract_to": "app",
    "bin": "app\\SourceGit.exe",
    "shortcuts": [
        [
            "app\\SourceGit.exe",
            "SourceGit"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\SourceGit\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/sourcegit-scm/sourcegit/releases/download/v$version/sourcegit_$version.win-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/sourcegit-scm/sourcegit/releases/download/v$version/sourcegit_$version.win-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
