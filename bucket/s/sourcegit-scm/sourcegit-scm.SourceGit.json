{
    "version": "2026.01",
    "description": "为 git 用户提供的开源图形用户界面客户端 | Open-source GUI client for git users.",
    "homepage": "https://github.com/sourcegit-scm/sourcegit",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/sourcegit-scm/sourcegit/releases/download/v2026.01/sourcegit_2026.01.win-x64.zip",
            "hash": "3a187307d2fc2565ec537a7b88a60d6abaecbd659fca6d7422e10775f48dde30"
        },
        "arm64": {
            "url": "https://github.com/sourcegit-scm/sourcegit/releases/download/v2026.01/sourcegit_2026.01.win-arm64.zip",
            "hash": "9f6f66a344a9edff83a95a170174eef3860d41df1d5a32ec9f249f16fb3df94c"
        }
    },
    "extract_dir": "SourceGit",
    "extract_to": "app",
    "bin": "app\\SourceGit.exe",
    "shortcuts": [
        [
            "app\\SourceGit.exe",
            "SourceGit"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\SourceGit\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/sourcegit-scm/sourcegit/releases/download/v$version/sourcegit_$version.win-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/sourcegit-scm/sourcegit/releases/download/v$version/sourcegit_$version.win-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
