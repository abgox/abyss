{
    "version": "2026.02",
    "description": "为 git 用户提供的开源图形用户界面客户端 | Open-source GUI client for git users",
    "homepage": "https://github.com/sourcegit-scm/sourcegit",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/sourcegit-scm/sourcegit/releases/download/v2026.02/sourcegit_2026.02.win-x64.zip",
            "hash": "edfbc39a57b73d1205356eb51d69b1408758d94db29e07739143bef9f207830d"
        },
        "arm64": {
            "url": "https://github.com/sourcegit-scm/sourcegit/releases/download/v2026.02/sourcegit_2026.02.win-arm64.zip",
            "hash": "79e61825b0c80a21a0b1357a8bc9aa7f0a6477cebe12b6c7ae615534a34077ed"
        }
    },
    "extract_dir": "SourceGit",
    "extract_to": "app",
    "bin": "app\\SourceGit.exe",
    "shortcuts": [
        [
            "app\\SourceGit.exe",
            "SourceGit"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\SourceGit\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/sourcegit-scm/sourcegit/releases/download/v$version/sourcegit_$version.win-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/sourcegit-scm/sourcegit/releases/download/v$version/sourcegit_$version.win-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
