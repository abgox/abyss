{
    "version": "2025.40",
    "description": "为 git 用户提供的开源图形用户界面客户端 | Open-source GUI client for git users.",
    "homepage": "https://github.com/sourcegit-scm/sourcegit",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/sourcegit-scm/sourcegit/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/sourcegit-scm/sourcegit/releases/download/v2025.40/sourcegit_2025.40.win-x64.zip",
            "hash": "a8663bde4a79db6f02e1e8c2d6f233243f0e3a63287f2312635665c49cc88d93"
        },
        "arm64": {
            "url": "https://github.com/sourcegit-scm/sourcegit/releases/download/v2025.40/sourcegit_2025.40.win-arm64.zip",
            "hash": "29f75a3c76d655f7d26d45da3e608c68f29f8359c0da9102eaae206a2440b013"
        }
    },
    "extract_dir": "SourceGit",
    "extract_to": "app",
    "bin": "app\\SourceGit.exe",
    "shortcuts": [
        [
            "app\\SourceGit.exe",
            "SourceGit"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\SourceGit\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/sourcegit-scm/sourcegit/releases/download/v$version/sourcegit_$version.win-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/sourcegit-scm/sourcegit/releases/download/v$version/sourcegit_$version.win-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
