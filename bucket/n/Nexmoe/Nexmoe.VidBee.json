{
    "version": "1.2.0",
    "description": "适用于 YouTube、TikTok 及 1000 多个平台的免费开源视频下载器 | Free Open Source Video Downloader for YouTube, TikTok, and 1000+ Platforms",
    "homepage": "https://vidbee.org/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/nexmoe/VidBee/releases/download/v1.2.0/vidbee-1.2.0-setup.exe",
            "hash": "2a8c0ba46239741b62236b9a998ffa21c3e12e8ae6206b3c0c258079669c6379"
        }
    },
    "shortcuts": [
        [
            "app\\vidbee.exe",
            "vidbee"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\vidbee\"",
        "A-Install-App -Uninstaller 'app\\Uninstall vidbee.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\vidbee-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/nexmoe/VidBee/releases/download/v$version/vidbee-$version-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
