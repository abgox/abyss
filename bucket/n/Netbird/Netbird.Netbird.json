{
    "version": "0.60.8",
    "description": "通过单点登录 (SSO) 、多因素认证 (MFA) 和精细化访问控制，将您的设备接入基于 WireGuard® 的安全 overlay 网络。 | Connect your devices into a secure WireGuard®-based overlay network with SSO, MFA and granular access controls.",
    "homepage": "https://netbird.io/",
    "license": {
        "identifier": "BSD-3-Clause",
        "url": "https://github.com/netbirdio/netbird/blob/main/LICENSE"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Netbird",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes-cn": [
        "安装目录: $env:ProgramFiles\\Netbird",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/netbirdio/netbird/releases/download/v0.60.8/netbird_installer_0.60.8_windows_amd64.exe",
            "hash": "61aaf42f7c56a14ea6ce95624a1fd235c09ffeccf4f440801ddde567accbf65f"
        },
        "arm64": {
            "url": "https://github.com/netbirdio/netbird/releases/download/v0.60.8/netbird_installer_0.60.8_windows_arm64.exe",
            "hash": "b9fb8ca74dd6a89ba96ea44c91a5f6c427ed1037883a30ddb91e0328488f0265"
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:ProgramData\\Netbird\"",
        "A-Install-Exe -Uninstaller \"$env:ProgramFiles\\Netbird\\netbird_uninstall.exe\" -ArgumentList '/S'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process \"$env:ProgramFiles\\Netbird\"",
        "A-Remove-Link",
        "A-Uninstall-Exe"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/netbirdio/netbird/releases/download/v$version/netbird_installer_$version_windows_amd64.exe"
            },
            "arm64": {
                "url": "https://github.com/netbirdio/netbird/releases/download/v$version/netbird_installer_$version_windows_arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
