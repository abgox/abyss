{
    "version": "0.65.3",
    "description": "通过单点登录 (SSO) 、多因素认证 (MFA) 和精细化访问控制，将您的设备接入基于 WireGuard® 的安全 overlay 网络 | Connect your devices into a secure WireGuard®-based overlay network with SSO, MFA and granular access controls",
    "homepage": "https://netbird.io/",
    "license": {
        "identifier": "BSD-3-Clause"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Netbird",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:ProgramFiles\\Netbird",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/netbirdio/netbird/releases/download/v0.65.3/netbird_installer_0.65.3_windows_amd64.exe",
            "hash": "289a36a6befae0e97cf4ab73ed6d5410351cff35ec398fc4e89c1ebaa8c67570"
        },
        "arm64": {
            "url": "https://github.com/netbirdio/netbird/releases/download/v0.65.3/netbird_installer_0.65.3_windows_arm64.exe",
            "hash": "8e3c3e88c2517da22d15e28788417df0a89f9b5e72c23108c728bd361f6f4334"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:ProgramData\\Netbird\"",
        "A-Install-App -Uninstaller \"$env:ProgramFiles\\Netbird\\netbird_uninstall.exe\" -ArgumentList '/S'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process \"$env:ProgramFiles\\Netbird\"",
        "A-Remove-Link",
        "A-Uninstall-App"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/netbirdio/netbird/releases/download/v$version/netbird_installer_$version_windows_amd64.exe"
            },
            "arm64": {
                "url": "https://github.com/netbirdio/netbird/releases/download/v$version/netbird_installer_$version_windows_arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
