{
    "version": "0.111.0",
    "description": "一种用 Rust 编写的新型 shell | A new type of shell written in Rust",
    "homepage": "https://www.nushell.sh/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/nushell/nushell/releases/download/0.111.0/nu-0.111.0-x86_64-pc-windows-msvc.zip",
            "hash": "4efd0a72ce26052961183aa3ecb8dce17bb6c43903392bc3521a9fda4e6127b2"
        },
        "arm64": {
            "url": "https://github.com/nushell/nushell/releases/download/0.111.0/nu-0.111.0-aarch64-pc-windows-msvc.zip",
            "hash": "e4fe1309d3f001d6d05f6ee2a8e25bee25d2dd03ba33db1bca4367a69d7891b8"
        }
    },
    "extract_to": "app",
    "bin": "app\\nu.exe",
    "shortcuts": [
        [
            "app\\nu.exe",
            "Nushell",
            "--execute \"cd ~\""
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\nushell\", \"$env:LocalAppData\\nushell\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/nushell/nushell/releases/download/$version/nu-$version-x86_64-pc-windows-msvc.zip"
            },
            "arm64": {
                "url": "https://github.com/nushell/nushell/releases/download/$version/nu-$version-aarch64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
