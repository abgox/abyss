{
    "version": "0.7.0",
    "description": "Flow Control: 一款程序员的文本编辑器 | Flow Control: A programmer's text editor",
    "homepage": "https://flow-control.dev/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/neurocyte/flow/releases/download/v0.7.0/flow-v0.7.0-windows-x86_64.zip",
            "hash": "579d2171a3ad949d0d426750a38ce5fa526af10c770f1d484484d539be09bda5"
        },
        "arm64": {
            "url": "https://github.com/neurocyte/flow/releases/download/v0.7.0/flow-v0.7.0-windows-aarch64.zip",
            "hash": "56771f7c474d91f9804e6ec09fc56311c0cc3bda1d41fc1f4c9da9309fdf7765"
        }
    },
    "extract_to": "app",
    "bin": "app\\flow.exe",
    "shortcuts": [
        [
            "app\\flow-gui.exe",
            "Flow Control"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\flow\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/neurocyte/flow/releases/download/v$version/flow-v$version-windows-x86_64.zip"
            },
            "arm64": {
                "url": "https://github.com/neurocyte/flow/releases/download/v$version/flow-v$version-windows-aarch64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
