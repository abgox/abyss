    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/nashaofu/shell360/releases/download/v0.1.15/Shell360_0.1.15_x64-setup.exe",
            "hash": "c7ca4d2571674c165d9945b8a903f1023217cbd5481b7b9c598d7d196eb9228d"
        },
        "arm64": {
            "url": "https://github.com/nashaofu/shell360/releases/download/v0.1.15/Shell360_0.1.15_arm64-setup.exe",
            "hash": "98c0dfa424bff252e00cef15f0558c52cc84d1395f5f39d7e95391f1b9dbbd02"
        }
    },
    "shortcuts": [
        [
            "app\\shell360.exe",
            "Shell360"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:AppData\\com.nashaofu.shell360\",\"$env:LocalAppData\\com.nashaofu.shell360\")",
        "A-Install-Exe -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-TempData @(\"$env:LocalAppData\\com.nashaofu.shell360\\EBWebView\",\"$env:LocalAppData\\com.nashaofu.shell360\\logs\")",
        "A-Remove-Link",
        "A-Uninstall-Exe"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/nashaofu/shell360",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/nashaofu/shell360/releases/download/v$version/Shell360_$version_x64-setup.exe"
            },
            "arm64": {
                "url": "https://github.com/nashaofu/shell360/releases/download/v$version/Shell360_$version_arm64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
