        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-TempData @(\"$env:LocalAppData\\com.nashaofu.shell360\\EBWebView\",\"$env:LocalAppData\\com.nashaofu.shell360\\logs\")",
        "A-Remove-Link",
        "A-Uninstall-Exe"
