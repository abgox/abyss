    "architecture": {
        "64bit": {
            "url": "https://github.com/nashaofu/shell360/releases/download/v0.1.17/Shell360_0.1.17_x64-setup.exe",
            "hash": "baad50e360667b91ab2b14c180b3cfd488d9a34af9681a61a9f76d3309889dcf"
        },
        "arm64": {
            "url": "https://github.com/nashaofu/shell360/releases/download/v0.1.17/Shell360_0.1.17_arm64-setup.exe",
            "hash": "b35369e3429bfed9017363b14bb0deb4a8bb107ef182ffdba07a38682196bb9a"
        }
    },
    "shortcuts": [
        [
            "app\\shell360.exe",
            "Shell360"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.nashaofu.shell360\",\"$env:LocalAppData\\com.nashaofu.shell360\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-TempData \"$env:LocalAppData\\com.nashaofu.shell360\\EBWebView\",\"$env:LocalAppData\\com.nashaofu.shell360\\logs\"",
        "A-Remove-Link",
        "A-Uninstall-App"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/nashaofu/shell360/releases/download/v$version/Shell360_$version_x64-setup.exe"
            },
            "arm64": {
                "url": "https://github.com/nashaofu/shell360/releases/download/v$version/Shell360_$version_arm64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
