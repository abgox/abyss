{
    "version": "0.8.3",
    "description": "一个基于 Flutter (Dart) 实现的简易本地音乐播放器 | A simple music player implemented using Flutter (Dart)",
    "homepage": "https://github.com/xiaobaimc/myune_music",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/xiaobaimc/myune_music/releases/download/v0.8.3/MyuneMusic_v0.8.3_windows-x64.zip",
            "hash": "751d3b2d3cd20c488b2386785ac80ebe0c31898d638b31636665b9267e3a5be1"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\myune_music.exe",
            "MyuneMusic"
        ]
    ],
    "persist": [
        [
            "app\\list_data",
            "list_data"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.example\\myune_music\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/xiaobaimc/myune_music/releases/download/v$version/MyuneMusic_v$version_windows-x64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
