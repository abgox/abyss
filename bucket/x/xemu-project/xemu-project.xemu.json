{
    "version": "0.8.133",
    "description": "一款免费的开源应用程序，可模拟初代微软 Xbox 游戏机，让人们能够在 Windows、macOS 和 Linux 系统上玩初代 Xbox 游戏 | A free and open-source application that emulates the original Microsoft Xbox game console, enabling people to play their original Xbox games on Windows, macOS, and Linux systems",
    "homepage": "https://xemu.app/",
    "license": {
        "identifier": "GPL-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/xemu-project/xemu/releases/download/v0.8.133/xemu-win-x86_64-release.zip",
            "hash": "6a8dd63c247596efa8594699f9a476868d2f020552b1670fcc2e90f1bf649673"
        },
        "arm64": {
            "url": "https://github.com/xemu-project/xemu/releases/download/v0.8.133/xemu-win-aarch64-release.zip",
            "hash": "745492d5af9d9dc4e3fc4040adbb85452a228502b8950f22f95210112ad3ec53"
        }
    },
    "extract_to": "app",
    "bin": "app\\xemu.exe",
    "shortcuts": [
        [
            "app\\xemu.exe",
            "xemu"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\xemu\\xemu\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/xemu-project/xemu/releases/download/v$version/xemu-win-x86_64-release.zip"
            },
            "arm64": {
                "url": "https://github.com/xemu-project/xemu/releases/download/v$version/xemu-win-aarch64-release.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
