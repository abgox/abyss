{
    "version": "19.3",
    "description": "一种新型的 shell 连接枢纽和远程文件管理器，它允许你从本地机器访问你的整个服务器基础设施 | A new type of shell connection hub and remote file manager that allows you to access your entire server infrastructure from your local machine.",
    "homepage": "https://xpipe.io/",
    "license": {
        "identifier": "Apache-2.0",
        "url": "https://github.com/xpipe-io/xpipe/blob/master/LICENSE.md"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/xpipe-io/xpipe/releases/download/19.3/xpipe-installer-windows-x86_64.msi",
            "hash": "70ee952e52bb388cb8545e057fcefed80c508cada5bcfdc3bc7d8eb0988f96dc"
        },
        "arm64": {
            "url": "https://github.com/xpipe-io/xpipe/releases/download/19.3/xpipe-installer-windows-arm64.msi",
            "hash": "cc6b8969cb2709a9c54ebd0a89c838e3d9b086ab3384e694ed4bb2fb8768c5c6"
        }
    },
    "extract_to": "app",
    "bin": "app\\bin\\xpipe.exe",
    "shortcuts": [
        [
            "app\\xpiped.exe",
            "XPipe"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:UserProfile\\.xpipe\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/xpipe-io/xpipe",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/xpipe-io/xpipe/releases/download/$version/xpipe-installer-windows-x86_64.msi"
            },
            "arm64": {
                "url": "https://github.com/xpipe-io/xpipe/releases/download/$version/xpipe-installer-windows-arm64.msi"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
