{
    "version": "21.2",
    "description": "一种新型的 shell 连接枢纽和远程文件管理器，它允许你从本地机器访问你的整个服务器基础设施 | A new type of shell connection hub and remote file manager that allows you to access your entire server infrastructure from your local machine",
    "homepage": "https://xpipe.io/",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/xpipe-io/xpipe/releases/download/21.2/xpipe-installer-windows-x86_64.msi",
            "hash": "49b32e4b78247cc04f8d0b3c34e9a6db5ac64e721e145734c3fa1d5becd1cce8"
        },
        "arm64": {
            "url": "https://github.com/xpipe-io/xpipe/releases/download/21.2/xpipe-installer-windows-arm64.msi",
            "hash": "5a622fa233c15d9636e941990cf6c96b7915aa18ca4f655b62d3e01fe9aa5863"
        }
    },
    "extract_to": "app",
    "bin": "app\\bin\\xpipe.exe",
    "shortcuts": [
        [
            "app\\xpiped.exe",
            "XPipe"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$home\\.xpipe\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/xpipe-io/xpipe/releases/download/$version/xpipe-installer-windows-x86_64.msi"
            },
            "arm64": {
                "url": "https://github.com/xpipe-io/xpipe/releases/download/$version/xpipe-installer-windows-arm64.msi"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
