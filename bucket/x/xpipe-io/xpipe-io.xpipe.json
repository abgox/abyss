{
    "version": "19.4",
    "description": "一种新型的 shell 连接枢纽和远程文件管理器，它允许你从本地机器访问你的整个服务器基础设施 | A new type of shell connection hub and remote file manager that allows you to access your entire server infrastructure from your local machine.",
    "homepage": "https://xpipe.io/",
    "license": {
        "identifier": "Apache-2.0",
        "url": "https://github.com/xpipe-io/xpipe/blob/master/LICENSE.md"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/xpipe-io/xpipe/releases/download/19.4/xpipe-installer-windows-x86_64.msi",
            "hash": "0ebcb2a5f14d5a858a5863caa5cc6db2dceaddbb368ceb86ac691773f482f0a5"
        },
        "arm64": {
            "url": "https://github.com/xpipe-io/xpipe/releases/download/19.4/xpipe-installer-windows-arm64.msi",
            "hash": "f1851ff85b55994098ed4bd9601f762c5ef0040e2151498655eacb1eeedeb328"
        }
    },
    "extract_to": "app",
    "bin": "app\\bin\\xpipe.exe",
    "shortcuts": [
        [
            "app\\xpiped.exe",
            "XPipe"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:UserProfile\\.xpipe\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/xpipe-io/xpipe",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/xpipe-io/xpipe/releases/download/$version/xpipe-installer-windows-x86_64.msi"
            },
            "arm64": {
                "url": "https://github.com/xpipe-io/xpipe/releases/download/$version/xpipe-installer-windows-arm64.msi"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
