{
    "version": "4.2.0",
    "description": "一个用于管理多个 Node.js 版本的桌面应用程序 | A desktop application to manage multiple active Node.js versions.",
    "homepage": "https://github.com/1111mp/nvm-desktop",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/1111mp/nvm-desktop/releases/download/v4.2.0/NVM.Desktop_4.2.0_x64-setup.exe",
            "hash": "17a979053042e761b31f3caa507934e2566264ae75e7c9d66af270e64e2f0b6f"
        },
        "arm64": {
            "url": "https://github.com/1111mp/nvm-desktop/releases/download/v4.2.0/NVM.Desktop_4.2.0_arm64-setup.exe",
            "hash": "08b464164f110c87e9ca6c634939349738385e5c843678bdd48f1d2f848f4b6a"
        }
    },
    "shortcuts": [
        [
            "app\\nvm-desktop.exe",
            "NVM Desktop"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$home\\.nvmd\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\io.github.1111mp.nvm-desktop\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/1111mp/nvm-desktop/releases/download/v$version/NVM.Desktop_$version_x64-setup.exe"
            },
            "arm64": {
                "url": "https://github.com/1111mp/nvm-desktop/releases/download/v$version/NVM.Desktop_$version_arm64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
