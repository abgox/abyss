{
    "version": "1.9.12",
    "description": "Bash 在 cmd.exe 中强大的命令行编辑功能 | Powerful Bash-style command line editing for cmd.exe",
    "homepage": "https://chrisant996.github.io/clink/",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "notes": [
        "Run 'clink inject' to start Clink on the current cmd",
        "Run 'clink autorun install' to auto start Clink"
    ],
    "notes_cn": [
        "如果要在当前 cmd.exe 中启动 Clink，请运行 clink inject",
        "如果要自动启动 Clink，请运行 clink autorun install"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/chrisant996/clink/releases/download/v1.9.12/clink.1.9.12.ea782a.zip",
            "hash": "8fa4cd4a5bf3882d9dd8ace2e2f7f888345b7a2d8929815322c060bf7d0b4a0f"
        }
    },
    "extract_to": "app",
    "bin": "app\\clink.bat",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:LocalAppData\\clink\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://api.github.com/repos/chrisant996/clink/releases/latest",
        "regex": "/v(?<tag>[\\d.]+)/clink\\.([\\d.]+)\\.(?<commit>[\\w.]+)\\.zip"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/chrisant996/clink/releases/download/v$matchTag/clink.$version.$matchCommit.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
