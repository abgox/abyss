{
    "version": "0.22.4",
    "description": "一款跨平台的 Markdown AI 笔记软件 | A cross-platform Markdown AI note-taking software.",
    "homepage": "https://notegen.top/",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://github.com/codexu/note-gen/blob/dev/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/codexu/note-gen/releases/download/note-gen-v0.22.4/NoteGen_0.22.4_x64-setup.exe",
            "hash": "f76bdfeefe1d395ffb3e309d19092cb28c4782a82f5467be3178136967a8b672"
        }
    },
    "shortcuts": [
        [
            "app\\note-gen.exe",
            "NoteGen"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:AppData\\com.codexu.NoteGen\")",
        "A-Install-Exe -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData @(\"$env:LocalAppData\\com.codexu.NoteGen\")"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "note-gen-(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/codexu/note-gen/releases/download/note-gen-v$version/NoteGen_$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
