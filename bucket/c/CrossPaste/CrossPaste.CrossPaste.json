{
    "version": "1.2.8.1999",
    "description": "跨设备的通用粘贴板 | Universal Pasteboard Across Devices",
    "homepage": "https://crosspaste.com/",
    "license": {
        "identifier": "AGPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/CrossPaste/crosspaste-desktop/releases/download/1.2.8.1999/crosspaste-1.2.8-1999-windows-amd64.zip",
            "hash": "46fe3e68c21966968e46e94c838cbc80260a72fc9ea4717adafa6593fd4c3885"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\bin\\CrossPaste.exe",
            "CrossPaste"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$home\\.crosspaste\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/CrossPaste/crosspaste-desktop/releases/download/$matchHead.$buildVersion/crosspaste-$matchHead-$buildVersion-windows-amd64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
