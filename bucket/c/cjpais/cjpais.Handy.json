{
    "version": "0.7.6",
    "description": "一款免费、开源且可扩展的语音转文本应用程序，完全可离线运行 | A free, open source, and extensible speech-to-text application that works completely offline",
    "homepage": "https://handy.computer/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/cjpais/Handy/releases/download/v0.7.6/Handy_0.7.6_x64-setup.exe",
            "hash": "256ea364b4bdc4f7b952068b90016aab43d5a25931ddd2d640b799ee4e1ffd4b"
        },
        "arm64": {
            "url": "https://github.com/cjpais/Handy/releases/download/v0.7.6/Handy_0.7.6_arm64-setup.exe",
            "hash": "26d918e742a8513f6caed4613bb39c0f2181e80f60ffcfeba021e7389e613863"
        }
    },
    "shortcuts": [
        [
            "app\\handy.exe",
            "Handy"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.pais.handy\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\com.pais.handy\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/cjpais/Handy/releases/download/v$version/Handy_$version_x64-setup.exe"
            },
            "arm64": {
                "url": "https://github.com/cjpais/Handy/releases/download/v$version/Handy_$version_arm64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
