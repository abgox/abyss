{
    "version": "0.7.4",
    "description": "一款免费、开源且可扩展的语音转文本应用程序，完全可离线运行 | A free, open source, and extensible speech-to-text application that works completely offline",
    "homepage": "https://handy.computer/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/cjpais/Handy/releases/download/v0.7.4/Handy_0.7.4_x64-setup.exe",
            "hash": "3b7180a1fc7a798f649ac7e647c0b913c5ba65c135063b4eeb3bca0102995d2e"
        },
        "arm64": {
            "url": "https://github.com/cjpais/Handy/releases/download/v0.7.4/Handy_0.7.4_arm64-setup.exe",
            "hash": "b93ebcbcd30c38fa58b2f0f2756116b7152d26e9f6e6b8624d7c1a704bd7fd45"
        }
    },
    "shortcuts": [
        [
            "app\\handy.exe",
            "Handy"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.pais.handy\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\com.pais.handy\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/cjpais/Handy/releases/download/v$version/Handy_$version_x64-setup.exe"
            },
            "arm64": {
                "url": "https://github.com/cjpais/Handy/releases/download/v$version/Handy_$version_arm64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
