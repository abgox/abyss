{
    "version": "0.7.3",
    "description": "一款免费、开源且可扩展的语音转文本应用程序，完全可离线运行 | A free, open source, and extensible speech-to-text application that works completely offline",
    "homepage": "https://handy.computer/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/cjpais/Handy/releases/download/v0.7.3/Handy_0.7.3_x64-setup.exe",
            "hash": "ed1c25c8af64d7778acd6e3e32c3491d041420eb9a7b8a2df4dfbc4a766d0b83"
        },
        "arm64": {
            "url": "https://github.com/cjpais/Handy/releases/download/v0.7.3/Handy_0.7.3_arm64-setup.exe",
            "hash": "8e34170ea34993c9b6cf7c31edf9067fbd3ce52cd7a7cf2532e191d147271ced"
        }
    },
    "shortcuts": [
        [
            "app\\handy.exe",
            "Handy"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.pais.handy\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\com.pais.handy\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/cjpais/Handy/releases/download/v$version/Handy_$version_x64-setup.exe"
            },
            "arm64": {
                "url": "https://github.com/cjpais/Handy/releases/download/v$version/Handy_$version_arm64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
