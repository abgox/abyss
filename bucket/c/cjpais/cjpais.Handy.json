{
    "version": "0.7.5",
    "description": "一款免费、开源且可扩展的语音转文本应用程序，完全可离线运行 | A free, open source, and extensible speech-to-text application that works completely offline",
    "homepage": "https://handy.computer/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/cjpais/Handy/releases/download/v0.7.5/Handy_0.7.5_x64-setup.exe",
            "hash": "3e3421fa307652c0cb6817d735eef8af712d678d8f7c14d4b5ca2eb9719411b9"
        },
        "arm64": {
            "url": "https://github.com/cjpais/Handy/releases/download/v0.7.5/Handy_0.7.5_arm64-setup.exe",
            "hash": "1c04f57e80b149603e0922d7776dbfabb05d1f1cce7188c245b99dfd0b35df3e"
        }
    },
    "shortcuts": [
        [
            "app\\handy.exe",
            "Handy"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.pais.handy\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\com.pais.handy\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/cjpais/Handy/releases/download/v$version/Handy_$version_x64-setup.exe"
            },
            "arm64": {
                "url": "https://github.com/cjpais/Handy/releases/download/v$version/Handy_$version_arm64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
