{
    "version": "0.7.1",
    "description": "一款免费、开源且可扩展的语音转文本应用程序，完全可离线运行 | A free, open source, and extensible speech-to-text application that works completely offline",
    "homepage": "https://handy.computer/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/cjpais/Handy/releases/download/v0.7.1/Handy_0.7.1_x64-setup.exe",
            "hash": "7787664fd8474854a0fd6de293409a7997bac43143a2335ffe00c86543c93023"
        },
        "arm64": {
            "url": "https://github.com/cjpais/Handy/releases/download/v0.7.1/Handy_0.7.1_arm64-setup.exe",
            "hash": "394e6699f662a464a94b072b80fc461c2316f517685f47b93262b187d7df422f"
        }
    },
    "shortcuts": [
        [
            "app\\handy.exe",
            "Handy"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.pais.handy\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\com.pais.handy\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/cjpais/Handy/releases/download/v$version/Handy_$version_x64-setup.exe"
            },
            "arm64": {
                "url": "https://github.com/cjpais/Handy/releases/download/v$version/Handy_$version_arm64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
