{
    "version": "0.24.0",
    "description": "一个开源工具，旨在解决 Go 语言模块依赖关系复杂度激增的问题 | A open-source tool for solving the complexity of Go module dependencies",
    "homepage": "https://github.com/CrowdStrike/perseus",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/CrowdStrike/perseus/releases/download/v0.24.0/perseus_windows_amd64.zip",
            "hash": "48ffe59cdf63b69237325bd2cfc8ab959b55a751dd6b61fbb3ae33fad4de57d3"
        }
    },
    "extract_to": "app",
    "bin": "app\\perseus.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/CrowdStrike/perseus/releases/download/v$version/perseus_windows_amd64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
