            "hash": "fbbfee6b3f0cbabd61cf273f18de773a2a06ccbeeb787c95a689727944243ca5"
        },
        "arm64": {
            "url": "https://github.com/WCY-dt/MrRSS/releases/download/v1.3.21/MrRSS-1.3.21-windows-arm64-portable.zip",
            "hash": "9ffb54103cc5ed5080ed8283eb3be3a23ccf9e0bad24b67db48decb76ee8224f"
