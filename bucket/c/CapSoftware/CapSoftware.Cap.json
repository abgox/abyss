{
    "version": "0.4.0",
    "description": "美观且便于分享的屏幕录制内容。 | Beautiful, shareable screen recordings.",
    "homepage": "https://cap.so/",
    "license": {
        "identifier": "AGPL-3.0-only|MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://cap.so/download/windows#/dl.exe",
            "hash": "9fa2a16f7cba0c7965eb9d737a01d3ad66c1e197c36e1334ba7543aae2aef42e"
        }
    },
    "shortcuts": [
        [
            "app\\Cap.exe",
            "Cap"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\so.cap.desktop\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\so.cap.desktop\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/CapSoftware/Cap",
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "cap-(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cap.so/download/windows#/dl.exe"
            }
        }
    }
}
