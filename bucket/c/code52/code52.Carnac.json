{
    "version": "2.3.13",
    "description": "一个键盘按键记录和演示实用程序 | A keyboard logging and presentation utility",
    "homepage": "http://carnackeys.com/",
    "license": {
        "identifier": "MS-PL"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Code52/carnac/releases/download/2.3.13/carnac-2.3.13-full.nupkg",
            "hash": "136e51b0db789b7b71ee75a48b7c77d4f3a8a92100a01d3f7ab64bfacb351e05"
        }
    },
    "extract_dir": "lib\\net45",
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\Carnac.exe",
            "Carnac"
        ]
    ],
    "persist": [
        [
            "app\\Keymaps",
            "Keymaps"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-TempData \"$env:LocalAppData\\Carnac\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Code52/carnac/releases/download/$version/carnac-$version-full.nupkg"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
