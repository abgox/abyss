{
    "version": "0.11.2",
    "description": "一个优秀的、可自托管的命令行 Git 服务器 | A tasty, self-hostable Git server for the command line",
    "homepage": "https://github.com/charmbracelet/soft-serve",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/charmbracelet/soft-serve/releases/download/v0.11.2/soft-serve_0.11.2_Windows_x86_64.zip",
            "hash": "339082154ec58664183f3a3db0a0d2198412ece61ac5a67ea7f34f796298d2ce",
            "extract_dir": "soft-serve_0.11.2_Windows_x86_64"
        }
    },
    "extract_to": "app",
    "bin": "app\\soft.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/charmbracelet/soft-serve/releases/download/v$version/soft-serve_$version_Windows_x86_64.zip",
                "extract_dir": "soft-serve_$version_Windows_x86_64"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
