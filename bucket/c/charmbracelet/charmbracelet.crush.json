    "homepage": "https://github.com/charmbracelet/crush",
    "license": {
        "identifier": "FSL-1.1-MIT",
        "url": "https://github.com/charmbracelet/crush/blob/main/LICENSE.md"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/charmbracelet/crush/releases/download/v0.18.5/crush_0.18.5_Windows_x86_64.zip",
            "hash": "fc911ea6244fd5c71ae9edc78484556f2e4acee6dad9f13b429b1ee8606df862",
            "extract_dir": "crush_0.18.5_Windows_x86_64"
        },
        "arm64": {
            "url": "https://github.com/charmbracelet/crush/releases/download/v0.18.5/crush_0.18.5_Windows_arm64.zip",
            "hash": "2b11fa5e78364b48164e5f28d9fa958f5b449b9fc62d990cab6f83f47ee49d9d",
            "extract_dir": "crush_0.18.5_Windows_arm64"
        }
    },
    "extract_to": "app",
    "bin": "app\\crush.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:UserProfile\\.config\\crush\",\"$env:LocalAppData\\crush\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/charmbracelet/crush",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/charmbracelet/crush/releases/download/v$version/crush_$version_Windows_x86_64.zip",
                "extract_dir": "crush_$version_Windows_x86_64"
            },
            "arm64": {
                "url": "https://github.com/charmbracelet/crush/releases/download/v$version/crush_$version_Windows_arm64.zip",
                "extract_dir": "crush_$version_Windows_arm64"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
