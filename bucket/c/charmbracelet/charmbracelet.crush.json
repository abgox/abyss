    "license": {
        "identifier": "FSL-1.1-MIT",
        "url": "https://github.com/charmbracelet/crush/blob/main/LICENSE.md"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/charmbracelet/crush/releases/download/v0.19.4/crush_0.19.4_Windows_x86_64.zip",
            "hash": "afe40bbe0c2bc9044830a7ab8b8b08e773f72c3d4aca927b15a4005ae83c45e3",
            "extract_dir": "crush_0.19.4_Windows_x86_64"
        },
        "arm64": {
            "url": "https://github.com/charmbracelet/crush/releases/download/v0.19.4/crush_0.19.4_Windows_arm64.zip",
            "hash": "1e6275bee343e591330e1272a3f6ae1d58ea1f71c6333589728f9b8c4bc56ae1",
            "extract_dir": "crush_0.19.4_Windows_arm64"
        }
    },
    "extract_to": "app",
    "bin": "app\\crush.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:UserProfile\\.config\\crush\",\"$env:LocalAppData\\crush\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/charmbracelet/crush",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/charmbracelet/crush/releases/download/v$version/crush_$version_Windows_x86_64.zip",
                "extract_dir": "crush_$version_Windows_x86_64"
            },
            "arm64": {
                "url": "https://github.com/charmbracelet/crush/releases/download/v$version/crush_$version_Windows_arm64.zip",
                "extract_dir": "crush_$version_Windows_arm64"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
