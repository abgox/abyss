{
    "version": "0.20.1",
    "description": "适用于你喜爱的终端的魅力十足的 AI coding agent | The glamourous AI coding agent for your favourite terminal",
    "homepage": "https://github.com/charmbracelet/crush",
    "license": {
        "identifier": "FSL-1.1-MIT",
        "url": "https://github.com/charmbracelet/crush/blob/main/LICENSE.md"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/charmbracelet/crush/releases/download/v0.20.1/crush_0.20.1_Windows_x86_64.zip",
            "hash": "5c9d969736c02bb72dc5019a6edde0cf13b348265ab1a5725b36ae74bcdcb828",
            "extract_dir": "crush_0.20.1_Windows_x86_64"
        },
        "arm64": {
            "url": "https://github.com/charmbracelet/crush/releases/download/v0.20.1/crush_0.20.1_Windows_arm64.zip",
            "hash": "331dd4c42f1483fbe50f0bd1ab4908758960e9c6d3da3e28bfa814e502edb95d",
            "extract_dir": "crush_0.20.1_Windows_arm64"
        }
    },
    "extract_to": "app",
    "bin": "app\\crush.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:UserProfile\\.config\\crush\",\"$env:LocalAppData\\crush\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/charmbracelet/crush",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/charmbracelet/crush/releases/download/v$version/crush_$version_Windows_x86_64.zip",
                "extract_dir": "crush_$version_Windows_x86_64"
            },
            "arm64": {
                "url": "https://github.com/charmbracelet/crush/releases/download/v$version/crush_$version_Windows_arm64.zip",
                "extract_dir": "crush_$version_Windows_arm64"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
