{
    "version": "0.31.0",
    "description": "适用于你喜爱的终端的魅力十足的 AI coding agent | The glamourous AI coding agent for your favourite terminal",
    "homepage": "https://github.com/charmbracelet/crush",
    "license": {
        "identifier": "FSL-1.1-MIT",
        "url": "https://github.com/charmbracelet/crush/blob/main/LICENSE.md"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/charmbracelet/crush/releases/download/v0.31.0/crush_0.31.0_Windows_x86_64.zip",
            "hash": "85b9a0f64ab70c90be82d1432f5fd2a0f592660065dfbe2e314bf13edba4f47a",
            "extract_dir": "crush_0.31.0_Windows_x86_64"
        },
        "arm64": {
            "url": "https://github.com/charmbracelet/crush/releases/download/v0.31.0/crush_0.31.0_Windows_arm64.zip",
            "hash": "ceb953dc7cb57965210964b88be3d23e05e5f7347044f9261c22fe2d98e25015",
            "extract_dir": "crush_0.31.0_Windows_arm64"
        }
    },
    "extract_to": "app",
    "bin": "app\\crush.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$home\\.config\\crush\",\"$env:LocalAppData\\crush\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/charmbracelet/crush/releases/download/v$version/crush_$version_Windows_x86_64.zip",
                "extract_dir": "crush_$version_Windows_x86_64"
            },
            "arm64": {
                "url": "https://github.com/charmbracelet/crush/releases/download/v$version/crush_$version_Windows_arm64.zip",
                "extract_dir": "crush_$version_Windows_arm64"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
