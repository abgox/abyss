    "license": {
        "identifier": "FSL-1.1-MIT",
        "url": "https://github.com/charmbracelet/crush/blob/main/LICENSE.md"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/charmbracelet/crush/releases/download/v0.18.6/crush_0.18.6_Windows_x86_64.zip",
            "hash": "5677300f5661ff65c611a457e0b96bd453792e306534c041446554fb0edb5e98",
            "extract_dir": "crush_0.18.6_Windows_x86_64"
        },
        "arm64": {
            "url": "https://github.com/charmbracelet/crush/releases/download/v0.18.6/crush_0.18.6_Windows_arm64.zip",
            "hash": "2d837b3d06cc5739ae53a8f72654184e7f254a0517580f24c957dce2688a2374",
            "extract_dir": "crush_0.18.6_Windows_arm64"
        }
    },
    "extract_to": "app",
    "bin": "app\\crush.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:UserProfile\\.config\\crush\",\"$env:LocalAppData\\crush\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/charmbracelet/crush",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/charmbracelet/crush/releases/download/v$version/crush_$version_Windows_x86_64.zip",
                "extract_dir": "crush_$version_Windows_x86_64"
            },
            "arm64": {
                "url": "https://github.com/charmbracelet/crush/releases/download/v$version/crush_$version_Windows_arm64.zip",
                "extract_dir": "crush_$version_Windows_arm64"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
