{
    "version": "8.18.0.2",
    "description": "用于通过 URL 传输数据的命令行工具和库 | Command line tool and library for transferring data with URLs",
    "homepage": "https://curl.se/",
    "license": {
        "identifier": "Freeware",
        "url": "https://curl.se/docs/copyright.html"
    },
    "architecture": {
        "64bit": {
            "url": "https://curl.se/windows/dl-8.18.0_2/curl-8.18.0_2-win64-mingw.zip",
            "hash": "d38464fbe94e44b9794f7c164c997198176fcd17ebcd7bc0d13885e89b34b34d",
            "extract_dir": "curl-8.18.0_2-win64-mingw"
        },
        "arm64": {
            "url": "https://curl.se/windows/dl-8.18.0_2/curl-8.18.0_2-win64a-mingw.zip",
            "hash": "f77d76221b4a0a8a24781602caf64992ffb3299714bc66ee6f4ca8fc9d38e5e5",
            "extract_dir": "curl-8.18.0_2-win64a-mingw"
        }
    },
    "extract_to": "app",
    "bin": "app\\bin\\curl.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo, $out = A-Get-InstallerInfoFromWinget 'cURL.cURL' 'zip'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                },
                "extract_dir": "curl-$majorVersion.$minorVersion.$patchVersion_$buildVersion-win64-mingw"
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                },
                "extract_dir": "curl-$majorVersion.$minorVersion.$patchVersion_$buildVersion-win64a-mingw"
            }
        }
    }
}
