            "hash": "bc52b55b4142e8f96a3697a514be5e2f3c7e0842ad73bce7ec58dc4c374764d9",
            "extract_dir": "curl-8.18.0_4-win64-mingw"
        },
        "arm64": {
            "url": "https://curl.se/windows/dl-8.18.0_4/curl-8.18.0_4-win64a-mingw.zip",
            "hash": "7b14b90901423a9d8007540f98d54cd11437f1307b7c0615d14b52a55321810b",
            "extract_dir": "curl-8.18.0_4-win64a-mingw"
        }
    },
    "extract_to": "app",
    "bin": "app\\bin\\curl.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$res, $out = A-Get-InstallerInfoFromWinget 'cURL.cURL' 'zip'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                },
                "extract_dir": "curl-$majorVersion.$minorVersion.$patchVersion_$buildVersion-win64-mingw"
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                },
                "extract_dir": "curl-$majorVersion.$minorVersion.$patchVersion_$buildVersion-win64a-mingw"
            }
        }
    }
}
