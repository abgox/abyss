{
    "version": "8.17.0.2",
    "description": "用于通过 URL 传输数据的命令行工具和库 | Command line tool and library for transferring data with URLs",
    "homepage": "https://curl.se/",
    "license": {
        "identifier": "Freeware",
        "url": "https://curl.se/docs/copyright.html"
    },
    "architecture": {
        "64bit": {
            "url": "https://curl.se/windows/dl-8.17.0_2/curl-8.17.0_2-win64-mingw.zip",
            "hash": "4efb12a1e87c44c46d56a27f5f81767557280307c5816a8ac3c645e951d83474",
            "extract_dir": "curl-8.17.0_2-win64-mingw"
        },
        "arm64": {
            "url": "https://curl.se/windows/dl-8.17.0_2/curl-8.17.0_2-win64a-mingw.zip",
            "hash": "d014d0bb0d3dfdeda0203af659e1f20ce99bedfd7455db8bfddf821a39c5ffce",
            "extract_dir": "curl-8.17.0_2-win64a-mingw"
        }
    },
    "extract_to": "app",
    "bin": "app\\bin\\curl.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'cURL.cURL' 'zip'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_machine.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_machine.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_machine.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                },
                "extract_dir": "curl-$majorVersion.$minorVersion.$patchVersion_$buildVersion-win64-mingw"
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                },
                "extract_dir": "curl-$majorVersion.$minorVersion.$patchVersion_$buildVersion-win64a-mingw"
            }
        }
    }
}
