{
    "version": "8.18.0.1",
    "description": "用于通过 URL 传输数据的命令行工具和库 | Command line tool and library for transferring data with URLs",
    "homepage": "https://curl.se/",
    "license": {
        "identifier": "Freeware",
        "url": "https://curl.se/docs/copyright.html"
    },
    "architecture": {
        "64bit": {
            "url": "https://curl.se/windows/dl-8.18.0_1/curl-8.18.0_1-win64-mingw.zip",
            "hash": "ff5a58decb63d7ac9d76e63be216e1328fe04477975d9a001f538ddfd4ddf0b8",
            "extract_dir": "curl-8.18.0_1-win64-mingw"
        },
        "arm64": {
            "url": "https://curl.se/windows/dl-8.18.0_1/curl-8.18.0_1-win64a-mingw.zip",
            "hash": "df5548a45e63b4b5de413da916f10ee46ff1549df480aaceacf55c21d65fa034",
            "extract_dir": "curl-8.18.0_1-win64a-mingw"
        }
    },
    "extract_to": "app",
    "bin": "app\\bin\\curl.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo, $out = A-Get-InstallerInfoFromWinget 'cURL.cURL' 'zip'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                },
                "extract_dir": "curl-$majorVersion.$minorVersion.$patchVersion_$buildVersion-win64-mingw"
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                },
                "extract_dir": "curl-$majorVersion.$minorVersion.$patchVersion_$buildVersion-win64a-mingw"
            }
        }
    }
}
