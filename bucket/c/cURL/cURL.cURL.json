    "homepage": "https://curl.se/",
    "license": {
        "identifier": "Freeware",
        "url": "https://curl.se/docs/copyright.html"
    },
    "architecture": {
        "64bit": {
            "url": "https://curl.se/windows/dl-8.18.0_5/curl-8.18.0_5-win64-mingw.zip",
            "hash": "dd9f7c7ad689f5b1c590a2d8c03e3a0a3664a5ed3ce7a8fa2d379f3e3188fe3e",
            "extract_dir": "curl-8.18.0_5-win64-mingw"
        },
        "arm64": {
            "url": "https://curl.se/windows/dl-8.18.0_5/curl-8.18.0_5-win64a-mingw.zip",
            "hash": "38c41b6f9e90f5eeb7781874f538b2a9ce640040684be9b548374e86133529ea",
            "extract_dir": "curl-8.18.0_5-win64a-mingw"
        }
    },
    "extract_to": "app",
    "bin": "app\\bin\\curl.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$res, $out = A-Get-InstallerInfoFromWinget 'cURL.cURL' 'zip'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                },
                "extract_dir": "curl-$majorVersion.$minorVersion.$patchVersion_$buildVersion-win64-mingw"
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                },
                "extract_dir": "curl-$majorVersion.$minorVersion.$patchVersion_$buildVersion-win64a-mingw"
            }
        }
    }
}
