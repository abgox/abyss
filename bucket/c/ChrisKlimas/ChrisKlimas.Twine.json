{
    "version": "2.11.1",
    "description": "一款用于创作交互式非线性故事的开源工具，支持变量、条件逻辑、图像、CSS 和 JavaScript | An open-source tool for telling interactive, nonlinear stories with variables, conditional logic, images, CSS, and JavaScript",
    "homepage": "https://twinery.org/",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/klembot/twinejs/releases/download/2.11.1/Twine-2.11.1-Windows.exe",
            "hash": "1effe5fb83c6f2eda51cbac4c08b18c476a4b6bd6f7dec01656b7b338e3c63f6"
        }
    },
    "shortcuts": [
        [
            "app\\Twine.exe",
            "Twine"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\Twine\",\"$home\\Documents\\Twine\"",
        "A-Install-App -Uninstaller 'app\\Uninstall Twine.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\twine-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/klembot/twinejs/releases/download/$version/Twine-$version-Windows.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
