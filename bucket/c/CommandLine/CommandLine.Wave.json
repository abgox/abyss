{
    "version": "0.13.1",
    "description": "具有超能力的开源终端，集成文件预览、文件编辑、人工智能、网页浏览和工作区组织 | An open-source terminal with superpowers, integrating file previews, file editing, AI, web browsing, and workspace organization",
    "homepage": "https://www.waveterm.dev/",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/wavetermdev/waveterm/releases/download/v0.13.1/Wave-win32-x64-0.13.1.exe",
            "hash": "c21789eb55d97bc77f140ef9003bb32693d36525111539d0bfeda70676a9fe5b"
        }
    },
    "bin": "app\\Wave.exe",
    "shortcuts": [
        [
            "app\\Wave.exe",
            "Wave"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$home\\.config\\waveterm\", \"$env:LocalAppData\\waveterm\"",
        "A-New-File \"$home\\.config\\waveterm\\settings.json\" -Content '{\"autoupdate:enabled\": false}'",
        "A-Install-App -Uninstaller 'app\\Uninstall Wave.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:AppData\\Wave\", \"$env:LocalAppData\\waveterm-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/wavetermdev/waveterm/releases/download/v$version/Wave-win32-x64-$version.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
