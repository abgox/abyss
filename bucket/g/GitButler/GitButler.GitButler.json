{
    "version": "0.18.5",
    "description": "一款适用于在现有工作流程基础上处理同步分支的 Git 客户端 | A Git client for simultaneous branches on top of your existing workflow.",
    "homepage": "https://gitbutler.com/",
    "license": {
        "identifier": "FSL-1.1-MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://releases.gitbutler.com/releases/release/0.18.5-2775/windows/x86_64/GitButler_0.18.5_x64_en-US.msi#/dl.msi_",
            "hash": "aa4d4a821d7bcbd019f71b161e6e85a036124f5d53b125cfb0b8d3bd5efac0d8"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:AppData\\com.gitbutler.app\",\"$env:AppData\\gitbutler\"",
        "A-Install-Msi"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process \"$env:ProgramFiles\\GitButler\"",
        "A-Remove-Link",
        "A-Uninstall-Msi",
        "A-Remove-TempData \"$env:LocalAppData\\com.gitbutler.app\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo, $out = A-Get-InstallerInfoFromWinget 'GitButler.GitButler' 'msi'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64#/dl.msi_",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            }
        }
    }
}
