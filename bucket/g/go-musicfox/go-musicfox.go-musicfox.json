{
    "version": "4.7.2",
    "description": "终端中的网易云音乐播放器。 | A netease music player in terminal.",
    "homepage": "https://github.com/go-musicfox/go-musicfox",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/go-musicfox/go-musicfox/releases/download/v4.7.2/go-musicfox_4.7.2_windows_amd64.zip",
            "hash": "725e08521a3b362dbc5928ca629fcd323c8b380a10afac21b5631d75572ee166",
            "extract_dir": "go-musicfox_4.7.2_windows_amd64"
        },
        "arm64": {
            "url": "https://github.com/go-musicfox/go-musicfox/releases/download/v4.7.2/go-musicfox_4.7.2_windows_arm64.zip",
            "hash": "1740769bda8600f192cffeee4d8a7f9561fa48c4e9ce32c88a4a2e7de756c921",
            "extract_dir": "go-musicfox_4.7.2_windows_arm64"
        }
    },
    "extract_to": "app",
    "env_set": {
        "MUSICFOX_ROOT": "$persist_dir\\AppData\\Roaming\\go-musicfox"
    },
    "bin": "app\\musicfox.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\go-musicfox\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/go-musicfox/go-musicfox/releases/download/v$version/go-musicfox_$version_windows_amd64.zip",
                "extract_dir": "go-musicfox_$version_windows_amd64"
            },
            "arm64": {
                "url": "https://github.com/go-musicfox/go-musicfox/releases/download/v$version/go-musicfox_$version_windows_arm64.zip",
                "extract_dir": "go-musicfox_$version_windows_arm64"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
