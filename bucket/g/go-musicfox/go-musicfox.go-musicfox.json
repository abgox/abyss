{
    "version": "4.8.0",
    "description": "终端中的网易云音乐播放器 | A netease music player in terminal",
    "homepage": "https://github.com/go-musicfox/go-musicfox",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/go-musicfox/go-musicfox/releases/download/v4.8.0/go-musicfox_4.8.0_windows_amd64.zip",
            "hash": "dd2cb40d6a6b978c82d3d109bc75d79f48eccf1d47654c993e91918a34f73222",
            "extract_dir": "go-musicfox_4.8.0_windows_amd64"
        },
        "arm64": {
            "url": "https://github.com/go-musicfox/go-musicfox/releases/download/v4.8.0/go-musicfox_4.8.0_windows_arm64.zip",
            "hash": "1c23f4da7e9dc8304fba53f43a09cf2648ad156786250928d575f12872c640c7",
            "extract_dir": "go-musicfox_4.8.0_windows_arm64"
        }
    },
    "extract_to": "app",
    "env_set": {
        "MUSICFOX_ROOT": "$persist_dir\\AppData\\Roaming\\go-musicfox"
    },
    "bin": "app\\musicfox.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\go-musicfox\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/go-musicfox/go-musicfox/releases/download/v$version/go-musicfox_$version_windows_amd64.zip",
                "extract_dir": "go-musicfox_$version_windows_amd64"
            },
            "arm64": {
                "url": "https://github.com/go-musicfox/go-musicfox/releases/download/v$version/go-musicfox_$version_windows_arm64.zip",
                "extract_dir": "go-musicfox_$version_windows_arm64"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
