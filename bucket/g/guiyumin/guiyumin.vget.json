{
    "version": "0.10.3",
    "description": "多功能命令行下载工具，支持音频、视频、播客、 pdf 等各种内容 | Versatile command-line toolkit for downloading audio, video, podcasts, pdf and more",
    "homepage": "https://vget.io/",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/guiyumin/vget/releases/download/v0.10.3/vget_0.10.3_windows_amd64.zip",
            "hash": "54b9e3f73f25f2bf1c10a56fcef3ba687e16c10149e39529edf0753e42c9c677"
        }
    },
    "extract_to": "app",
    "bin": "app\\vget.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\vget\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/guiyumin/vget/releases/download/v$version/vget_$version_windows_amd64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
