{
    "version": "0.12.2",
    "description": "多功能命令行下载工具，支持音频、视频、播客、 pdf 等各种内容 | Versatile command-line toolkit for downloading audio, video, podcasts, pdf and more",
    "homepage": "https://vget.io/",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/guiyumin/vget/releases/download/v0.12.2/vget_0.12.2_windows_amd64.zip",
            "hash": "b4d55c2176ef4eaedaa662d31f02e90978e38286a6f2c021358f904e0d2ba4d6"
        }
    },
    "extract_to": "app",
    "bin": "app\\vget.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\vget\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/guiyumin/vget/releases/download/v$version/vget_$version_windows_amd64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
