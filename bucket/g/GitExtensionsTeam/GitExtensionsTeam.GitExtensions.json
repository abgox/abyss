{
    "version": "6.0.5.18375",
    "description": "一个用于管理 Git 仓库的独立用户界面工具 | A standalone UI tool for managing git repositories",
    "homepage": "https://gitextensions.github.io/",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/gitextensions/gitextensions/releases/download/v6.0.5/GitExtensions-Portable-x64-6.0.5.18375-069d8b778.zip",
            "hash": "13bfbc5fc5ba79fe1d62af8cf9bc224d1c6c2ebd1f09d1357599dcb4a83fad52"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\GitExtensions.exe",
            "GitExtensions"
        ]
    ],
    "persist": [
        [
            "app\\GitExtensions.settings",
            "AppData\\Roaming\\GitExtensions\\GitExtensions\\GitExtensions.settings"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-File \"$persist_dir\\AppData\\Roaming\\GitExtensions\\GitExtensions\\GitExtensions.settings\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://api.github.com/repositories/85953/releases",
        "jsonpath": "$..browser_download_url",
        "regex": "/v(?<tag>[\\d.]+)/GitExtensions-Portable-(?:x[\\d.]+)-(?<version>[\\d.]+)-(?<commit>[\\w]+).zip"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/gitextensions/gitextensions/releases/download/v$matchTag/GitExtensions-Portable-x64-$version-$matchCommit.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
