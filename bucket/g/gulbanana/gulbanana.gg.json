{
    "version": "0.38.1",
    "description": "适用于 Jujutsu (jj) 的图形用户界面 | A GUI for Jujutsu (jj)",
    "homepage": "https://github.com/gulbanana/gg",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/gulbanana/gg/releases/download/v0.38.1/gg_0.38.1_x64-setup.exe",
            "hash": "e969e73d32fbd455a702ecf5737e41cfa1c582f08e16d7c6ea050f58a7b53ea4"
        }
    },
    "bin": "app\\gg.exe",
    "shortcuts": [
        [
            "app\\gg.exe",
            "gg"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\au.gulbanana.gg\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\au.gulbanana.gg\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/gulbanana/gg/releases/download/v$version/gg_$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
