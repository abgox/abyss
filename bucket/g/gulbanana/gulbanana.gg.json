{
    "version": "0.36.3",
    "description": "适用于 Jujutsu (jj) 的图形用户界面 | A GUI for Jujutsu (jj)",
    "homepage": "https://github.com/gulbanana/gg",
    "license": {
        "identifier": "Apache-2.0",
        "url": "https://github.com/gulbanana/gg/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/gulbanana/gg/releases/download/v0.36.3/gg_0.36.3_x64-setup.exe",
            "hash": "a92c81a927c9c8c73ab28c8cbf4ffa9c3d9c3770f51fe65b12dcff8a55e52f10"
        }
    },
    "bin": "app\\gg.exe",
    "shortcuts": [
        [
            "app\\gg.exe",
            "gg"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\au.gulbanana.gg\"",
        "A-Install-Exe -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData \"$env:LocalAppData\\au.gulbanana.gg\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/gulbanana/gg/releases/download/v$version/gg_$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
