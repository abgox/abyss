{
    "version": "0.37.0",
    "description": "适用于 Jujutsu (jj) 的图形用户界面 | A GUI for Jujutsu (jj)",
    "homepage": "https://github.com/gulbanana/gg",
    "license": {
        "identifier": "Apache-2.0",
        "url": "https://github.com/gulbanana/gg/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/gulbanana/gg/releases/download/v0.37.0/gg_0.37.0_x64-setup.exe",
            "hash": "e8df6a0997e58cbf2d1ef4e41760f4db54e511d079166206a2fa05d1bca5d923"
        }
    },
    "bin": "app\\gg.exe",
    "shortcuts": [
        [
            "app\\gg.exe",
            "gg"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\au.gulbanana.gg\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\au.gulbanana.gg\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/gulbanana/gg/releases/download/v$version/gg_$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
