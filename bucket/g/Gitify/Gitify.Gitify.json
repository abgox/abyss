{
    "version": "6.15.0",
    "description": "菜单栏上的 GitHub 通知。 | GitHub notifications on your menu bar.",
    "homepage": "https://gitify.io/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/gitify-app/gitify/releases/download/v6.15.0/Gitify-Setup-6.15.0.exe",
            "hash": "4522ae9a373f4bb897bd470e365c2ac1e9a07541643dabfe3a9f841be3c6d26d"
        }
    },
    "shortcuts": [
        [
            "app\\Gitify.exe",
            "Gitify"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:AppData\\gitify\"",
        "A-Install-App -Uninstaller 'app\\Uninstall Gitify.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\gitify-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/gitify-app/gitify/releases/download/v$version/Gitify-Setup-$version.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
