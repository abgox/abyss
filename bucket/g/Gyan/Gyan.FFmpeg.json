{
    "version": "8.0.1",
    "description": "用于录制、转换和传输音频和视频的完整跨平台解决方案 | A complete, cross-platform solution to record, convert and stream audio and video.",
    "homepage": "https://www.gyan.dev/ffmpeg/builds/",
    "license": {
        "identifier": "LGPL-3.0-only",
        "url": "https://www.ffmpeg.org/legal.html"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/GyanD/codexffmpeg/releases/download/8.0.1/ffmpeg-8.0.1-full_build.zip",
            "hash": "467cde100a47ed4b03a897988aeb4a296890c1e2b2d2864204657d002bc5fb90",
            "extract_dir": "ffmpeg-8.0.1-full_build"
        }
    },
    "extract_to": "app",
    "bin": [
        "app\\bin\\ffmpeg.exe",
        "app\\bin\\ffplay.exe",
        "app\\bin\\ffprobe.exe"
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo, $out = A-Get-InstallerInfoFromWinget 'Gyan.FFmpeg' 'zip'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                },
                "extract_dir": "ffmpeg-$version-full_build"
            }
        }
    }
}
