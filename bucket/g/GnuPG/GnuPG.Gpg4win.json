{
    "version": "5.0.0",
    "description": "GNU Privacy Guard 是一款用于文件和电子邮件的加密软件，适用于 Windows 系统 | GNU Privacy Guard for Windows is encryption software for files and emails.",
    "homepage": "https://www.gpg4win.org/",
    "license": {
        "identifier": "GPL-2.0",
        "url": "https://git.gnupg.org/cgi-bin/gitweb.cgi?p=gpg4win.git;a=blob_plain;f=COPYING;hb=HEAD"
    },
    "architecture": {
        "64bit": {
            "url": "https://files.gpg4win.org/gpg4win-5.0.0.exe",
            "hash": "73b026d4eae86fe54ee538b73f0311a3cd77aa885343fbda0bffdcac2dfd704f"
        }
    },
    "env_add_path": [
        "GnuPG\\bin",
        "app\\bin"
    ],
    "shortcuts": [
        [
            "app\\bin\\kleopatra.exe",
            "Kleopatra (GnuPG)"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:AppData\\gnupg\",\"$env:AppData\\kleopatra\"",
        "A-Install-App -Uninstaller 'app\\gpg4win-uninstall.exe' -ArgumentList '/S', \"/D=$dir\\app\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process",
        "A-Uninstall-App -ArgumentList '/S'",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://www.gpg4win.org/get-gpg4win.html",
        "regex": "Download Gpg4win ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://files.gpg4win.org/gpg4win-$version.exe",
                "hash": {
                    "url": "https://gpg4win.org/package-integrity.html"
                }
            }
        }
    }
}
