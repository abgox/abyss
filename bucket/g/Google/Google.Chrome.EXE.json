{
    "version": "145.0.7632.68",
    "description": "谷歌浏览器 - 快速、安全且免费的网络浏览器，专为现代网络打造 | Chrome Browser - Fast, secure, and free web browser, built for the modern web",
    "homepage": "https://www.google.com/intl/zh-CN/chrome/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.google.com/intl/zh-CN/chrome/terms/"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Google\\Chrome",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:ProgramFiles\\Google\\Chrome",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://dl.google.com/release2/chrome/acqjif3p26wxp6x6biz5fy2dbtsa_145.0.7632.68/145.0.7632.68_chrome_installer_uncompressed.exe",
            "hash": "9185d1b58c6a574887180b0c0ee75acaee6c285ba57f5165beabd054fe13cf7b"
        },
        "arm64": {
            "url": "https://dl.google.com/release2/chrome/epweeao5o46jnrqwbhgu2vwiya_145.0.7632.68/145.0.7632.68_chrome_installer_uncompressed.exe",
            "hash": "fe030aae49d00cca6f3a729ad563cb9c90479ed3f420c0a8b2059b984f12cb26"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:LocalAppData\\Google\\Chrome\\User Data\"",
        "A-Install-App -ArgumentList '--system-level','--do-not-launch-chrome'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "$Uninstaller = Get-ChildItem \"$env:ProgramFiles\\Google\\Chrome\\Application\" setup.exe -Recurse | Sort-Object LastWriteTime -Descending | Select-Object -First 1",
        "A-Uninstall-App -Uninstaller $Uninstaller.FullName -ArgumentList '--chrome','--uninstall','--system-level','--multi-install','--force-uninstall'",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$res, $out = A-Get-InstallerInfoFromWinget 'Google.Chrome.EXE' 'exe'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_user.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_user.InstallerSha256"
                }
            }
        }
    }
}
