{
    "version": "145.0.7572.3",
    "description": "(Dev 版本) 谷歌浏览器 - 快速、安全且免费的网络浏览器，专为现代网络打造 | (Dev version) Chrome Browser - Fast, secure, and free web browser, built for the modern web.",
    "homepage": "https://www.google.com/intl/zh-CN/chrome/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.google.com/intl/zh-CN/chrome/terms/"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Google\\Chrome Dev",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes-cn": [
        "安装目录: $env:ProgramFiles\\Google\\Chrome Dev",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://dl.google.com/release2/chrome/ad55kvirvn32vjn45x63zhnhnkmq_145.0.7572.3/145.0.7572.3_chrome_installer_uncompressed.exe",
            "hash": "7903537998d2a9e4ba98e30d784d863094a6d7a2ad946ca2c528f010bf2e62e1"
        },
        "arm64": {
            "url": "https://dl.google.com/release2/chrome/dvnrtjpiazvzuav6ub4pobwl_145.0.7572.3/145.0.7572.3_chrome_installer_uncompressed.exe",
            "hash": "6cdf8963c8cd6153411d2600167d1658078a67c2347882a6e27b74431f95aef9"
        }
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:LocalAppData\\Google\\Chrome Dev\\User Data\"",
        "A-Install-Exe -ArgumentList '--chrome-dev','--do-not-launch-chrome','--system-level'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "$Uninstaller = Get-ChildItem \"$env:ProgramFiles\\Google\\Chrome Dev\\Application\" setup.exe -Recurse | Sort-Object LastWriteTime -Descending | Select-Object -First 1",
        "A-Uninstall-Exe -Uninstaller $Uninstaller.FullName -ArgumentList '--chrome-dev','--uninstall','--system-level','--multi-install','--force-uninstall'",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'Google.Chrome.Dev.EXE' 'exe'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_machine.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_machine.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_machine.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
