{
    "version": "147.0.7703.0",
    "description": "(Dev 版本) 谷歌浏览器 - 快速、安全且免费的网络浏览器，专为现代网络打造 | (Dev version) Chrome Browser - Fast, secure, and free web browser, built for the modern web",
    "homepage": "https://www.google.com/intl/zh-CN/chrome/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.google.com/intl/zh-CN/chrome/terms/"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Google\\Chrome Dev",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:ProgramFiles\\Google\\Chrome Dev",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://dl.google.com/release2/chrome/adyjeury37u2k3apwjd37zfruo5q_147.0.7703.0/147.0.7703.0_chrome_installer_uncompressed.exe",
            "hash": "3650807ba282f9ca4e893d613a783fa7b5473dda0cd115083b5fb7ab3629114c"
        },
        "arm64": {
            "url": "https://dl.google.com/release2/chrome/adlrepyvfsna5pmuqapdnp4v3weq_147.0.7703.0/147.0.7703.0_chrome_installer_uncompressed.exe",
            "hash": "b17693fd93df342f1a4a5e57dc536a53cd523fc3cd01cd508fbd2b2b684b712b"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:LocalAppData\\Google\\Chrome Dev\\User Data\"",
        "A-Install-App -ArgumentList '--chrome-dev','--do-not-launch-chrome','--system-level'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "$Uninstaller = Get-ChildItem \"$env:ProgramFiles\\Google\\Chrome Dev\\Application\" setup.exe -Recurse | Sort-Object LastWriteTime -Descending | Select-Object -First 1",
        "A-Uninstall-App -Uninstaller $Uninstaller.FullName -ArgumentList '--chrome-dev','--uninstall','--system-level','--multi-install','--force-uninstall'",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$res, $out = A-Get-InstallerInfoFromWinget 'Google.Chrome.Dev.EXE' 'exe'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
