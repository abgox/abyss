{
    "version": "143.0.7499.17",
    "description": "(Beta 版本) 谷歌浏览器 - 快速、安全且免费的网络浏览器，专为现代网络打造 | (Beta version) Chrome Browser - Fast, secure, and free web browser, built for the modern web.",
    "homepage": "https://www.google.com/intl/zh-CN/chrome/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.google.com/intl/zh-CN/chrome/terms/"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Google\\Chrome Beta",
        "Reference: https://abyss.abgox.com/faq/external-installation-directories"
    ],
    "notes-cn": [
        "安装目录: $env:ProgramFiles\\Google\\Chrome Beta",
        "参考: https://abyss.abgox.com/faq/external-installation-directories"
    ],
    "architecture": {
        "64bit": {
            "url": "https://dl.google.com/release2/chrome/acr7evz5ttruxj654btlovfznlxq_143.0.7499.17/143.0.7499.17_chrome_installer_uncompressed.exe",
            "hash": "f0216f4ed9ef144c130fec40b3f2aa9c194d79289c1308b3a3b364dccf2c802f"
        },
        "arm64": {
            "url": "https://dl.google.com/release2/chrome/acggmihjlm4ocngbu5ypfub7idza_143.0.7499.17/143.0.7499.17_chrome_installer_uncompressed.exe",
            "hash": "6305c78be1ccf8697733b978fffadfc1d19aed6b5c4160955ba3e603ba9e9f29"
        }
    },
    "shortcuts": [
        [
            "$env:ProgramFiles\\Google\\Chrome Beta\\Application\\chrome.exe",
            "Google Chrome Beta"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory @(\"$env:LocalAppData\\Google\\Chrome Beta\\User Data\")",
        "A-Install-Exe -ArgumentList @('--chrome-beta','--do-not-launch-chrome','--system-level')"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "$Uninstaller = Get-ChildItem \"$env:ProgramFiles\\Google\\Chrome Beta\\Application\" setup.exe -Recurse | Sort-Object LastWriteTime -Descending | Select-Object -First 1",
        "A-Uninstall-Exe -Uninstaller $Uninstaller.FullName -ArgumentList @('--chrome-beta','--uninstall','--system-level','--multi-install','--force-uninstall')",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'Google.Chrome.Beta.EXE' 'exe'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_machine.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_machine.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_machine.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
