{
    "version": "146.0.7680.0",
    "description": "(Beta 版本) 谷歌浏览器 - 快速、安全且免费的网络浏览器，专为现代网络打造 | (Beta version) Chrome Browser - Fast, secure, and free web browser, built for the modern web",
    "homepage": "https://www.google.com/intl/zh-CN/chrome/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.google.com/intl/zh-CN/chrome/terms/"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Google\\Chrome Beta",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:ProgramFiles\\Google\\Chrome Beta",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://dl.google.com/release2/chrome/jimm6ksxj463iecrrdsbnvaa64_146.0.7680.0/146.0.7680.0_chrome_installer_uncompressed.exe",
            "hash": "fb229735dec2e808a4df8660d6c633daa0dc59acfdf5f5ad99f0d7c24a599b96"
        },
        "arm64": {
            "url": "https://dl.google.com/release2/chrome/adhg5jnm6wjzdthulstvkmqj7tea_146.0.7680.0/146.0.7680.0_chrome_installer_uncompressed.exe",
            "hash": "04fa99bd78957674e5fe0ef93626c515e4c872848a26dd8a73fefa91de32b898"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:LocalAppData\\Google\\Chrome Beta\\User Data\"",
        "A-Install-App -ArgumentList '--chrome-beta','--do-not-launch-chrome','--system-level'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "$Uninstaller = Get-ChildItem \"$env:ProgramFiles\\Google\\Chrome Beta\\Application\" setup.exe -Recurse | Sort-Object LastWriteTime -Descending | Select-Object -First 1",
        "A-Uninstall-App -Uninstaller $Uninstaller.FullName -ArgumentList '--chrome-beta','--uninstall','--system-level','--multi-install','--force-uninstall'",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$res, $out = A-Get-InstallerInfoFromWinget 'Google.Chrome.Beta.EXE' 'exe'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
