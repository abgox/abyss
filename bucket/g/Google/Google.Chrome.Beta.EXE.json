{
    "version": "139.0.7258.66",
    "description": "(Beta 版本) 谷歌浏览器 - 快速、安全且免费的网络浏览器，专为现代网络打造。(Beta version) Chrome Browser - Fast, secure, and free web browser, built for the modern web.",
    "homepage": "https://www.google.com/intl/zh-CN/chrome/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.google.com/intl/zh-CN/chrome/terms/"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Google\\Chrome Beta",
        "Scoop only manages data, installation, update, and uninstallation operations."
    ],
    "notes-cn": [
        "实际安装目录: $env:ProgramFiles\\Google\\Chrome Beta",
        "Scoop 只管理数据(通过 Link)，安装、更新、卸载操作"
    ],
    "architecture": {
        "64bit": {
            "url": "https://dl.google.com/release2/chrome/ioghnymteoymhcnk2a7shveuea_139.0.7258.66/139.0.7258.66_chrome_installer_uncompressed.exe",
            "hash": "8962735073183a0954eabed17211f59ceb5a6009d506a0352794925ea9504c2e"
        },
        "arm64": {
            "url": "https://dl.google.com/release2/chrome/dubgk3yceearoxg4zkid5hofuy_139.0.7258.66/139.0.7258.66_chrome_installer_uncompressed.exe",
            "hash": "9c63ea5d898861af04968e41ba6e2b68e65e646128df78a65befed0252ca2205"
        }
    },
    "shortcuts": [
        [
            "$env:ProgramFiles\\Google\\Chrome Beta\\Application\\chrome.exe",
            "Google Chrome Beta"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Install-Exe -Uninstaller \"$env:ProgramFiles\\Google\\Chrome Beta\\Application\\$version\\Installer\\setup.exe\" -ArgumentList @('--chrome-beta','--do-not-launch-chrome','--system-level')",
        "A-New-LinkDirectory @(\"$env:LocalAppData\\Google\\Chrome Beta\\User Data\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Uninstall-Exe -ArgumentList @('--chrome-beta','--uninstall','--system-level','--multi-install','--force-uninstall')",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'Google.Chrome.Beta.EXE' 'exe'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_machine.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_machine.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_machine.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "bin/scoop-auto-check-update-temp-data.jsonc",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "bin/scoop-auto-check-update-temp-data.jsonc",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
