{
    "version": "1.9.0",
    "description": "一款现代下载管理器，使用 Golang 和 Flutter 构建 | A modern download manager. Built with Golang and Flutter.",
    "homepage": "https://gopeed.com/",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/GopeedLab/gopeed/releases/download/v1.9.0/Gopeed-v1.9.0-windows-amd64-portable.zip",
            "hash": "fafa8fef33914384d64ba962371367364ac9a063da113ba7b44623ca54f796bc"
        }
    },
    "extract_to": "app",
    "bin": "app\\gopeed.exe",
    "shortcuts": [
        [
            "app\\gopeed.exe",
            "Gopeed"
        ]
    ],
    "persist": [
        [
            "app\\gopeed.db",
            "AppData\\Local\\Programs\\gopeed\\storage\\gopeed.db"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-File \"$persist_dir\\AppData\\Local\\Programs\\gopeed\\storage\\gopeed.db\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/GopeedLab/gopeed/releases/download/v$version/Gopeed-v$version-windows-amd64-portable.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
