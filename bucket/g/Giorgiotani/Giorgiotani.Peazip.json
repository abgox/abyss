{
    "version": "10.7.0",
    "description": "一款免费的文件归档工具和 rar 解压缩器 | A free file archiver utility and rar extractor.",
    "homepage": "https://peazip.github.io/",
    "license": {
        "identifier": "LGPL-3.0-only",
        "url": "https://github.com/peazip/PeaZip/blob/sources/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/peazip/PeaZip/releases/download/10.7.0/peazip-10.7.0.WIN64.exe",
            "hash": "0ea1860d0fd137b03451d60e2dbd588963173532980043dc70bda429a13c6aaa"
        }
    },
    "extract_to": "app",
    "innosetup": true,
    "bin": "app\\peazip.exe",
    "shortcuts": [
        [
            "app\\peazip.exe",
            "PeaZip"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:AppData\\PeaZip\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/peazip/PeaZip/releases/latest",
        "regex": "href=\"/.+/.+/tree/(?:v|V)?([^\"?]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/peazip/PeaZip/releases/download/$version/peazip-$version.WIN64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
