    ],
    "architecture": {
        "64bit": {
            "url": "https://go.dev/dl/go1.25.5.windows-amd64.msi#/dl.msi_",
            "hash": "f10d066ed3ccd7ab3d5d330eab6befc58f3e3dd665a2b5821ee93159ab04bf2f"
        },
        "arm64": {
            "url": "https://go.dev/dl/go1.25.5.windows-arm64.msi#/dl.msi_",
