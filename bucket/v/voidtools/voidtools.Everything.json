{
    "version": "1.4.1.1030",
    "description": "文件搜索工具，基于名称快速定位文件和文件夹 | Locate files and folders by name instantly.",
    "homepage": "https://www.voidtools.com/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.voidtools.com/License.txt"
    },
    "architecture": {
        "64bit": {
            "url": "https://www.voidtools.com/Everything-1.4.1.1030.x64.msi",
            "hash": "5bff2dba46c71838b8966d340ba36a181fb00ccd5cbda459003711eb80768c89"
        }
    },
    "extract_dir": "Everything",
    "extract_to": "app",
    "bin": "app\\Everything.exe",
    "shortcuts": [
        [
            "app\\Everything.exe",
            "Everything",
            "-startup"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Deny-IfAppConflict 'voidtools.Everything','voidtools.Everything.Lite'",
        "A-New-LinkDirectory \"$env:AppData\\Everything\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Service 'Everything' -RequireAdmin | A-Remove-Service",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:LocalAppData\\Everything\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "regex": "Download Everything ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.voidtools.com/Everything-$version.x64.msi"
            }
        }
    }
}
