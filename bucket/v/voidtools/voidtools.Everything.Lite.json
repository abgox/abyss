{
    "version": "1.4.1.1032",
    "description": "(Lite 版本，不包含 IPC 和 ETP/FTP/HTTP 服务器) 文件搜索工具，基于名称快速定位文件和文件夹 | (lite version, does not contain IPC and ETP/FTP/HTTP servers) Locate files and folders by name instantly.",
    "homepage": "https://www.voidtools.com/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.voidtools.com/License.txt"
    },
    "architecture": {
        "64bit": {
            "url": "https://www.voidtools.com/Everything-1.4.1.1032.x64.Lite.msi",
            "hash": "7995dd3c6f8b37863f0fbe090aed5b00ef62a7351cb69a8be26ad36b29990e81"
        }
    },
    "extract_dir": "Everything",
    "extract_to": "app",
    "bin": [
        [
            "app\\Everything.exe",
            "Everything-lite"
        ]
    ],
    "shortcuts": [
        [
            "app\\Everything.exe",
            "Everything Lite",
            "-startup"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Deny-IfAppConflict 'voidtools.Everything','voidtools.Everything.Lite'",
        "A-New-LinkDirectory \"$env:AppData\\Everything\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Service 'Everything' -RequireAdmin | A-Remove-Service",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:LocalAppData\\Everything\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "regex": "Download Everything ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.voidtools.com/Everything-$version.x64.Lite.msi"
            }
        }
    }
}
