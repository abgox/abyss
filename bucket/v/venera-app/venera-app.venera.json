{
    "version": "1.6.2",
    "description": "一款支持阅读本地和网络漫画的漫画阅读器。 | A comic reader that support reading local and network comics.",
    "homepage": "https://github.com/venera-app/venera",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://github.com/venera-app/venera/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/venera-app/venera/releases/download/v1.6.2/Venera-1.6.2-windows.zip",
            "hash": "78571338b28856957e42d814db6ae8f16cad76433777c546d52d23eb4f6eb692"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\venera.exe",
            "Venera"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\com.github.wgh136\\venera\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData \"$env:LocalAppData\\com.github.wgh136\\venera\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/venera-app/venera/releases/download/v$version/Venera-$version-windows.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
