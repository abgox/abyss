{
    "version": "1.6.1",
    "description": "一款支持阅读本地和网络漫画的漫画阅读器。 | A comic reader that support reading local and network comics.",
    "homepage": "https://github.com/venera-app/venera",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://github.com/venera-app/venera/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/venera-app/venera/releases/download/v1.6.1/Venera-1.6.1-windows.zip",
            "hash": "c3236d761919eb58b793a21244d430ad495875b43fa085d11ff9f679ea72a757"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\venera.exe",
            "Venera"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:AppData\\com.github.wgh136\\venera\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Remove-TempData @(\"$env:LocalAppData\\com.github.wgh136\\venera\")"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/venera-app/venera/releases/download/v$version/Venera-$version-windows.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
