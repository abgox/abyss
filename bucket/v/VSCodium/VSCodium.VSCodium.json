    "license": {
        "identifier": "MIT",
        "url": "https://github.com/VSCodium/vscodium/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/VSCodium/vscodium/releases/download/1.106.27818/VSCodiumUserSetup-x64-1.106.27818.exe",
            "hash": "d9f081b06b7989e6a7365c7a63ac0afd41f59881e130646389f894854ec36143"
        },
        "arm64": {
            "url": "https://github.com/VSCodium/vscodium/releases/download/1.106.27818/VSCodiumUserSetup-arm64-1.106.27818.exe",
            "hash": "a7ebf91e69d71e831db1b6a5be0920d38a9b8a316eb1912be2bad8332f6249cc"
        }
    },
    "env_add_path": "app\\bin",
    "shortcuts": [
        [
            "app\\VSCodium.exe",
            "VSCodium"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:AppData\\VSCodium\",\"$env:UserProfile\\.vscode-oss\")",
        "A-Install-Exe inno"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/VSCodium/vscodium",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/VSCodium/vscodium/releases/download/$version/VSCodiumUserSetup-x64-$version.exe"
            },
            "arm64": {
                "url": "https://github.com/VSCodium/vscodium/releases/download/$version/VSCodiumUserSetup-arm64-$version.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
