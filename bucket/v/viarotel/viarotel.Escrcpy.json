{
    "version": "1.34.1",
    "description": "使用图形化的 Scrcpy 显示和控制您的 Android 设备，由 Electron 驱动 | Graphical Scrcpy to display and control Android, devices powered by Electron.",
    "homepage": "https://github.com/viarotel-org/escrcpy",
    "license": {
        "identifier": "Apache-2.0",
        "url": "https://github.com/viarotel-org/escrcpy/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/viarotel-org/escrcpy/releases/download/v1.34.1/Escrcpy-1.34.1-win-setup-x64.exe",
            "hash": "6db908cc41b8a57d6f25ff9fbf69aa53dbcbd5d8930f0c9d024a858aac381d33"
        },
        "arm64": {
            "url": "https://github.com/viarotel-org/escrcpy/releases/download/v1.34.1/Escrcpy-1.34.1-win-setup-arm64.exe",
            "hash": "2fcdc2fdaf19bde51d8e018705f683efd8b56cfa0ba6b064b3a628eeab68e26e"
        }
    },
    "shortcuts": [
        [
            "app\\Escrcpy.exe",
            "Escrcpy"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:AppData\\escrcpy\")",
        "A-Install-Exe -Uninstaller 'app\\Uninstall Escrcpy.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData @(\"$env:LocalAppData\\escrcpy-updater\")"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/viarotel-org/escrcpy",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/viarotel-org/escrcpy/releases/download/v$version/Escrcpy-$version-win-setup-x64.exe"
            },
            "arm64": {
                "url": "https://github.com/viarotel-org/escrcpy/releases/download/v$version/Escrcpy-$version-win-setup-arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
