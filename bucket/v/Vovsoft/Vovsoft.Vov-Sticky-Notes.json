{
    "version": "10.0",
    "description": "创建数字贴纸和提醒事项 | Creates digital stickers and reminders.",
    "homepage": "https://vovsoft.com/software/vov-sticky-notes/",
    "license": {
        "identifier": "Shareware"
    },
    "architecture": {
        "64bit": {
            "url": "https://files.vovsoft.com/vov-sticky-notes-portable.zip?v=10.0",
            "hash": "999d201100b1f5404d8b7d70d2aa20c17739f7980fe6a7a1516db318670cbbd4"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\sticky.exe",
            "Vov Sticky Notes"
        ]
    ],
    "persist": [
        [
            "app\\data.ini",
            "data.ini"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-File \"$persist_dir\\data.ini\" -content ''"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "regex": "Version:</b>\\s?([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://files.vovsoft.com/vov-sticky-notes-portable.zip?v=$version"
            }
        }
    }
}
