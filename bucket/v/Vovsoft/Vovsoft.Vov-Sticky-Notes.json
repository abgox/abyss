{
    "version": "9.7",
    "description": "创建数字贴纸和提醒事项 | Creates digital stickers and reminders.",
    "homepage": "https://vovsoft.com/software/vov-sticky-notes/",
    "license": {
        "identifier": "Shareware"
    },
    "architecture": {
        "64bit": {
            "url": "https://files.vovsoft.com/vov-sticky-notes-portable.zip?v=9.7",
            "hash": "f814f7f3645008a6a7b1ce3a2b32c066005c5238f43ed5d697850b54ce66b8ea"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\sticky.exe",
            "Vov Sticky Notes"
        ]
    ],
    "persist": [
        [
            "app\\data.ini",
            "data.ini"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-PersistFile \"$persist_dir\\data.ini\" -content ''"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": "Version:</b>\\s?([\\d.]+)",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://files.vovsoft.com/vov-sticky-notes-portable.zip?v=$version"
            }
        }
    }
}
