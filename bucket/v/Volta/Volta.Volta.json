{
    "version": "2.0.2",
    "description": "轻松上手的 JavaScript 工具管理器，它是快速的、可靠的、通用的 | The Hassle-Free JavaScript Tool Manager, and it's fast, reliable, and universal",
    "homepage": "https://volta.sh/",
    "license": {
        "identifier": "BSD-2-Clause"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Volta",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:ProgramFiles\\Volta",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "suggest": {
        "PSCompletions": "abyss/abgox.PSCompletions"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/volta-cli/volta/releases/download/v2.0.2/volta-2.0.2-windows-x86_64.msi#/dl.msi_",
            "hash": "104bf5518177990e4c4de78097caa747eb8f64e1149bfdfa9106f4a3d3e5f10b"
        },
        "arm64": {
            "url": "https://github.com/volta-cli/volta/releases/download/v2.0.2/volta-2.0.2-windows-arm64.msi#/dl.msi_",
            "hash": "90717f282bbffc32bdbf9043bc91f4b00ea6bb02a5a26216eaf691eeabd2a99c"
        }
    },
    "env_set": {
        "VOLTA_FEATURE_PNPM": "1"
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:LocalAppData\\Volta\"",
        "A-Install-Msi"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Uninstall-Msi",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/volta-cli/volta/releases/download/v$version/volta-$version-windows-x86_64.msi#/dl.msi_"
            },
            "arm64": {
                "url": "https://github.com/volta-cli/volta/releases/download/v$version/volta-$version-windows-arm64.msi#/dl.msi_"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
