{
    "version": "2.0.2",
    "description": "轻松上手的 JavaScript 工具管理器，它是快速的、可靠的、通用的。The Hassle-Free JavaScript Tool Manager, and it's fast, reliable, and universal.",
    "homepage": "https://volta.sh/",
    "license": {
        "identifier": "BSD-2-Clause",
        "url": "https://github.com/volta-cli/volta/blob/main/LICENSE"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Volta",
        "Scoop only manages data, installation and update operations."
    ],
    "notes-cn": [
        "实际安装目录: $env:ProgramFiles\\Volta",
        "Scoop 只管理数据(通过 Link)，安装、更新操作"
    ],
    "suggest": {
        "PSCompletions": "abyss/abgox.PSCompletions"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/volta-cli/volta/releases/download/v2.0.2/volta-2.0.2-windows-x86_64.msi#/dl.exe",
            "hash": "104bf5518177990e4c4de78097caa747eb8f64e1149bfdfa9106f4a3d3e5f10b"
        },
        "arm64": {
            "url": "https://github.com/volta-cli/volta/releases/download/v2.0.2/volta-2.0.2-windows-arm64.msi#/dl.exe",
            "hash": "90717f282bbffc32bdbf9043bc91f4b00ea6bb02a5a26216eaf691eeabd2a99c"
        }
    },
    "env_set": {
        "VOLTA_FEATURE_PNPM": "1"
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Install-Exe -Installer 'C:\\Windows\\System32\\msiexec.exe' -ArgumentList @('/i', \"$dir\\$fname\", '/passive') -SuccessFile \"$env:ProgramFiles\\Volta\\volta.exe\"",
        "A-New-LinkDirectory @(\"$env:LocalAppData\\Volta\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "$ProductCode = A-Get-ProductCode '^Volta$'",
        "A-Uninstall-Exe -Uninstaller 'C:\\Windows\\System32\\msiexec.exe' -ArgumentList @('/x', $ProductCode, '/passive') -FailureFile \"$env:ProgramFiles\\Volta\\volta.exe\"",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/volta-cli/volta/releases/latest",
        "regex": "/tree/(?:v|V)?([^\"?]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/volta-cli/volta/releases/download/v$version/volta-$version-windows-x86_64.msi#/dl.exe"
            },
            "arm64": {
                "url": "https://github.com/volta-cli/volta/releases/download/v$version/volta-$version-windows-arm64.msi#/dl.exe"
            }
        }
    }
}
