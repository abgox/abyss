{
    "version": "0.1.22",
    "description": "一款免费开源的 RSS 阅读器 | A free and open-source feed reader.",
    "homepage": "https://github.com/zhanglun/lettura",
    "license": {
        "identifier": "Unknown"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/zhanglun/lettura/releases/download/v0.1.22/Lettura_0.1.22_x64-setup.exe",
            "hash": "533ae33f2a4237cf9cac115f5d8a2aa735d070724174d834c2746c6be74dc2c9"
        }
    },
    "shortcuts": [
        [
            "app\\Lettura.exe",
            "Lettura"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$home\\.lettura\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:AppData\\com.lettura.dev\",\"$env:LocalAppData\\com.lettura.dev\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/zhanglun/lettura/releases/download/v$version/Lettura_$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
