{
    "version": "2.0.4",
    "description": "一款即用即走的翻译、OCR工具 | A ready-to-go translation ocr tool",
    "homepage": "https://stranslate.zggsong.com/",
    "license": {
        "identifier": "MIT"
    },
    "suggest": {
        "runtime": "abyss/Microsoft.DotNet.DesktopRuntime.10"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/STranslate/STranslate/releases/download/v2.0.4/STranslate-win-Portable.zip",
            "hash": "2f5ec020f3eae082bcccb83e4451228206b8f6eb14004ea1ca8100edab958af9"
        }
    },
    "extract_to": "app",
    "bin": "app\\STranslate.exe",
    "shortcuts": [
        [
            "app\\STranslate.exe",
            "STranslate"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\STranslate\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/STranslate/STranslate/releases/download/v$version/STranslate-win-Portable.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
