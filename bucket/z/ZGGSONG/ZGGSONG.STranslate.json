{
    "version": "2.0.5",
    "description": "一款即用即走的翻译、OCR 工具 | A ready-to-go translation ocr tool",
    "homepage": "https://stranslate.zggsong.com/",
    "license": {
        "identifier": "MIT"
    },
    "suggest": {
        "runtime": "abyss/Microsoft.DotNet.DesktopRuntime.10"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/STranslate/STranslate/releases/download/v2.0.5/STranslate-win-Portable.zip",
            "hash": "98d38304c57c80159d4f6733e4591b18db8a51887bd08711493a10b7ae292b79"
        }
    },
    "extract_to": "app",
    "bin": "app\\STranslate.exe",
    "shortcuts": [
        [
            "app\\STranslate.exe",
            "STranslate"
        ]
    ],
    "persist": [
        [
            "app\\current\\PortableConfig",
            "AppData\\Roaming\\STranslate"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/STranslate/STranslate/releases/download/v$version/STranslate-win-Portable.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
