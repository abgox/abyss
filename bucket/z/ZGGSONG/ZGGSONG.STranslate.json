{
    "version": "2.0.0",
    "description": "一款即用即走的翻译、OCR工具 | A ready-to-go translation ocr tool.",
    "homepage": "https://stranslate.zggsong.com/",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/ZGGSONG/STranslate/blob/main/LICENSE"
    },
    "suggest": {
        "runtime": "abyss/Microsoft.DotNet.DesktopRuntime.10"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/STranslate/STranslate/releases/download/2.0.0/STranslate-win-Portable.zip",
            "hash": "ea9cb228a1661b50c800a6604065ea05665e92abc4fa3187996521b6a631fc5b"
        }
    },
    "extract_to": "app",
    "bin": "app\\STranslate.exe",
    "shortcuts": [
        [
            "app\\STranslate.exe",
            "STranslate"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\STranslate\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/STranslate/STranslate/releases/download/$version/STranslate-win-Portable.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
