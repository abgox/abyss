{
    "version": "1.19b",
    "description": "一款基于火狐的浏览器，旨在将您的工作效率提升到新高度 | A firefox-based browser with the aim of pushing your productivity to a new level",
    "homepage": "https://zen-browser.app/",
    "license": {
        "identifier": "MPL-2.0"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Zen Browser",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:ProgramFiles\\Zen Browser",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/zen-browser/desktop/releases/download/1.19b/zen.installer.exe",
            "hash": "285dbff179bcdc51b660490b676b2cb55701112c9b508b6e2193a513056a88a1"
        },
        "arm64": {
            "url": "https://github.com/zen-browser/desktop/releases/download/1.19b/zen.installer-arm64.exe",
            "hash": "4a4ccc2bf0d14d5bf733ec844c7678d71d50fac65dff157f33f258fe37cd3f0b"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:AppData\\zen\"",
        "# 不能使用 /D=$dir 安装到 Scoop 目录下，只能使用标准安装目录 $env:ProgramFiles\\Zen Browser",
        "# 如果安装到 Scoop 目录下，每次重新安装/更新都会自动新建 Profile 用户配置，而不是使用旧的用户配置",
        "A-Install-App -Uninstaller \"$env:ProgramFiles\\Zen Browser\\uninstall\\helper.exe\" -ArgumentList '/S'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process \"$env:ProgramFiles\\Zen Browser\"",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:ProgramFiles\\Zen Browser\",\"$env:LocalAppData\\zen\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/zen-browser/desktop/releases/download/$version/zen.installer.exe"
            },
            "arm64": {
                "url": "https://github.com/zen-browser/desktop/releases/download/$version/zen.installer-arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
