{
    "version": "1.14.8b",
    "description": "一款基于火狐的浏览器，旨在将您的工作效率提升到新高度。A firefox-based browser with the aim of pushing your productivity to a new level.",
    "homepage": "https://zen-browser.app/",
    "license": {
        "identifier": "MPL-2.0",
        "url": "https://github.com/zen-browser/desktop/blob/HEAD/LICENSE"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\Zen Browser",
        "Scoop only manages data, installation, update, and uninstallation operations."
    ],
    "notes-cn": [
        "实际安装目录: $env:ProgramFiles\\Zen Browser",
        "Scoop 只管理数据(通过 Link)，安装、更新、卸载操作"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/zen-browser/desktop/releases/download/1.14.8b/zen.installer.exe",
            "hash": "2c85d271cc49c30eb34e5c7d94fd3bd22e1b37df37d2cf5e5610279aa9f2bc2b"
        },
        "arm64": {
            "url": "https://github.com/zen-browser/desktop/releases/download/1.14.8b/zen.installer-arm64.exe",
            "hash": "3deb3622f87fb41baa9a8e4331f48ffa65198abd7500432b63ac8921cd002f56"
        }
    },
    "shortcuts": [
        [
            "$env:ProgramFiles\\Zen Browser\\zen.exe",
            "Zen Browser"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Require-Admin",
        "# 不能使用 /D=$dir 安装到 Scoop 目录下，只能使用标准安装目录 $env:ProgramFiles\\Zen Browser",
        "# 如果安装到 Scoop 目录下，每次重新安装/更新都会自动新建 Profile 用户配置，而不是使用旧的用户配置",
        "A-Install-Exe -Uninstaller \"$env:ProgramFiles\\Zen Browser\\uninstall\\helper.exe\" -ArgumentList @('/S')",
        "A-New-LinkDirectory @(\"$env:AppData\\zen\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process \"$env:ProgramFiles\\Zen Browser\"",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData @(\"$env:ProgramFiles\\Zen Browser\",\"$env:LocalAppData\\zen\")"
    ],
    "post_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/zen-browser/desktop/releases/latest",
        "regex": "/tree/(?:v|V)?([^\"?]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/zen-browser/desktop/releases/download/$version/zen.installer.exe"
            },
            "arm64": {
                "url": "https://github.com/zen-browser/desktop/releases/download/$version/zen.installer-arm64.exe"
            }
        }
    }
}
