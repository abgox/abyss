{
    "version": "0.36.2",
    "description": "一个原生运行人工智能代理的开源 Chromium 浏览器分支 | An open-source chromium browser fork that runs AI agents natively.",
    "homepage": "https://browseros.com/",
    "license": {
        "identifier": "AGPL-3.0-only"
    },
    "notes": [
        "The installation directory: $env:ProgramFiles\\BrowserOS\\BrowserOS",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:ProgramFiles\\BrowserOS\\BrowserOS",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/browseros-ai/BrowserOS/releases/download/v0.36.2/BrowserOS_v0.36.2_x64_installer.exe",
            "hash": "09d1decc2b8f8da42d8049ccd72c8a345a49e8981a3b6ffd92ce05545971b5d2"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:LocalAppData\\BrowserOS\\BrowserOS\\User Data\"",
        "A-Install-App -ArgumentList '--do-not-launch-chrome','--system-level'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "$Uninstaller = Get-ChildItem \"$env:ProgramFiles\\BrowserOS\\BrowserOS\\Application\" setup.exe -Recurse | Sort-Object LastWriteTime -Descending | Select-Object -First 1",
        "A-Uninstall-App -Uninstaller $Uninstaller.FullName -ArgumentList '--uninstall','--system-level','--multi-install','--force-uninstall'",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/browseros-ai/BrowserOS/releases/download/v$version/BrowserOS_v$version_x64_installer.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
