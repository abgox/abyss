{
    "version": "10.1.0.13849",
    "description": "剪映专业版，一款全能易用的桌面端剪辑软件，让创作更简单 | A powerful desktop video editor with a simple interface, making it easy to create videos",
    "homepage": "https://www.capcut.cn/",
    "license": {
        "identifier": "Freemium"
    },
    "architecture": {
        "64bit": {
            "url": "https://lf3-package.vlabstatic.com/obj/faceu-packages/Jianying_10_1_0_13849_jianyingpro_0_creatortool.exe",
            "hash": "7d5d032c30c8989498545c509d3819e868918dabd799b4cdfd611bc4325c7b93"
        }
    },
    "shortcuts": [
        [
            "app\\JianyingPro.exe",
            "剪映专业版"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "$InstallLocation = '\"' + \"$dir\\app\" + '\"'",
        "A-New-LinkDirectory \"$env:LocalAppData\\JianyingPro\"",
        "A-Install-App -ArgumentList '/silent_install=1', \"/install_path=$InstallLocation\"",
        "A-Hold-App"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Uninstall-Manually 'app'",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$res, $out = A-Get-InstallerInfoFromWinget 'ByteDance.JianyingPro' 'exe'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_user.InstallerSha256"
                }
            }
        }
    }
}
