{
    "version": "9.8.0.13769",
    "description": "剪映专业版，一款全能易用的桌面端剪辑软件，让创作更简单 | A powerful desktop video editor with a simple interface, making it easy to create videos.",
    "homepage": "https://www.capcut.cn/",
    "license": {
        "identifier": "Freemium"
    },
    "architecture": {
        "64bit": {
            "url": "https://lf3-package.vlabstatic.com/obj/faceu-packages/Jianying_9_8_0_13769_jianyingpro_0_creatortool.exe",
            "hash": "01e85e24c92fae6d3ceb2731e652a69f40b223da359251b9f21e256261c88b8a"
        }
    },
    "shortcuts": [
        [
            "app\\JianyingPro.exe",
            "剪映专业版"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "$InstallLocation = '\"' + \"$dir\\app\" + '\"'",
        "A-New-LinkDirectory \"$env:LocalAppData\\JianyingPro\"",
        "A-Install-App -ArgumentList '/silent_install=1', \"/install_path=$InstallLocation\"",
        "A-Hold-App"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Uninstall-Manually 'app'",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'ByteDance.JianyingPro' 'exe'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_user.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_user.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_user.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_user.InstallerSha256"
                }
            }
        }
    }
}
