{
    "version": "7.60.8",
    "description": "飞书，字节跳动下先进企业协作与管理平台 | Feishu is a cloud-based enterprise collaboration and management platform developed by ByteDance.",
    "homepage": "https://www.feishu.cn/",
    "license": {
        "identifier": "Freemium"
    },
    "architecture": {
        "64bit": {
            "url": "https://sf3-cn.feishucdn.com/obj/ee-appcenter/36d88e8c/Feishu-win32_ia32-7.60.8-signed.exe",
            "hash": "592bf3fde9f0513915cb2709f8e17ca59e735ba5eda9275ebc5e135411f0e511"
        }
    },
    "shortcuts": [
        [
            "app\\Feishu\\Feishu.exe",
            "飞书"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\LarkShell\"",
        "$InstallLocation = '\"' + \"$dir\\app\" + '\"'",
        "$LogLocation = '\"' + \"$env:TEMP\\scoop-$app-logs\" + '\"'",
        "A-Install-App -ArgumentList '--command=quiet_install', \"--target_dir=$InstallLocation\", \"--log_dir=$LogLocation\"",
        "A-Hold-App"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Uninstall-Manually 'app'",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo, $out = A-Get-InstallerInfoFromWinget 'ByteDance.Feishu' 'exe'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX86",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x86_user.InstallerSha256"
                }
            }
        }
    }
}
