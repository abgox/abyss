{
    "version": "3.4.0",
    "description": "一款以隐私为首要原则、可自行托管且完全开源的个人知识管理软件 | A privacy-first, self-hosted, fully open source personal knowledge management software.",
    "homepage": "https://b3log.org/siyuan/",
    "license": {
        "identifier": "AGPL-3.0-only",
        "url": "https://github.com/siyuan-note/siyuan/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/siyuan-note/siyuan/releases/download/v3.4.0/siyuan-3.4.0-win.exe",
            "hash": "e72601ed6ca696ee241e776d4bb015a08d7e67325f9beda70e838f16ef1a6a45"
        },
        "arm64": {
            "url": "https://github.com/siyuan-note/siyuan/releases/download/v3.4.0/siyuan-3.4.0-win-arm64.exe",
            "hash": "0c0aa08b54be56c2d8fe3e98f97a081e565a3735234098739694be0c15401f3e"
        }
    },
    "shortcuts": [
        [
            "app\\SiYuan.exe",
            "SiYuan"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-New-LinkDirectory @(\"$env:UserProfile\\SiYuan\",\"$env:UserProfile\\.config\\siyuan\")",
        "A-Install-Exe -Uninstaller 'app\\Uninstall SiYuan.exe' -ArgumentList @('/CurrentUser','/S',\"/D=$dir\\app\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData @(\"$env:AppData\\SiYuan-Electron\",\"$env:LocalAppData\\siyuan-updater\")"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/siyuan-note/siyuan",
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubApi"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/siyuan-note/siyuan/releases/download/v$version/siyuan-$version-win.exe"
            },
            "arm64": {
                "url": "https://github.com/siyuan-note/siyuan/releases/download/v$version/siyuan-$version-win-arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
