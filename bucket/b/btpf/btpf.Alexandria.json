{
    "version": "0.13.2",
    "description": "一款简约的跨平台电子书阅读器 | A minimalistic cross-platform eBook reader.",
    "homepage": "https://github.com/btpf/Alexandria",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://github.com/btpf/Alexandria/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/btpf/Alexandria/releases/download/v0.13.2/Alexandria_0.13.2_x64-setup.exe",
            "hash": "01daa5f616a14dff5619937d121ec25d94113eb6e1d8d6dec50c525ddc492252"
        }
    },
    "shortcuts": [
        [
            "app\\Alexandria.exe",
            "Alexandria"
        ]
    ],
    "persist": [
        [
            "app\\Alexandria_Data",
            "Alexandria_Data"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Copy-Item \"$bucketsdir\\$bucket\\extra\\$app\\Alexandria_Data\" \"$persist_dir\\Alexandria_Data\"",
        "A-Ensure-Directory \"$persist_dir\\Alexandria_Data\\books\"",
        "A-Install-Exe -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Uninstall-Exe",
        "A-Remove-TempData \"$env:LocalAppData\\com.btpf.alexandria\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/btpf/Alexandria/releases/download/v$version/Alexandria_$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
