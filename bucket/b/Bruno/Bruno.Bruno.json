{
    "version": "3.1.0",
    "description": "用于探索和测试 API 的开源集成开发环境 (Postman/Insomnia 的轻量级替代品) | Opensource IDE For Exploring and Testing API's (lightweight alternative to Postman/Insomnia)",
    "homepage": "https://www.usebruno.com/",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/usebruno/bruno/releases/download/v3.1.0/bruno_3.1.0_x64_win.zip",
            "hash": "e51131d3e78f688c72fd66debae155d06077323ff330e96d81d6132d5c99fd6f"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\Bruno.exe",
            "Bruno"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\bruno\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/usebruno/bruno/releases/download/v$version/bruno_$version_x64_win.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
