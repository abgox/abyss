{
    "version": "4.2.518",
    "description": "一个应用，在 iMessage、WhatsApp 和其它 13 个聊天网络上聊天 | A single app to chat on iMessage, WhatsApp, and 13 other chat networks",
    "homepage": "https://www.beeper.com/",
    "license": {
        "identifier": "Unknown",
        "url": "https://www.beeper.com/terms"
    },
    "architecture": {
        "64bit": {
            "url": "https://beeper-desktop.download.beeper.com/builds/Beeper%20x64%204.2.518.exe",
            "hash": "5fb686ff4843e96f68886dc9dbd1fdb0b7898ec9def85ef379ba487e021461a0"
        }
    },
    "shortcuts": [
        [
            "app\\Beeper.exe",
            "Beeper"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\BeeperTexts\"",
        "A-Install-App -Uninstaller 'app\\Uninstall Beeper.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\beepertexts-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$res, $out = A-Get-InstallerInfoFromWinget 'Beeper.Beeper' 'exe'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_user.InstallerSha256"
                }
            }
        }
    }
}
