{
    "version": "1.17.0",
    "description": "哔哩哔哩 Bilibili 的 Windows 桌面客户端程序。A windows client for Bilibili.",
    "homepage": "https://app.bilibili.com/",
    "license": "Freemium",
    "architecture": {
        "64bit": {
            "url": "https://dl.hdslb.com/mobile/pack/bili_win/20165735/public/bilibili-setup-v1.17.0.exe",
            "hash": "507f1e3cfd5d98363c0458de4501a03c6c626b15160d13fb699ade515469182d"
        },
        "arm64": {
            "url": "https://dl.hdslb.com/mobile/pack/bili_win/20165735/public/bilibili-setup-v1.17.0.exe",
            "hash": "507f1e3cfd5d98363c0458de4501a03c6c626b15160d13fb699ade515469182d"
        }
    },
    "shortcuts": [
        [
            "bilibili\\哔哩哔哩.exe",
            "Bilibili 哔哩哔哩"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Install-Exe -Uninstaller 'bilibili\\卸载哔哩哔哩.exe'",
        "A-New-LinkDirectory @(\"$env:AppData\\bilibili\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData @(\"$env:LocalAppData\\bilibili-updater\")"
    ],
    "post_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'Bilibili.Bilibili' 'exe'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_machine.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_machine.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_machine.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "bin/scoop-auto-check-update-temp-data.jsonc",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "bin/scoop-auto-check-update-temp-data.jsonc",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
