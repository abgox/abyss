{
    "version": "1.3.0",
    "description": "一个简化 VSCode 项目启动的 CLI/TUI，重点关注开发容器 | A CLI/TUI that simplifies launching VSCode projects, with a focus on dev containers",
    "homepage": "https://github.com/michidk/vscli",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/michidk/vscli/releases/download/v1.3.0/vscli-x86_64-pc-windows-msvc.zip",
            "hash": "6545540f3ce06d6899616d11b6c4b546163fb57e7f9794cee71c2075b3e7f658",
            "extract_dir": "vscli-x86_64-pc-windows-msvc"
        }
    },
    "extract_to": "app",
    "bin": "app\\vscli.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:LocalAppData\\vscli\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/michidk/vscli/releases/download/v$version/vscli-x86_64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
