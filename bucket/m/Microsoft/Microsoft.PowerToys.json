{
    "version": "0.97.0",
    "description": "一组实用程序，供高级用户调整和简化他们的 Windows 体验以提高生产力 | A set of utilities for power users to tune and streamline their Windows experience for greater productivity.",
    "homepage": "https://github.com/microsoft/PowerToys",
    "license": {
        "identifier": "MIT"
    },
    "notes": [
        "The installation directory: $env:LocalAppData\\PowerToys",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: $env:LocalAppData\\PowerToys",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/microsoft/PowerToys/releases/download/v0.97.0/PowerToysUserSetup-0.97.0-x64.exe",
            "hash": "b8ec0033f9ba6a6d628f2f826e1b00d6b9f9a6869d46d108c5b08b560a46890f"
        },
        "arm64": {
            "url": "https://github.com/microsoft/PowerToys/releases/download/v0.97.0/PowerToysUserSetup-0.97.0-arm64.exe",
            "hash": "aed4001d4c3e974faf5d2d46d640547a25be718d8c5feb20f4c9a1c1976d837d"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "Expand-DarkArchive \"$dir\\$fname\" \"$dir\\.tmp\"",
        "Get-ChildItem $dir -Recurse -Filter '*.msi' | Select-Object -First 1 | ForEach-Object { Move-Item $_.FullName \"$dir\\dl.msi\" -Force }",
        "Remove-Item \"$dir\\.tmp\", \"$dir\\$fname\" -Force -Recurse -ErrorAction SilentlyContinue",
        "A-Install-Msi -ArgumentList '/i', \"`\"$dir\\dl.msi`\"\", '/passive', '/norestart'",
        "Start-Sleep -Seconds 5",
        "A-Stop-Process \"$env:LocalAppData\\PowerToys\" 'Microsoft.CmdPal.UI'",
        "# 安装程序启动时不能进行链接, 会出现内存访问错误, 因此等待安装完成并终止相关进程后再创建链接",
        "A-New-LinkDirectory \"$env:LocalAppData\\Microsoft\\PowerToys\"",
        "A-Hold-App"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Uninstall-Manually \"$env:LocalAppData\\PowerToys\"",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo, $out = A-Get-InstallerInfoFromWinget 'Microsoft.PowerToys' 'exe'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_user.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_user.InstallerSha256"
                }
            }
        }
    }
}
