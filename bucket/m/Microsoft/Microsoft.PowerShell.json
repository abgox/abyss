{
    "version": "7.5.4",
    "description": "pwsh - 一个跨平台的 PowerShell Core | pwsh - A cross-platform PowerShell Core.",
    "homepage": "https://github.com/PowerShell/PowerShell",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/PowerShell/PowerShell/blob/master/LICENSE.txt"
    },
    "notes": "Run 'pwsh' to start.",
    "notes-cn": "运行 pwsh 去启动它",
    "architecture": {
        "64bit": {
            "url": "https://github.com/PowerShell/PowerShell/releases/download/v7.5.4/PowerShell-7.5.4.msixbundle",
            "hash": "b8eb615a572056659ae8f74f45df8ef4b1c78524fc0f21a752d02a132ebd8c03"
        },
        "arm64": {
            "url": "https://github.com/PowerShell/PowerShell/releases/download/v7.5.4/PowerShell-7.5.4.msixbundle",
            "hash": "b8eb615a572056659ae8f74f45df8ef4b1c78524fc0f21a752d02a132ebd8c03"
        }
    },
    "env_set": {
        "POWERSHELL_UPDATECHECK": "Off",
        "POWERSHELL_TELEMETRY_OPTOUT": "1"
    },
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "if ($PSVersionTable.PSEdition -eq 'Core' -and !$PSVersionTable.PSVersion.PreReleaseLabel) {",
        "    if ($PSUICulture -like 'zh*') {",
        "       Write-Host \"不能在 PowerShell 中安装、更新、卸载 PowerShell\" -ForegroundColor Red",
        "    }",
        "    else {",
        "       Write-Host \"You cannot $cmd PowerShell in PowerShell.\" -ForegroundColor Red",
        "    }",
        "   exit 1",
        "}",
        "A-Add-MsixPackage 'Microsoft.PowerShell_8wekyb3d8bbwe'",
        "A-New-LinkDirectory \"$home\\Documents\\PowerShell\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "if ($PSVersionTable.PSEdition -eq 'Core' -and !$PSVersionTable.PSVersion.PreReleaseLabel) {",
        "    if ($PSUICulture -like 'zh*') {",
        "       Write-Host \"不能在 PowerShell 中安装、更新、卸载 PowerShell\" -ForegroundColor Red",
        "    }",
        "    else {",
        "       Write-Host \"You cannot $cmd PowerShell in PowerShell.\" -ForegroundColor Red",
        "    }",
        "   exit 1",
        "}",
        "A-Remove-MsixPackage",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/PowerShell/PowerShell/releases/download/v$version/PowerShell-$version.msixbundle"
            },
            "arm64": {
                "url": "https://github.com/PowerShell/PowerShell/releases/download/v$version/PowerShell-$version.msixbundle"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
