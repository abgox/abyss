{
    "version": "21.0.9.10",
    "description": "微软构建的 OpenJDK 是一种全新的免费长期支持发行版，也是微软与 Java 生态系统开展协作和贡献的新方式。 | The Microsoft Build of OpenJDK is a new no-cost long-term supported distribution and Microsoft's new way to collaborate and contribute to the Java ecosystem.",
    "homepage": "https://www.microsoft.com/openjdk",
    "license": {
        "identifier": "GPL2 with Classpath Exception",
        "url": "https://openjdk.java.net/legal/gplv2+ce.html"
    },
    "architecture": {
        "64bit": {
            "url": "https://aka.ms/download-jdk/microsoft-jdk-21.0.9-windows-x64.msi#winget#/dl.msi",
            "hash": "54185977a1f3e3b9aba0084db998484da1f0abf31857b2335eb460364b4d30c3"
        },
        "arm64": {
            "url": "https://aka.ms/download-jdk/microsoft-jdk-21.0.9-windows-aarch64.msi#winget#/dl.msi",
            "hash": "9d496645d88cc1cd99895906fed10e649496f51ae0615075007c160bff7dac65"
        }
    },
    "extract_dir": "PFiles64\\Microsoft\\jdk-21.0.9.10-hotspot",
    "extract_to": "app",
    "env_set": {
        "JAVA_HOME": "$dir\\app"
    },
    "env_add_path": "app\\bin",
    "commands": [
        "java",
        "jabswitch"
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo, $out = A-Get-InstallerInfoFromWinget 'Microsoft.OpenJDK.21' 'msi'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64#/dl.msi",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64#/dl.msi",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        },
        "extract_dir": "PFiles64\\Microsoft\\jdk-$version-hotspot"
    }
}
