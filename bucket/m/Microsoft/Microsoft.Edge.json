{
    "version": "143.0.3650.75",
    "description": "微软 Edge 浏览器 - 一款由微软创建和开发的跨平台网络浏览器 | Microsoft Edge - A cross-platform web browser created and developed by Microsoft.",
    "homepage": "https://www.microsoft.com/edge",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.microsoft.com/servicesagreement"
    },
    "notes": [
        "The installation directory: ${env:ProgramFiles(x86)}\\Microsoft\\Edge",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directories"
    ],
    "notes-cn": [
        "安装目录: ${env:ProgramFiles(x86)}\\Microsoft\\Edge",
        "参考: https://abyss.abgox.com/faq/external-installation-directories"
    ],
    "architecture": {
        "64bit": {
            "url": "https://msedge.sf.dl.delivery.mp.microsoft.com/filestreamingservice/files/fda30341-4f0f-4db6-81c0-884956f58699/MicrosoftEdgeEnterpriseX64.msi#/dl.msi_",
            "hash": "4093d052ba3a2aa36df68b6ddccb6c703993f5cba0c5ae6e4742a2c501d6ca43"
        },
        "arm64": {
            "url": "https://msedge.sf.dl.delivery.mp.microsoft.com/filestreamingservice/files/2db9f9ac-85bf-42fb-924d-17e3f179985e/MicrosoftEdgeEnterpriseARM64.msi#/dl.msi_",
            "hash": "d5ab4bd4e058f7955986e4913bcf48b0d3b9c40f999b3ddda55f7e44b5ce741d"
        }
    },
    "shortcuts": [
        [
            "${env:ProgramFiles(x86)}\\Microsoft\\Edge\\Application\\msedge.exe",
            "Microsoft Edge"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Stop-Process \"${env:ProgramFiles(x86)}\\Microsoft\\Edge\"",
        "A-New-LinkDirectory @(\"$env:LocalAppData\\Microsoft\\Edge\\User Data\")",
        "A-Install-Exe msi"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "if ($cmd -eq 'uninstall') {",
        "    if($PSUICulture -like 'zh*') {",
        "        Write-Host \"Microsoft Edge 是特殊的，在 Windows 系统中，它不允许被卸载，因此只会删除 Scoop 下的 $app 目录\" -ForegroundColor Yellow",
        "    }",
        "    else {",
        "        Write-Host \"Microsoft Edge is special, it cannot be uninstalled in Windows system, so only the Scoop directory of $app will be deleted.\" -ForegroundColor Yellow",
        "    }",
        "}",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'Microsoft.Edge' 'msi'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_machine.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_machine.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_machine.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64#/dl.msi_",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64#/dl.msi_",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
