{
    "version": "144.0.3719.92",
    "description": "微软 Edge 浏览器 - 一款由微软创建和开发的跨平台网络浏览器 | Microsoft Edge - A cross-platform web browser created and developed by Microsoft.",
    "homepage": "https://www.microsoft.com/edge",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.microsoft.com/servicesagreement"
    },
    "notes": [
        "The installation directory: ${env:ProgramFiles(x86)}\\Microsoft\\Edge",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes_cn": [
        "安装目录: ${env:ProgramFiles(x86)}\\Microsoft\\Edge",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://msedge.sf.dl.delivery.mp.microsoft.com/filestreamingservice/files/2e48a591-04a7-4dd6-8db5-23c6190e5058/MicrosoftEdgeEnterpriseX64.msi#/dl.msi_",
            "hash": "7ac3ac23936dd4025d4d9ca56a482232507371ca0de8e561adc3bb598ae9d606"
        },
        "arm64": {
            "url": "https://msedge.sf.dl.delivery.mp.microsoft.com/filestreamingservice/files/2f8daa4e-b67a-4c18-acf3-483ca13b9c47/MicrosoftEdgeEnterpriseARM64.msi#/dl.msi_",
            "hash": "c887c7b4389dbdfe9eaa6934b8f7f2b4097102301ae728f1b7bc63de11824f06"
        }
    },
    "shortcuts": [
        [
            "${env:ProgramFiles(x86)}\\Microsoft\\Edge\\Application\\msedge.exe",
            "Microsoft Edge"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Stop-Process \"${env:ProgramFiles(x86)}\\Microsoft\\Edge\"",
        "A-New-LinkDirectory \"$env:LocalAppData\\Microsoft\\Edge\\User Data\"",
        "A-Install-Msi"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Uninstall-Manually \"${env:ProgramFiles(x86)}\\Microsoft\\Edge\"",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo, $out = A-Get-InstallerInfoFromWinget 'Microsoft.Edge' 'msi'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64#/dl.msi_",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64#/dl.msi_",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
