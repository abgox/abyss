{
    "version": "7.6.6",
    "description": "pwsh - 一个跨平台的 PowerShell Core | pwsh - A cross-platform PowerShell Core.",
    "homepage": "https://github.com/PowerShell/PowerShell",
    "license": {
        "identifier": "MIT"
    },
    "notes": [
        "Microsoft.PowerShell.Preview does not use Link for data persistence.",
        "Because it shares the data with Microsoft.PowerShell.",
        "Refer to: https://abyss.abgox.com/faq/shared-data"
    ],
    "notes_cn": [
        "Microsoft.PowerShell.Preview 不使用 Link 进行数据持久化",
        "因为它和 Microsoft.PowerShell 共用数据",
        "参考: https://abyss.abgox.com/faq/shared-data"
    ],
    "suggest": {
        "PowerShell": "abyss/Microsoft.PowerShell"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/PowerShell/PowerShell/releases/download/v7.6.0-preview.6/PowerShell-7.6.0-preview.6.msixbundle",
            "hash": "3c8a439b9babbf48ed27db8a11227cd747d15fdf94693a008d94618edd51a209"
        },
        "arm64": {
            "url": "https://github.com/PowerShell/PowerShell/releases/download/v7.6.0-preview.6/PowerShell-7.6.0-preview.6.msixbundle",
            "hash": "3c8a439b9babbf48ed27db8a11227cd747d15fdf94693a008d94618edd51a209"
        }
    },
    "env_set": {
        "POWERSHELL_UPDATECHECK": "Off",
        "POWERSHELL_TELEMETRY_OPTOUT": "1"
    },
    "commands": "pwsh-preview",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "if ($PSVersionTable.PSEdition -eq 'Core' -and $PSVersionTable.PSVersion.PreReleaseLabel) {",
        "    if ($PSUICulture -like 'zh*') {",
        "       Write-Host \"不能在 PowerShell Preview 中安装、更新、卸载 PowerShell Preview\" -ForegroundColor Red",
        "    }",
        "    else {",
        "       Write-Host \"You cannot $cmd PowerShell Preview in PowerShell Preview.\" -ForegroundColor Red",
        "    }",
        "   exit 1",
        "}",
        "A-Add-MsixPackage 'Microsoft.PowerShellPreview_8wekyb3d8bbwe'",
        "# A-New-LinkDirectory \"$home\\Documents\\PowerShell\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "if ($PSVersionTable.PSEdition -eq 'Core' -and $PSVersionTable.PSVersion.PreReleaseLabel) {",
        "    if ($PSUICulture -like 'zh*') {",
        "       Write-Host \"不能在 PowerShell Preview 中安装、更新、卸载 PowerShell Preview\" -ForegroundColor Red",
        "    }",
        "    else {",
        "       Write-Host \"You cannot $cmd PowerShell Preview in PowerShell Preview.\" -ForegroundColor Red",
        "    }",
        "   exit 1",
        "}",
        "A-Remove-MsixPackage",
        "# A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/PowerShell/PowerShell/releases",
        "regex": "href=\"/.+/.+/tree/(?:v|V)?([\\d.]+)(\\d)-preview\\.(\\d)",
        "replace": "$1$3"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/PowerShell/PowerShell/releases/download/v$majorVersion.$minorVersion.0-preview.$patchVersion/PowerShell-$majorVersion.$minorVersion.0-preview.$patchVersion.msixbundle"
            },
            "arm64": {
                "url": "https://github.com/PowerShell/PowerShell/releases/download/v$majorVersion.$minorVersion.0-preview.$patchVersion/PowerShell-$majorVersion.$minorVersion.0-preview.$patchVersion.msixbundle"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
