{
    "version": "141.0.3537.36",
    "description": "(Beta 版本) 微软 Edge 浏览器 - 一款由微软创建和开发的跨平台网络浏览器。(Beta version) Microsoft Edge - A cross-platform web browser created and developed by Microsoft.",
    "homepage": "https://www.microsoft.com/edge",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.microsoft.com/servicesagreement"
    },
    "notes": [
        "The installation directory: ${env:ProgramFiles(x86)}\\Microsoft\\Edge Beta",
        "Scoop only manages data, installation, update, and uninstallation operations."
    ],
    "notes-cn": [
        "实际安装目录: ${env:ProgramFiles(x86)}\\Microsoft\\Edge Beta",
        "Scoop 只管理数据(通过 Link)，安装、更新、卸载操作"
    ],
    "architecture": {
        "64bit": {
            "url": "https://msedge.sf.dl.delivery.mp.microsoft.com/filestreamingservice/files/1e14eb26-f325-4d28-9ae4-3db28d7aef39/MicrosoftEdgeBetaEnterpriseX64.msi#/dl.exe",
            "hash": "6f9d8228fae1ab0f6331d88e4afc17f189ea16c9181090977a0e36871ce50744"
        },
        "arm64": {
            "url": "https://msedge.sf.dl.delivery.mp.microsoft.com/filestreamingservice/files/422c28cd-6b52-4b3d-8a98-a8724bed08a3/MicrosoftEdgeBetaEnterpriseARM64.msi#/dl.exe",
            "hash": "d31e6fcc31f12660ed46693c5475e47066e0d4e357f9fc7659d5ce7a5ae864ce"
        }
    },
    "shortcuts": [
        [
            "${env:ProgramFiles(x86)}\\Microsoft\\Edge Beta\\Application\\msedge.exe",
            "Microsoft Edge Beta"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Install-Exe -Installer 'C:\\Windows\\System32\\msiexec.exe' -ArgumentList @('/i', \"$dir\\$fname\", '/passive')",
        "A-New-LinkDirectory @(\"$env:LocalAppData\\Microsoft\\Edge Beta\\User Data\")"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "$ProductCode = A-Get-ProductCode '^Microsoft Edge Beta$'",
        "A-Uninstall-Exe -Uninstaller 'C:\\Windows\\System32\\msiexec.exe' -ArgumentList @('/x', $ProductCode, '/passive') -FailureFile \"${env:ProgramFiles(x86)}\\Microsoft\\Edge Beta\\Application\\msedge.exe\"",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'Microsoft.Edge.Beta' 'msi'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_machine.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_machine.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_machine.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64#/dl.exe",
                "hash": {
                    "url": "bin/scoop-auto-check-update-temp-data.jsonc",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64#/dl.exe",
                "hash": {
                    "url": "bin/scoop-auto-check-update-temp-data.jsonc",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
