{
    "version": "141.0.3537.44",
    "description": "(Beta 版本) 微软 Edge 浏览器 - 一款由微软创建和开发的跨平台网络浏览器 | (Beta version) Microsoft Edge - A cross-platform web browser created and developed by Microsoft.",
    "homepage": "https://www.microsoft.com/edge",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.microsoft.com/servicesagreement"
    },
    "notes": [
        "The installation directory: ${env:ProgramFiles(x86)}\\Microsoft\\Edge Beta",
        "Refer to: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "notes-cn": [
        "安装目录: ${env:ProgramFiles(x86)}\\Microsoft\\Edge Beta",
        "参考: https://abyss.abgox.com/faq/external-installation-directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://msedge.sf.dl.delivery.mp.microsoft.com/filestreamingservice/files/2024ce76-7067-47e9-9799-8825b78441aa/MicrosoftEdgeBetaEnterpriseX64.msi#/dl.msi_",
            "hash": "8eaaeccc26ee1b27ed284e4b0d46a487fcf7628c3aa7dc4a87c495b9a57c3951"
        },
        "arm64": {
            "url": "https://msedge.sf.dl.delivery.mp.microsoft.com/filestreamingservice/files/cddde860-54ab-462a-b9e2-aac6d541add2/MicrosoftEdgeBetaEnterpriseARM64.msi#/dl.msi_",
            "hash": "a399bb922334c4cee4fd8a76b696af81e55ba561b89a0a934c2aadb899248ffd"
        }
    },
    "shortcuts": [
        [
            "${env:ProgramFiles(x86)}\\Microsoft\\Edge Beta\\Application\\msedge.exe",
            "Microsoft Edge Beta"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:LocalAppData\\Microsoft\\Edge Beta\\User Data\"",
        "A-Install-App msi"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "$ProductCode = A-Get-ProductCode '^Microsoft Edge Beta$'",
        "A-Uninstall-App $ProductCode",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'Microsoft.Edge.Beta' 'msi'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_machine.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_machine.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_machine.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64#/dl.msi_",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64#/dl.msi_",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
