{
    "version": "144.0.3719.104",
    "description": "使用 Microsoft Edge WebView2 将 Web 内容（HTML、CSS 和 JavaScript）嵌入本机应用程序中 | Embed web content (HTML, CSS, and JavaScript) in your native applications with Microsoft Edge WebView2",
    "homepage": "https://developer.microsoft.com/microsoft-edge/webview2/",
    "license": {
        "identifier": "Proprietary"
    },
    "architecture": {
        "64bit": {
            "url": "https://msedge.sf.dl.delivery.mp.microsoft.com/filestreamingservice/files/7bd9a9f7-12ec-4aa5-a4ac-5e8012849052/MicrosoftEdgeWebView2RuntimeInstallerX64.exe",
            "hash": "30efa9479fbc8478fc6d7c7022d59dbdc9736b5afcb59ad89b9c918911bd617b"
        },
        "arm64": {
            "url": "https://msedge.sf.dl.delivery.mp.microsoft.com/filestreamingservice/files/d19fe2db-6c64-41f1-9a78-a6584223dfc0/MicrosoftEdgeWebView2RuntimeInstallerARM64.exe",
            "hash": "9385d6c7d16fccf306cf16bbd56d176af741264c144cf640cb7c049bbb9044af"
        }
    },
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-Install-App -ArgumentList '/silent', '/install'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Uninstall-Manually 'app'"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$res, $out = A-Get-InstallerInfoFromWinget 'Microsoft.EdgeWebView2Runtime' 'exe'",
            "$out"
        ],
        "regex": "(?:.*ver:(?<version>[^;]+))(?:.*x64:(?<x64>[^;]+))?(?:.*x86:(?<x86>[^;]+))?(?:.*arm64:(?<arm64>[^;]+))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.x64_user.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64",
                "hash": {
                    "url": "temp-autoupdate.json",
                    "jsonpath": "$.arm64_user.InstallerSha256"
                }
            }
        }
    }
}
