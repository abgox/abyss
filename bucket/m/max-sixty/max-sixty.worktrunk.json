{
    "version": "0.27.0",
    "description": "用于 Git 工作树管理的命令行界面，专为并行人工智能代理工作流设计 | CLI for Git worktree management, designed for parallel AI agent workflows",
    "homepage": "https://worktrunk.dev/",
    "license": {
        "identifier": "MIT|Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/max-sixty/worktrunk/releases/download/v0.27.0/worktrunk-x86_64-pc-windows-msvc.zip",
            "hash": "fcb8345fa85c6c12b4e1bf327af832ba8460d65f177d684ff1c39a1aa95f0b81"
        }
    },
    "extract_to": "app",
    "bin": [
        "app\\git-wt.exe",
        "app\\wt.exe"
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\worktrunk\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/max-sixty/worktrunk/releases/download/v$version/worktrunk-x86_64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
