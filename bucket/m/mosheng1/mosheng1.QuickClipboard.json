{
    "version": "0.2.0",
    "description": "一个功能强大的剪贴板管理工具，帮助你更高效地管理和使用剪贴板内容 | A powerful clipboard management tool that helps you manage and use clipboard content more efficiently",
    "homepage": "https://quickclipboard.cn/",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/mosheng1/QuickClipboard/releases/download/v0.2.0/QuickClipboard_0.2.0_x64-setup.exe",
            "hash": "9e2e9db3ed892e16a0ebec4af5742484c1988cbdcbfacc859d6670e3bb531f95"
        }
    },
    "shortcuts": [
        [
            "app\\QuickClipboard.exe",
            "QuickClipboard"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:LocalAppData\\quickclipboard\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\com.quickclipboard.app\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/mosheng1/QuickClipboard/releases/download/v$version/QuickClipboard_$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
