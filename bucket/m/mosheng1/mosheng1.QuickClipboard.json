{
    "version": "0.1.0",
    "description": "一个功能强大的剪贴板管理工具，帮助你更高效地管理和使用剪贴板内容 | A powerful clipboard management tool that helps you manage and use clipboard content more efficiently",
    "homepage": "https://quickclipboard.cn/",
    "license": {
        "identifier": "Apache-2.0",
        "url": "https://github.com/mosheng1/QuickClipboard/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/mosheng1/QuickClipboard/releases/download/v0.1.0/QuickClipboard_0.1.0_x64-setup.exe",
            "hash": "5058ad42df892cfd98b616d13186990d6d009fa5f1042e209dce7869b0c895a5"
        }
    },
    "shortcuts": [
        [
            "app\\QuickClipboard.exe",
            "QuickClipboard"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory @(\"$env:LocalAppData\\quickclipboard\")",
        "A-Install-Exe -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe",
        "A-Remove-TempData @(\"$env:LocalAppData\\com.quickclipboard.app\")"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/mosheng1/QuickClipboard/releases/download/v$version/QuickClipboard_$version_x64-setup.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
