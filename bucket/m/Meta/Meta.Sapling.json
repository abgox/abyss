    "notes": [
        "The name of the Sapling CLI sl.exe conflicts with the sl command built-in in PowerShell.",
        "If you want to use sl.exe in PowerShell, you need to use the following command:",
        " ",
        "  Set-Alias sl sl.exe -Force",
        " "
    ],
    "notes_cn": [
        "Sapling 的命令行命令 sl.exe 与 PowerShell 中的内置命令 sl 冲突",
        "如果你想在 PowerShell 中使用 sl 来运行 sl.exe，你需要使用以下命令：",
        " ",
        "  Set-Alias sl sl.exe -Force",
        " "
    ],
    "suggest": {
        "Node.js": [
            "abyss/OpenJS.NodeJS",
            "abyss/OpenJS.NodeJS.LTS"
        ],
        "Git": "abyss/Git.Git",
        "completions": "abyss/abgox.PSCompletions"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/facebook/sapling/releases/download/0.2.20250521-115337+25ed6ac4/sapling_windows_0.2.20250521-115337+25ed6ac4_amd64.zip",
            "hash": "da706ae9989cea31003346ad1ed69ebd82cedf86050e13efb6598ebcdf5cba2e"
        }
    },
    "extract_dir": "Sapling",
    "extract_to": "app",
    "bin": "app\\sl.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\sapling\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/facebook/sapling/releases/download/$version/sapling_windows_$version_amd64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
