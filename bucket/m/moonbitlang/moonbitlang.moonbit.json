{
    "version": "0.1.20251222-0.6.36-0.1.20251222",
    "description": "MoonBit 是一种类似 Rust 的语言（支持垃圾回收），也是一个为 WebAssembly 体验优化的工具链。 | MoonBit is a Rust-like language (with GC support) and toolchain optimized for WebAssembly experience.",
    "homepage": "https://www.moonbitlang.com/",
    "license": {
        "identifier": "Apache-2.0,AGPL-3.0-only"
    },
    "architecture": {
        "64bit": {
            "url": [
                "https://cli.moonbitlang.cn/binaries/latest/moonbit-windows-x86_64.zip",
                "https://cli.moonbitlang.cn/cores/core-latest.zip"
            ],
            "hash": [
                "be05b42fb9366979679bc2aa4a0929608a20a4ef0d47877806bb2b44b66f10b2",
                "958ef98dea40dbdb2f5174e9805d44f395ea381a689983436fb036b5429a2053"
            ]
        }
    },
    "extract_to": [
        "app\\.moon",
        "app\\.moon\\lib"
    ],
    "env_set": {
        "MOON_HOME": "$dir\\app\\.moon"
    },
    "env_add_path": "app\\.moon\\bin",
    "persist": [
        [
            "app\\.moon\\registry",
            ".moon\\registry"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "Push-Location \"$dir\\app\\.moon\\lib\\core\"",
        "moon.exe bundle --warn-list -a --all --quiet 2>$null",
        "moon.exe bundle --warn-list -a --target wasm-gc --quiet 2>$null",
        "Pop-Location",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "$versionList = @()",
            "Invoke-RestMethod 'https://cli.moonbitlang.com/version.json' | Select-Object -ExpandProperty items | ForEach-Object {",
            "    if ($_.version -match '[\\d.]+') { $versionList += $Matches[0] }",
            "}",
            "$versionList -join '-'"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": [
                    "https://cli.moonbitlang.cn/binaries/latest/moonbit-windows-x86_64.zip",
                    "https://cli.moonbitlang.cn/cores/core-latest.zip"
                ]
            }
        }
    }
}
