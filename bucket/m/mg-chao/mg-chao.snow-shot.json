{
    "version": "0.7.8-beta",
    "description": "功能强大的截图工具 | Powerful screenshot tool",
    "homepage": "https://snowshot.top/",
    "license": {
        "identifier": "Apache-2.0|GPL-3.0-only",
        "url": "https://github.com/mg-chao/snow-shot/blob/main/LICENSE-NonCommercial"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/mg-chao/snow-shot/releases/download/v0.7.8-beta/Snow.Shot_0.7.8-beta_x64-setup_windows.exe",
            "hash": "581406bc0164403c9bde86a865792b0424c8310aa8ddff2d0be27a2502b1f8ac"
        }
    },
    "shortcuts": [
        [
            "app\\snowshot.exe",
            "Snow Shot"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "A-New-LinkDirectory \"$env:AppData\\com.chao.snowshot\"",
        "A-Install-App -Uninstaller 'app\\uninstall.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\com.chao.snowshot\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/mg-chao/snow-shot/releases/download/v$version/Snow.Shot_$version_x64-setup_windows.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
