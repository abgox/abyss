{
    "version": "0.0.8",
    "description": "Sui 生态系统中命令行界面工具的安装程序和管理器 | The installer and manager for CLI tools in the Sui ecosystem",
    "homepage": "https://github.com/MystenLabs/suiup",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/MystenLabs/suiup/releases/download/v0.0.8/suiup-Windows-msvc-x86_64.zip",
            "hash": "ba77056dfb6ec591bf5d28290622c9e7afcef0001a839c46e529ce281bcf3078"
        },
        "arm64": {
            "url": "https://github.com/MystenLabs/suiup/releases/download/v0.0.8/suiup-Windows-msvc-arm64.zip",
            "hash": "5271bdfa40f8743c16d244e4554da2d8ab5a1511a580ca631d005fe5de8bc017"
        }
    },
    "extract_to": "app",
    "env_set": {
        "SUIUP_DISABLE_UPDATE_WARNINGS": "true"
    },
    "bin": "app\\suiup.exe",
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:LocalAppData\\suiup\"",
        "A-Add-Path \"$env:LocalAppData\\bin\""
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/MystenLabs/suiup/releases/download/v$version/suiup-Windows-msvc-x86_64.zip"
            },
            "arm64": {
                "url": "https://github.com/MystenLabs/suiup/releases/download/v$version/suiup-Windows-msvc-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
