{
    "version": "0.0.9",
    "description": "Sui 生态系统中命令行界面工具的安装程序和管理器 | The installer and manager for CLI tools in the Sui ecosystem",
    "homepage": "https://github.com/MystenLabs/suiup",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/MystenLabs/suiup/releases/download/v0.0.9/suiup-Windows-msvc-x86_64.zip",
            "hash": "055800c64e3e509d4e6eec5b6492f4b75cfcb6b58be85092ce3db9ddd0d61299"
        },
        "arm64": {
            "url": "https://github.com/MystenLabs/suiup/releases/download/v0.0.9/suiup-Windows-msvc-arm64.zip",
            "hash": "f734256ba6ff196e7472956958ec68d4dc9aadf052fc4e18fdd022db9a5df8f9"
        }
    },
    "extract_to": "app",
    "env_set": {
        "SUIUP_DISABLE_UPDATE_WARNINGS": "true"
    },
    "bin": "app\\suiup.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:LocalAppData\\suiup\"",
        "A-Add-Path \"$env:LocalAppData\\bin\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/MystenLabs/suiup/releases/download/v$version/suiup-Windows-msvc-x86_64.zip"
            },
            "arm64": {
                "url": "https://github.com/MystenLabs/suiup/releases/download/v$version/suiup-Windows-msvc-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
