{
    "version": "0.0.10",
    "description": "Sui 生态系统中命令行界面工具的安装程序和管理器 | The installer and manager for CLI tools in the Sui ecosystem",
    "homepage": "https://github.com/MystenLabs/suiup",
    "license": {
        "identifier": "Apache-2.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/MystenLabs/suiup/releases/download/v0.0.10/suiup-Windows-msvc-x86_64.zip",
            "hash": "17abfc7cf5b94a5e65cfeae33496e3140d1bb87df66f1e2e5e705da3a5b1f313"
        },
        "arm64": {
            "url": "https://github.com/MystenLabs/suiup/releases/download/v0.0.10/suiup-Windows-msvc-arm64.zip",
            "hash": "2f7ab8b8744b3f987e3ee62d410772ae2e56519da3d1e341c5382b4cbf002152"
        }
    },
    "extract_to": "app",
    "env_set": {
        "SUIUP_DISABLE_UPDATE_WARNINGS": "true"
    },
    "bin": "app\\suiup.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:LocalAppData\\suiup\"",
        "A-Add-Path \"$env:LocalAppData\\bin\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/MystenLabs/suiup/releases/download/v$version/suiup-Windows-msvc-x86_64.zip"
            },
            "arm64": {
                "url": "https://github.com/MystenLabs/suiup/releases/download/v$version/suiup-Windows-msvc-arm64.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
