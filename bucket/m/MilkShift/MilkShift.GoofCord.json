{
    "version": "1.11.4",
    "description": "一款可高度配置且注重隐私的 Discord 客户端。 | A highly configurable and privacy minded discord client.",
    "homepage": "https://github.com/Milkshiift/GoofCord",
    "license": {
        "identifier": "OSL-3.0",
        "url": "https://github.com/Milkshiift/GoofCord/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Milkshiift/GoofCord/releases/download/v1.11.4/GoofCord-Setup-x64.exe",
            "hash": "e1dbd5e1012d9d9ed84d840d0f7b8db68be3551cb3b6ffeaf534b212cfe38867"
        },
        "arm64": {
            "url": "https://github.com/Milkshiift/GoofCord/releases/download/v1.11.4/GoofCord-Setup-arm64.exe",
            "hash": "0a41731b1dc9f452c92258173b7755dec793058f9b8882e797c8831e6801904c"
        }
    },
    "shortcuts": [
        [
            "app\\GoofCord.exe",
            "GoofCord"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\goofcord\"",
        "A-Install-App -Uninstaller 'app\\Uninstall GoofCord.exe'"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\goofcord-updater\""
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Milkshiift/GoofCord/releases/download/v$version/GoofCord-Setup-x64.exe"
            },
            "arm64": {
                "url": "https://github.com/Milkshiift/GoofCord/releases/download/v$version/GoofCord-Setup-arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
