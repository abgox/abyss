{
    "version": "2.0.1",
    "description": "一款可高度配置且注重隐私的 Discord 客户端。 | A highly configurable and privacy minded discord client.",
    "homepage": "https://github.com/Milkshiift/GoofCord",
    "license": {
        "identifier": "OSL-3.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/Milkshiift/GoofCord/releases/download/v2.0.1/GoofCord-Setup-x64.exe",
            "hash": "0014a830270d7833ad39fc8ae5864bf24429f3800b53a4e05e8c7e98afa3fa7b"
        },
        "arm64": {
            "url": "https://github.com/Milkshiift/GoofCord/releases/download/v2.0.1/GoofCord-Setup-arm64.exe",
            "hash": "e87b61d46b86c6e8eb40cd4976904ef8a9e302108f2a451638d9306584471475"
        }
    },
    "shortcuts": [
        [
            "app\\GoofCord.exe",
            "GoofCord"
        ]
    ],
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkDirectory \"$env:AppData\\goofcord\"",
        "A-Install-App -Uninstaller 'app\\Uninstall GoofCord.exe'"
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-App",
        "A-Remove-TempData \"$env:LocalAppData\\goofcord-updater\""
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Milkshiift/GoofCord/releases/download/v$version/GoofCord-Setup-x64.exe"
            },
            "arm64": {
                "url": "https://github.com/Milkshiift/GoofCord/releases/download/v$version/GoofCord-Setup-arm64.exe"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
