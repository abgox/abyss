{
    "version": "1.8.8",
    "description": "一个易用的代理客户端 | An easy-to-use proxy client.",
    "homepage": "https://github.com/mihomo-party-org/clash-party",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://github.com/mihomo-party-org/clash-party/blob/main/LICENSE"
    },
    "notes": "$app will be automatically launched after installation.",
    "notes-cn": "$app 会在安装成功后自动启动",
    "architecture": {
        "64bit": {
            "url": "https://github.com/mihomo-party-org/clash-party/releases/download/v1.8.8/clash-party-windows-1.8.8-x64-portable.7z",
            "hash": "59492106e7dd2dc10e61b787f960fc4829c1477a08c93bc0fcc10727f3fb00a3"
        },
        "arm64": {
            "url": "https://github.com/mihomo-party-org/clash-party/releases/download/v1.8.8/clash-party-windows-1.8.8-arm64-portable.7z",
            "hash": "48c261684482a4932a1ea7135d9777c7157a96ca4df6c48cc4ce66e2388293a6"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\Clash Party.exe",
            "Clash Party"
        ]
    ],
    "persist": [
        [
            "app\\data",
            "AppData\\Roaming\\mihomo-party"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Install",
        "A-Require-Admin",
        "# 安装完成后自动启动一次，以解决首次启动必须使用管理员权限的问题",
        "$null = Start-Job -ScriptBlock {",
        "    param($dir)",
        "    While (!(Test-Path \"$dir\\app\\data\")) {",
        "        Start-Sleep -Milliseconds 100",
        "    }",
        "    Start-Process \"$dir\\app\\Clash Party.exe\"",
        "} -ArgumentList $dir"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($install.bucket) { $install.bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "url": "https://github.com/mihomo-party-org/clash-party/releases/latest",
        "regex": "/tree/(?:v|V)?([^\"?]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/mihomo-party-org/clash-party/releases/download/v$version/clash-party-windows-$version-x64-portable.7z"
            },
            "arm64": {
                "url": "https://github.com/mihomo-party-org/clash-party/releases/download/v$version/clash-party-windows-$version-arm64-portable.7z"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
