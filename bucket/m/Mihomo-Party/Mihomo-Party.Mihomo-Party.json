{
    "version": "1.9.0",
    "description": "一个易用的代理客户端 | An easy-to-use proxy client.",
    "homepage": "https://github.com/mihomo-party-org/clash-party",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "notes": "$app will be automatically launched after installation.",
    "notes_cn": "$app 会在安装成功后自动启动",
    "architecture": {
        "64bit": {
            "url": "https://github.com/mihomo-party-org/clash-party/releases/download/v1.9.0/clash-party-windows-1.9.0-x64-portable.7z",
            "hash": "d2f06999b0f7b7abe6a4fb8b42bf28223087c5c7b43991b774a44ea0d55303dd"
        },
        "arm64": {
            "url": "https://github.com/mihomo-party-org/clash-party/releases/download/v1.9.0/clash-party-windows-1.9.0-arm64-portable.7z",
            "hash": "b39183d641474d30c52b07faf71ff2cabb2fcf88e10bcb961783346de593b73d"
        }
    },
    "extract_to": "app",
    "shortcuts": [
        [
            "app\\Clash Party.exe",
            "Clash Party"
        ]
    ],
    "persist": [
        [
            "app\\data",
            "AppData\\Roaming\\mihomo-party"
        ]
    ],
    "pre_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-Require-Admin",
        "# 安装完成后自动启动一次，以解决首次启动必须使用管理员权限的问题",
        "$null = Start-Job -ScriptBlock {",
        "    param($dir)",
        "    While (!(Test-Path \"$dir\\app\\data\")) {",
        "        Start-Sleep -Milliseconds 100",
        "    }",
        "    Start-Process \"$dir\\app\\Clash Party.exe\"",
        "} -ArgumentList $dir"
    ],
    "post_install": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Require-Admin",
        "A-Stop-Process"
    ],
    "post_uninstall": [
        "$bucket = if ($bucket) { $bucket } else { (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/mihomo-party-org/clash-party/releases/download/v$version/clash-party-windows-$version-x64-portable.7z"
            },
            "arm64": {
                "url": "https://github.com/mihomo-party-org/clash-party/releases/download/v$version/clash-party-windows-$version-arm64-portable.7z"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
