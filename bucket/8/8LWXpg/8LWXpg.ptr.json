{
    "version": "0.15.1",
    "description": "一个用于管理 PowerToys Run 插件的命令行工具。它可用于安装、卸载、更新、列出和导入插件 | A cli tool to manage PowerToys Run plugins. It can be used to install, uninstall, update, list, and import plugins",
    "homepage": "https://github.com/8LWXpg/ptr",
    "license": {
        "identifier": "MIT"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/8LWXpg/ptr/releases/download/v0.15.1/ptr-x86_64-pc-windows-msvc.zip",
            "hash": "fcec2fff04d7e85f9513bfcc5f8b00b436e6150be356cebddc3e72918e09ab5d"
        },
        "arm64": {
            "url": "https://github.com/8LWXpg/ptr/releases/download/v0.15.1/ptr-aarch64-pc-windows-msvc.zip",
            "hash": "222b01c9815a29adc133a94d780cb0d115ad8a8ded1cabf9d87167fc6dfed88c"
        }
    },
    "extract_to": "app",
    "bin": "app\\ptr.exe",
    "pre_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Install",
        "A-New-LinkFile \"$env:LocalAppData\\Microsoft\\PowerToys\\PowerToys Run\\Plugins\\version.toml\""
    ],
    "post_install": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Install"
    ],
    "pre_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Start-Uninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "if (!$bucket) { $bucket = (scoop config).'abgox-abyss-bucket-name' }",
        ". $bucketsdir\\$bucket\\script\\utils.ps1",
        "A-Complete-Uninstall"
    ],
    "checkver": {
        "script": [
            ". $pwd\\script\\utils.ps1",
            "A-Get-VersionFromGithubAPI"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/8LWXpg/ptr/releases/download/v$version/ptr-x86_64-pc-windows-msvc.zip"
            },
            "arm64": {
                "url": "https://github.com/8LWXpg/ptr/releases/download/v$version/ptr-aarch64-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "mode": "github"
        }
    }
}
